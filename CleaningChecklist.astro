<style>
  /* ============================================
     CUSTOMIZABLE VARIABLES - Edit colors here!
     ============================================ */
  :root {
    --primary-color: #f4a261;      /* Main orange color */
    --primary-light: #fdf0e6;      /* Light background */
    --header-bg: #f4a261;          /* Header background */
    --text-dark: #333333;          /* Dark text */
    --text-medium: #666666;        /* Medium text */
    --border-color: #e8e8e8;       /* Table borders */
    --check-color: #f4a261;        /* Checkbox color */
    --white: #ffffff;
  }

  /* Base styles */
  .checklist-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 1rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: var(--text-dark);
  }

  /* Header */
  .header {
    background: var(--header-bg);
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    border-radius: 4px;
  }

  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--white);
  }

  .logo-text {
    font-weight: bold;
    font-size: 1rem;
  }

  .logo-tagline {
    font-size: 0.6rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .header-title {
    text-align: center;
    flex: 1;
  }

  .header-title h1 {
    color: var(--white);
    font-size: 2.5rem;
    font-weight: 400;
    margin: 0 0 0.25rem 0;
  }

  .header-title h2 {
    color: var(--white);
    font-size: 1.25rem;
    font-weight: 300;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    margin: 0;
  }

  .header-illustration {
    width: 80px;
    height: 80px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
  }

  /* Checklist sections */
  .checklist-section {
    margin-bottom: 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    overflow: hidden;
  }

  .section-header {
    background: var(--primary-color);
    color: var(--white);
    padding: 0.75rem 1rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-align: center;
  }

  /* Table styles */
  .checklist-table {
    width: 100%;
    border-collapse: collapse;
  }

  .checklist-table thead {
    background: var(--primary-light);
  }

  .checklist-table th {
    padding: 0.5rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-medium);
    text-align: center;
    border-bottom: 1px solid var(--border-color);
  }

  .checklist-table th:first-child {
    text-align: left;
    width: 45%;
  }

  .checklist-table td {
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem;
    border-bottom: 1px solid var(--border-color);
  }

  .checklist-table td:not(:first-child) {
    text-align: center;
  }

  .checklist-table tr:last-child td {
    border-bottom: none;
  }

  .checklist-table tr:hover {
    background: var(--primary-light);
  }

  /* Checkbox styles */
  .checkbox {
    width: 18px;
    height: 18px;
    border: 2px solid var(--check-color);
    border-radius: 3px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.2s;
  }

  .checkbox.checked {
    background: var(--check-color);
  }

  .checkbox.checked::after {
    content: 'âœ“';
    color: var(--white);
    font-size: 12px;
    font-weight: bold;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header {
      flex-direction: column;
      gap: 1rem;
    }
    
    .header-title h1 {
      font-size: 1.75rem;
    }
  }

  /* Print styles */
  @media print {
    .checklist-page {
      max-width: 100%;
      padding: 0;
    }
    
    .checklist-section {
      break-inside: avoid;
    }
  }
</style>

<script>
  // Make checkboxes interactive
  document.querySelectorAll('.checkbox').forEach(checkbox => {
    checkbox.addEventListener('click', function() {
      this.classList.toggle('checked');
    });
  });
</script>
