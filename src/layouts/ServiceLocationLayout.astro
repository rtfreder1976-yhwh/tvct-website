---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import SchemaMarkup from '../components/SchemaMarkup.astro';

interface Props {
  title: string;
  description: string;
  service: string;
  serviceSlug: string;
  city: string;
  state: string;
  citySlug: string;
  serviceDescription: string;
  benefits: string[];
  includes: string[];
  price: string;
  neighborhoods?: string[];
  faqs: Array<{
    question: string;
    answer: string;
  }>;
}

const { title, description, service, serviceSlug, city, state, citySlug, serviceDescription, benefits, includes, price, neighborhoods = [], faqs } = Astro.props;

// Generate canonical URL
const canonicalUrl = `https://thevalleycleanteam.com/locations/${citySlug}/${serviceSlug}`;

// Schema for Service with enhanced areaServed
const areaServedSchema = citySlug === 'mountain-brook' && neighborhoods.length > 0 ? [
  {
    "@type": "City",
    "name": city,
    "containedInPlace": { "@type": "State", "name": state }
  },
  ...neighborhoods.map(neighborhood => ({
    "@type": "Place",
    "name": neighborhood,
    "containedInPlace": {
      "@type": "City",
      "name": city,
      "containedInPlace": { "@type": "State", "name": state }
    }
  }))
] : citySlug === 'muscle-shoals' ? [
  {
    "@type": "City",
    "name": "Muscle Shoals",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "City",
    "name": "Florence",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "City",
    "name": "Sheffield",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "City",
    "name": "Tuscumbia",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "Place",
    "name": "Walnut Street Historic District",
    "containedInPlace": { "@type": "City", "name": "Florence", "containedInPlace": { "@type": "State", "name": "Alabama" } }
  },
  {
    "@type": "Place",
    "name": "Wilson Lake",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "Place",
    "name": "Shoals Creek",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "Place",
    "name": "Killen",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  }
] : {
  "@type": "City",
  "name": city,
  "containedInPlace": {
    "@type": "State",
    "name": state
  }
};

// Schema for Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": service,
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+1-256-826-1100",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": city,
      "addressRegion": state,
      "addressCountry": "US"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.9",
      "reviewCount": "130",
      "bestRating": "5"
    }
  },
  "areaServed": areaServedSchema,
  "description": serviceDescription,
  "offers": {
    "@type": "Offer",
    "priceSpecification": {
      "@type": "PriceSpecification",
      "price": price.replace(/[^0-9]/g, ''),
      "priceCurrency": "USD",
      "unitText": "per service"
    }
  }
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Column -->
        <div class="text-center lg:text-left">
          <div class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4">
            <span class="text-[#FFA985] font-semibold">
              <i class="fas fa-map-marker-alt mr-2"></i>Serving {city}, {state}
