---
import BaseLayout from './BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import SchemaMarkup from '../components/SchemaMarkup.astro';
import Icon from '../components/Icon.astro';
import { getTestimonialsByService } from '../data/testimonials';

interface Props {
  title: string;
  description: string;
  service: string;
  serviceSlug: string;
  city: string;
  state: string;
  citySlug: string;
  serviceDescription: string;
  benefits: string[];
  includes: string[];
  price: string;
  neighborhoods?: string[];
  faqs: Array<{
    question: string;
    answer: string;
  }>;
  // NEW: Extended content props for better text-to-HTML ratio
  localContext?: string[]; // Array of paragraphs about local context
  neighborhoodsServed?: Array<{name: string; zipCodes?: string[]}>; // Neighborhoods with zip codes
  whyChooseContent?: string[]; // Extended why choose us paragraphs
  serviceHighlights?: string[]; // Additional service highlights/features
  countyName?: string; // County name for local SEO
}

const {
  title,
  description,
  service,
  serviceSlug,
  city,
  state,
  citySlug,
  serviceDescription,
  benefits,
  includes,
  price,
  neighborhoods = [],
  faqs,
  localContext = [],
  neighborhoodsServed = [],
  whyChooseContent = [],
  serviceHighlights = [],
  countyName = ''
} = Astro.props;

// Get service-specific testimonials
const serviceTestimonials = getTestimonialsByService(serviceSlug);

// Related services mapping - each service links to 2-3 related services
// Expanded to improve internal linking between all service pages
const relatedServicesMap: Record<string, Array<{slug: string, name: string, description: string}>> = {
  'deep-cleaning': [
    { slug: 'move-out-cleaning', name: 'Move-Out Cleaning', description: 'Thorough cleaning for moving' },
