    { slug: 'same-day-cleaning', name: 'Same-Day Cleaning', description: 'Urgent cleaning needs' }
  ],
  'move-out-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Top-to-bottom cleaning' },
    { slug: 'post-construction-cleaning', name: 'Post-Construction', description: 'After renovations' },
    { slug: 'same-day-cleaning', name: 'Same-Day Cleaning', description: 'Urgent move cleaning' }
  ],
  'recurring-maid-service': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Start fresh before recurring' },
    { slug: 'weekly-cleaning', name: 'Weekly Cleaning', description: 'Consistent weekly service' },
    { slug: 'senior-cleaning', name: 'Senior Cleaning', description: 'Compassionate care' }
  ],
  'weekly-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Initial deep clean' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Flexible scheduling' },
