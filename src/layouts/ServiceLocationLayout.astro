    { slug: 'weekly-cleaning', name: 'Weekly Cleaning', description: 'More frequent service' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Flexible options' }
  ],
  'airbnb-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Between long-term guests' },
    { slug: 'same-day-cleaning', name: 'Same-Day Cleaning', description: 'Quick turnovers' },
    { slug: 'move-out-cleaning', name: 'Move-Out Cleaning', description: 'End of rental cleaning' }
  ],
  'same-day-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough urgent cleaning' },
    { slug: 'move-out-cleaning', name: 'Move-Out Cleaning', description: 'Urgent move cleaning' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Prevent future emergencies' }
  ],
  'post-construction-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Follow-up deep clean' },
    { slug: 'move-out-cleaning', name: 'Move-Out Cleaning', description: 'After renovation' },
    { slug: 'same-day-cleaning', name: 'Same-Day Cleaning', description: 'Urgent project cleanup' }
  ],
  'senior-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough home cleaning' },
    { slug: 'weekly-cleaning', name: 'Weekly Cleaning', description: 'Consistent care' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Regular assistance' }
  ],
  'office-cleaning': [
    { slug: 'commercial-cleaning', name: 'Commercial Cleaning', description: 'Full commercial service' },
    { slug: 'medical-office-cleaning', name: 'Medical Office', description: 'Healthcare facilities' },
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'One-time office deep clean' }
  ],
  'commercial-cleaning': [
    { slug: 'office-cleaning', name: 'Office Cleaning', description: 'Professional offices' },
    { slug: 'medical-office-cleaning', name: 'Medical Office', description: 'Healthcare cleaning' },
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough one-time cleaning' }
  ],
  'medical-office-cleaning': [
    { slug: 'office-cleaning', name: 'Office Cleaning', description: 'General office cleaning' },
    { slug: 'commercial-cleaning', name: 'Commercial Cleaning', description: 'Business cleaning' },
    { slug: 'dental-office-cleaning', name: 'Dental Office', description: 'Dental practice cleaning' }
  ],
  'house-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough house cleaning' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Regular maintenance' },
    { slug: 'senior-cleaning', name: 'Senior Cleaning', description: 'Compassionate care' }
  ],
  'luxury-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough luxury cleaning' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Regular maintenance' },
    { slug: 'house-cleaning', name: 'House Cleaning', description: 'Residential service' }
  ],
  'restaurant-cleaning': [
    { slug: 'commercial-cleaning', name: 'Commercial Cleaning', description: 'Business cleaning' },
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough kitchen cleaning' },
    { slug: 'same-day-cleaning', name: 'Same-Day Cleaning', description: 'Urgent restaurant needs' }
  ],
  'retail-cleaning': [
    { slug: 'commercial-cleaning', name: 'Commercial Cleaning', description: 'Business cleaning' },
    { slug: 'office-cleaning', name: 'Office Cleaning', description: 'Professional cleaning' },
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough store cleaning' }
  ],
  'event-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough cleaning' },
    { slug: 'same-day-cleaning', name: 'Same-Day Cleaning', description: 'Urgent event needs' },
    { slug: 'move-out-cleaning', name: 'Move-Out Cleaning', description: 'Post-event cleanup' }
  ],
  'green-cleaning': [
    { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Thorough eco cleaning' },
    { slug: 'recurring-maid-service', name: 'Recurring Service', description: 'Regular eco cleaning' },
    { slug: 'senior-cleaning', name: 'Senior Cleaning', description: 'Gentle, safe products' }
  ],
  'dental-office-cleaning': [
    { slug: 'medical-office-cleaning', name: 'Medical Office', description: 'Healthcare cleaning' },
    { slug: 'office-cleaning', name: 'Office Cleaning', description: 'Professional offices' },
    { slug: 'commercial-cleaning', name: 'Commercial Cleaning', description: 'Business cleaning' }
  ]
};

// Get related services for current service, default to common ones if not mapped
// Default uses only pages that exist in ALL locations (deep-cleaning and move-out-cleaning)
const relatedServices = relatedServicesMap[serviceSlug] || [
  { slug: 'deep-cleaning', name: 'Deep Cleaning', description: 'Top-to-bottom cleaning' },
  { slug: 'move-out-cleaning', name: 'Move-Out Cleaning', description: 'Moving services' }
];

// Generate canonical URL
const canonicalUrl = `https://thevalleycleanteam.com/locations/${citySlug}/${serviceSlug}`;

// Schema for Service with enhanced areaServed
const areaServedSchema = citySlug === 'mountain-brook' && neighborhoods.length > 0 ? [
  {
    "@type": "City",
    "name": city,
    "containedInPlace": { "@type": "State", "name": state }
  },
  ...neighborhoods.map(neighborhood => ({
    "@type": "Place",
    "name": neighborhood,
    "containedInPlace": {
      "@type": "City",
      "name": city,
      "containedInPlace": { "@type": "State", "name": state }
    }
  }))
] : citySlug === 'muscle-shoals' ? [
  {
    "@type": "City",
    "name": "Muscle Shoals",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "City",
    "name": "Florence",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "City",
    "name": "Sheffield",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "City",
    "name": "Tuscumbia",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "Place",
    "name": "Walnut Street Historic District",
    "containedInPlace": { "@type": "City", "name": "Florence", "containedInPlace": { "@type": "State", "name": "Alabama" } }
  },
  {
    "@type": "Place",
    "name": "Wilson Lake",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "Place",
    "name": "Shoals Creek",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  },
  {
    "@type": "Place",
    "name": "Killen",
    "containedInPlace": { "@type": "State", "name": "Alabama" }
  }
] : {
  "@type": "City",
  "name": city,
  "containedInPlace": {
    "@type": "State",
    "name": state
  }
};

// Schema for Service
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": service,
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+1-256-826-1100",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": city,
      "addressRegion": state,
      "addressCountry": "US"
    }
  },
  "areaServed": areaServedSchema,
  "description": serviceDescription,
  "offers": {
    "@type": "Offer",
    "priceSpecification": {
      "@type": "PriceSpecification",
      "price": price.replace(/[^0-9]/g, ''),
      "priceCurrency": "USD",
      "unitText": "per service"
    }
  }
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout title={title} description={description} canonicalUrl={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Column -->
        <div class="text-center lg:text-left">
          <div class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4">
            <span class="text-[#FFA985] font-semibold">
              <Icon name="map-marker-alt" class="w-5 h-5 mr-2" />Serving {city}, {state}
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-[#333333]">
            {service} in <span class="gold-gradient">{city}, {state}</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">{serviceDescription}</p>

          <div class="bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl p-6 mb-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm">Starting at</p>
                <p class="text-4xl font-bold text-[#333333]">{price}</p>
              </div>
              <div class="text-right">
                <p class="text-green-600 font-semibold"><Icon name="check-circle" class="w-5 h-5 mr-1" /> Free Quotes</p>
                <p class="text-green-600 font-semibold"><Icon name="check-circle" class="w-5 h-5 mr-1" /> Same-Day Available</p>
              </div>
            </div>
          </div>

          <!-- Urgency Badge -->
          <div class="inline-block bg-green-50 border border-green-200 px-4 py-2 rounded-lg mb-6">
            <span class="text-green-700 font-semibold">
              <Icon name="calendar-check" class="w-5 h-5 text-green-600 mr-2" />Same-Week Availability
            </span>
          </div>

          <div class="flex flex-col sm:flex-row items-center lg:items-start space-y-3 sm:space-y-0 sm:space-x-4">
            <a href="tel:2568261100" class="btn-primary px-8 py-4 rounded-full text-lg font-semibold shadow-lg hover:shadow-xl transition">
              <Icon name="phone" class="w-5 h-5 mr-2" />Call Now: 256-826-1100
            </a>
            <a href="/contact" class="px-8 py-4 rounded-full text-lg font-semibold border-2 border-[#FFA985] text-[#FFA985] hover:bg-[#FFA985] hover:text-white transition shadow-md">
              <Icon name="calendar" class="w-5 h-5 mr-2" />Book Your Consultation
            </a>
          </div>
        </div>

        <!-- Right Column - Quote Form -->
        <div class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20">
          <h2 class="text-2xl font-bold text-[#333333] mb-2 text-center">Get Your Free Quote</h2>
          <p class="text-gray-600 mb-6 text-center">{service} in {city}</p>
          <form id="service-location-form">
            <div class="mb-4">
              <input type="text" name="name" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Your Name *" required>
            </div>
            <div class="mb-4">
              <input type="email" name="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Email Address *" required>
            </div>
            <div class="mb-4">
              <input type="tel" name="phone" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Phone Number *" required>
            </div>
            <div class="mb-4">
              <input type="text" name="location" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder={`${city} Address/Zip Code`} required>
            </div>
            <input type="hidden" name="service" value={service}>
            <input type="hidden" name="city" value={city}>
            <button type="submit" id="service-location-submit-btn" class="btn-primary w-full py-4 rounded-lg text-lg font-semibold shadow-lg">
              Get My Free {service} Quote
            </button>
            <p class="text-center text-xs text-gray-500 mt-3">
              <Icon name="clock" class="w-5 h-5 mr-1" /> Response within 2 hours
            </p>
            <div id="service-location-form-message" class="hidden text-center p-4 rounded-lg mt-3"></div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="py-6 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="flex flex-wrap justify-center gap-4 mb-4">
        <div class="flex items-center bg-white px-4 py-2 rounded-full shadow-sm border border-gray-200">
          <Icon name="shield-alt" class="w-5 h-5 text-[#FFA985] mr-2" />
          <span class="text-sm font-semibold text-gray-700">$2M Liability Insurance</span>
        </div>
        <div class="flex items-center bg-white px-4 py-2 rounded-full shadow-sm border border-gray-200">
          <Icon name="medal" class="w-5 h-5 text-[#FFA985] mr-2" />
          <span class="text-sm font-semibold text-gray-700">Veteran-Owned</span>
        </div>
        <div class="flex items-center bg-white px-4 py-2 rounded-full shadow-sm border border-gray-200">
          <Icon name="venus" class="w-5 h-5 text-[#FFA985] mr-2" />
          <span class="text-sm font-semibold text-gray-700">Women-Led Business</span>
        </div>
      </div>
      <div class="flex flex-wrap justify-center gap-4">
        <div class="flex items-center bg-white px-4 py-2 rounded-full shadow-sm border border-gray-200">
          <Icon name="star" class="w-5 h-5 text-[#FFA985] mr-2" fill="currentColor" />
          <span class="text-sm font-semibold text-gray-700">130+ Five-Star Reviews</span>
        </div>
        <div class="flex items-center bg-white px-4 py-2 rounded-full shadow-sm border border-gray-200">
          <Icon name="user-check" class="w-5 h-5 text-[#FFA985] mr-2" />
          <span class="text-sm font-semibold text-gray-700">Background-Checked Team</span>
        </div>
        <div class="flex items-center bg-white px-4 py-2 rounded-full shadow-sm border border-gray-200">
          <Icon name="home" class="w-5 h-5 text-[#FFA985] mr-2" />
          <span class="text-sm font-semibold text-gray-700">1,047+ Homes Cleaned</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Local Social Proof Banner -->
  <section class="py-8 px-6 bg-gradient-to-r from-blue-50 to-purple-50">
    <div class="container mx-auto text-center">
      <p class="text-lg text-gray-700 mb-2">
        <Icon name="heart" class="w-5 h-5 text-red-500 mr-2" />
        <strong>{city === "Nashville" ? "Trusted by families in Belle Meade, Green Hills, and Brentwood" : city === "Birmingham" || city === "Mountain Brook" ? "Trusted by families in Mountain Brook, Vestavia Hills, and Homewood" : (city === "Muscle Shoals" || city === "The Shoals") ? "Trusted by families in Wilson Lake, Walnut Street Historic, and Shoals Creek" : "Trusted by families in The Ledges, Hampton Cove, and Twickenham"}</strong>
      </p>
      <p class="text-gray-600">Your neighbors choose us for {service.toLowerCase()}</p>
    </div>
  </section>

  <!-- What's Included -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-5xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          What's Included in Our {city} {service}
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Comprehensive cleaning tailored to {city} homes</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <h3 class="text-2xl font-bold mb-6 text-[#333333]">
            <Icon name="check-circle" class="w-5 h-5 text-green-500 mr-2" />Service Includes
          </h3>
          <ul class="space-y-4">
            {includes.map((item) => (
              <li class="flex items-start">
                <Icon name="check" class="w-5 h-5 text-green-500 mr-3 mt-1" />
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-gradient-to-br from-[#FFA985]/10 to-[#FFC67D]/10 rounded-2xl p-8 border border-[#FFA985]/20">
          <h3 class="text-2xl font-bold mb-6 text-[#333333]">
            <Icon name="star" class="w-5 h-5 text-[#FFA985] mr-2" fill="currentColor" />Why {city} Chooses Us
          </h3>
          <ul class="space-y-4">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <Icon name="star" class="w-5 h-5 text-[#FFA985] mr-3 mt-1" fill="currentColor" />
                <span class="text-gray-700">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Testimonials -->
  <section class="py-16 px-6 bg-gray-50">
    <div class="container mx-auto max-w-5xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-[#333333]">
          What {city} Customers Say About Our {service}
        </h2>
        <div class="section-divider"></div>
        <div class="flex items-center justify-center gap-2 mt-4">
          <div class="flex text-[#FFA985]">
            <Icon name="star" class="w-5 h-5" fill="currentColor" />
            <Icon name="star" class="w-5 h-5" fill="currentColor" />
            <Icon name="star" class="w-5 h-5" fill="currentColor" />
            <Icon name="star" class="w-5 h-5" fill="currentColor" />
            <Icon name="star" class="w-5 h-5" fill="currentColor" />
          </div>
          <span class="font-bold text-[#333333]">5.0</span>
          <span class="text-gray-600">from 130+ reviews</span>
        </div>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {serviceTestimonials.slice(0, 3).map((testimonial) => (
          <div class="bg-white rounded-2xl p-6 shadow-md border border-gray-200">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-lg">
                {testimonial.initial}
              </div>
              <div class="ml-3">
                <p class="font-bold text-[#333333]">{testimonial.name}</p>
                <p class="text-xs text-gray-500">{testimonial.source}</p>
              </div>
            </div>
            <div class="flex text-[#FFA985] text-sm mb-3">
              <Icon name="star" class="w-4 h-4" fill="currentColor" />
              <Icon name="star" class="w-4 h-4" fill="currentColor" />
              <Icon name="star" class="w-4 h-4" fill="currentColor" />
              <Icon name="star" class="w-4 h-4" fill="currentColor" />
              <Icon name="star" class="w-4 h-4" fill="currentColor" />
            </div>
            <p class="text-gray-700 text-sm line-clamp-4">"{testimonial.text}"</p>
            <div class="mt-3">
              <span class="bg-[#FFA985]/10 text-[#FFA985] text-xs px-2 py-1 rounded-full">{testimonial.service || service}</span>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-8">
        <a href="https://g.page/r/thevalleycleanteam/review" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-[#FFA985] font-semibold hover:underline">
          <Icon name="google" class="w-5 h-5 mr-2" />
          Read More Reviews on Google
          <Icon name="external-link-alt" class="w-4 h-4 ml-2" />
        </a>
      </div>
    </div>
  </section>

  <!-- Local Context Section - SEO-rich content about the local area -->
  {localContext.length > 0 && (
    <section class="py-16 px-6 bg-white">
