---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Icon from '../components/Icon.astro';

const locations = [
  {
    city: "Nashville",
    state: "TN",
    region: "Davidson County",
    slug: "/locations/nashville",
    description: "Serving Belle Meade, Green Hills, Sylvan Park, The Nations, 12 South, and all Nashville neighborhoods",
    featured: true
  },
  {
    city: "West Nashville",
    state: "TN",
    region: "Davidson County",
    slug: "/locations/west-nashville",
    description: "Serving Belle Meade, Sylvan Park, The Nations, West Meade, and all West Nashville areas",
    featured: false
  },
  {
    city: "Huntsville",
    state: "AL",
    region: "Madison County",
    slug: "/locations/huntsville",
    description: "Serving Hampton Cove, Madison, Downtown, Redstone Arsenal, UAH, and 15+ more areas",
    featured: true
  },
  {
    city: "Madison",
    state: "AL",
    region: "Madison County",
    slug: "/locations/madison",
    description: "Serving Madison Station, Hughes Road, County Line Road, and all Madison neighborhoods",
    featured: false
  },
  {
    city: "Athens",
    state: "AL",
    region: "Limestone County",
    slug: "/locations/athens",
    description: "Serving Downtown Athens, East Limestone, Canebrake, and all Limestone County",
    featured: false
  },
  {
    city: "Birmingham",
    state: "AL",
    region: "Jefferson County",
    slug: "/locations/birmingham",
    description: "Serving Mountain Brook, Homewood, Vestavia Hills, Hoover, and 15+ more neighborhoods",
    featured: true
  },
  {
    city: "Mountain Brook",
    state: "AL",
    region: "Jefferson County",
    slug: "/locations/mountain-brook",
    description: "Luxury cleaning for Crestline, English Village, Mountain Brook Village, and Over the Mountain",
    featured: false
  },
  {
    city: "Muscle Shoals",
    state: "AL",
    region: "Colbert County",
    slug: "/locations/muscle-shoals",
    description: "Serving the Quad Cities: Muscle Shoals, Florence, Sheffield, Tuscumbia - complete Shoals area coverage",
    featured: true
  },
  {
    city: "Florence",
    state: "AL",
    region: "Lauderdale County",
    slug: "/locations/florence",
    description: "Serving Downtown Florence, near UNA, and all Florence neighborhoods",
    featured: false
  },
  {
    city: "Sheffield",
    state: "AL",
    region: "Colbert County",
    slug: "/locations/muscle-shoals",
    description: "Serving Sheffield, near Wilson Dam, and surrounding areas",
    featured: false
  },
  {
    city: "Tuscumbia",
    state: "AL",
    region: "Colbert County",
    slug: "/locations/muscle-shoals",
    description: "Serving Tuscumbia, Spring Park, and surrounding areas",
    featured: false
  }
];

const featuredLocations = locations.filter(l => l.featured);
const otherLocations = locations.filter(l => !l.featured);
---

<BaseLayout
  title="Service Locations | The Valley Clean Team"
  description="Professional cleaning services in Huntsville, Nashville, Birmingham, Muscle Shoals, Florence & Athens. Find your Alabama or Tennessee city and get a free quote."
  ogImage="https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png"
>
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 text-[#333333]">
        Our <span class="gold-gradient">Service Locations</span>
      </h1>
      <div class="section-divider"></div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Professional luxury cleaning services across Alabama and Tennessee. Find your city below and get a free quote today.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
        <a href="tel:2568261100" class="btn-primary px-10 py-4 rounded-full text-xl font-semibold inline-block shadow-lg">
          <Icon name="phone" class="w-5 h-5 mr-2" />256-826-1100
        </a>
        <a href="/contact" class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg font-semibold px-8 py-4 bg-white border-2 border-gray-300 rounded-full shadow-md">
          <Icon name="envelope" class="w-5 h-5 mr-2" />Get Free Quote
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Locations -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Featured Service Areas
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Our primary service areas across Alabama & Tennessee</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {featuredLocations.map((location) => (
          <a href={location.slug} class="service-card bg-white rounded-2xl p-8 shadow-lg border-2 border-gray-200 hover:border-[#FFA985] group">
            <div class="flex items-start mb-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mr-4 flex-shrink-0">
                <Icon name="map-marker-alt" class="w-6 h-6 text-[#333333]" />
              </div>
              <div>
                <h3 class="text-2xl font-bold text-[#333333] group-hover:text-[#FFA985] transition">
                  {location.city}, {location.state}
                </h3>
                <p class="text-gray-500">{location.region}</p>
              </div>
            </div>
            <p class="text-gray-600 mb-4">{location.description}</p>
            <div class="flex items-center text-[#FFA985] font-semibold">
              View {location.city} Services
              <Icon name="arrow-right" class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" />
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- All Locations -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          All Service Locations
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Complete list of areas we serve</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
        {locations.map((location) => (
          <a href={location.slug} class="bg-white rounded-xl p-6 shadow-md border border-gray-200 hover:border-[#FFA985] transition text-center group">
            <Icon name="map-marker-alt" class="w-8 h-8 text-[#FFA985]  mb-3" />
            <h4 class="font-bold text-[#333333] group-hover:text-[#FFA985] transition text-lg">
              {location.city}, {location.state}
            </h4>
            <p class="text-sm text-gray-500 mt-1">{location.region}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Area Map Section -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-[#333333]">
            Serving Communities Across <span class="gold-gradient">Two States</span>
          </h2>
          <div class="section-divider ml-0"></div>
          <p class="text-xl text-gray-700 mb-6">
            The Valley Clean Team proudly serves homeowners and businesses throughout Alabama and Tennessee. Our professional cleaning teams are locally based and understand the unique needs of each community we serve.
          </p>
          <div class="space-y-4">
            <div class="flex items-start">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-3 mt-1" />
              <div>
                <h4 class="font-bold text-[#333333]">Alabama Coverage</h4>
                <p class="text-gray-600">Birmingham, Huntsville, Madison, Athens, Mountain Brook, The Shoals, and surrounding areas</p>
              </div>
            </div>
            <div class="flex items-start">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-3 mt-1" />
              <div>
                <h4 class="font-bold text-[#333333]">Tennessee Coverage</h4>
                <p class="text-gray-600">Nashville, West Nashville, and Middle Tennessee communities</p>
              </div>
            </div>
            <div class="flex items-start">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-3 mt-1" />
              <div>
                <h4 class="font-bold text-[#333333]">Expanding Service</h4>
                <p class="text-gray-600">Don't see your city? Contact us - we may still serve your area!</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold mb-6 text-[#333333] text-center">
            <Icon name="map" class="w-5 h-5 text-[#FFA985] mr-2" />Service States
          </h3>
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center">
              <div class="w-20 h-20 mx-auto mb-3 rounded-full bg-white shadow-md flex items-center justify-center">
                <span class="text-3xl font-bold text-[#FFA985]">AL</span>
              </div>
              <h4 class="font-bold text-[#333333]">Alabama</h4>
              <p class="text-sm text-gray-600">6 Major Areas</p>
            </div>
            <div class="text-center">
              <div class="w-20 h-20 mx-auto mb-3 rounded-full bg-white shadow-md flex items-center justify-center">
                <span class="text-3xl font-bold text-[#FFA985]">TN</span>
              </div>
              <h4 class="font-bold text-[#333333]">Tennessee</h4>
              <p class="text-sm text-gray-600">Nashville Metro</p>
            </div>
          </div>
          <div class="mt-8 text-center">
            <a href="/contact" class="btn-primary px-8 py-4 rounded-full font-semibold inline-block shadow-lg">
              Request Service in Your Area
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Don't See Your City -->
  <section class="py-20 px-6 bg-gradient-to-br from-[#FFA985]/10 to-gray-100">
    <div class="container mx-auto max-w-4xl text-center">
      <Icon name="question-circle" class="w-12 h-12 text-[#FFA985]  mb-6" />
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-[#333333]">
        Don't See Your City?
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        We're always expanding our service areas. If you don't see your city listed, give us a call or send us a message. We may already serve your area or be expanding there soon!
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6">
        <a href="tel:2568261100" class="btn-primary px-12 py-5 rounded-full text-xl font-semibold inline-block shadow-lg">
          <Icon name="phone" class="w-5 h-5 mr-2" />Call 256-826-1100
        </a>
        <a href="/contact" class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg font-semibold px-8 py-5 bg-white border-2 border-gray-300 rounded-full shadow-md">
          <Icon name="envelope" class="w-5 h-5 mr-2" />Request Your Area
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
