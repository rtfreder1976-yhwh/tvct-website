          <span>•</span>
          <span>{readTime}</span>
          <span>•</span>
          <span>By {author}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
