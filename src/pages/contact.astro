---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contact The Valley Clean Team | Professional Cleaning Services">
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold mb-4 text-[#333333]">
          Get in <span class="gold-gradient">Touch</span>
        </h1>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">We'd love to hear from you. Reach out to us for a free quote or any questions about our cleaning services.</p>
      </div>

      <!-- Contact Methods -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- Phone -->
        <div class="contact-card text-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-phone text-[#333333] text-2xl"></i>
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Call Us</h3>
          <p class="text-gray-600 mb-4">Available Mon-Sat, 8am-6pm</p>
          <a href="tel:2568261100" class="text-[#FFA985] font-bold text-xl hover:underline">256-826-1100</a>
        </div>

        <!-- Email -->
        <div class="contact-card text-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-envelope text-[#333333] text-2xl"></i>
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Email Us</h3>
          <p class="text-gray-600 mb-4">We'll respond within 2 hours</p>
          <a href="mailto:info@thevalleycleanteam.com" class="text-[#FFA985] font-bold hover:underline break-all">info@thevalleycleanteam.com</a>
        </div>

        <!-- Hours -->
        <div class="contact-card text-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-clock text-[#333333] text-2xl"></i>
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Hours</h3>
          <p class="text-gray-600">Monday - Saturday<br>8:00 AM - 6:00 PM<br><br>Sunday by appointment</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto max-w-4xl">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Form -->
        <div>
          <h2 class="text-3xl font-bold mb-6 text-[#333333]">Send Us a Message</h2>
          <form class="space-y-6">
            <div>
              <label class="block text-gray-700 font-semibold mb-2">Full Name *</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Your name" required>
            </div>

            <div>
              <label class="block text-gray-700 font-semibold mb-2">Email Address *</label>
              <input type="email" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="your@email.com" required>
            </div>

            <div>
              <label class="block text-gray-700 font-semibold mb-2">Phone Number *</label>
              <input type="tel" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="256-826-1100" required>
            </div>

            <div>
              <label class="block text-gray-700 font-semibold mb-2">Service Type *</label>
              <select class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" required>
                <option value="">Select a service</option>
                <option>Deep Cleaning</option>
                <option>Regular Cleaning</option>
                <option>Move In/Out Cleaning</option>
                <option>Commercial/Office Cleaning</option>
                <option>Event Cleaning</option>
                <option>Airbnb Cleaning</option>
                <option>Post-Construction Cleaning</option>
                <option>Green Cleaning</option>
              </select>
            </div>

            <div>
              <label class="block text-gray-700 font-semibold mb-2">Your Location</label>
              <input type="text" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="City, State">
            </div>

            <div>
              <label class="block text-gray-700 font-semibold mb-2">Message</label>
              <textarea class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Tell us about your cleaning needs..." rows="5"></textarea>
            </div>

            <button type="submit" class="btn-primary w-full py-4 rounded-lg text-lg font-semibold shadow-lg">
              Send Message
            </button>
            <p class="text-center text-sm text-gray-500">
              <i class="fas fa-lock mr-1"></i> Your information is secure and will not be shared.
            </p>
          </form>
        </div>

        <!-- Info -->
        <div>
          <h2 class="text-3xl font-bold mb-6 text-[#333333]">Why Contact Us?</h2>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Free Quotes</h3>
                <p class="text-gray-600">Get a no-obligation quote within 2 hours</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Expert Advice</h3>
                <p class="text-gray-600">Our team can answer any questions about our services</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Personalized Solutions</h3>
                <p class="text-gray-600">We'll work with you to find the perfect cleaning package</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Quick Response</h3>
                <p class="text-gray-600">We typically respond to inquiries within 2 hours</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Multiple Contact Methods</h3>
                <p class="text-gray-600">Call, email, or use our contact form - choose what works for you</p>
              </div>
            </div>
          </div>

          <div class="mt-8 p-6 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-2xl border border-[#FFA985]/20">
            <h3 class="font-bold text-[#333333] mb-2">
              <i class="fas fa-star text-[#FFA985] mr-2"></i>Ready to Get Started?
            </h3>
            <p class="text-gray-600">Call us today at <span class="font-bold text-[#FFA985]">256-826-1100</span> for immediate assistance!</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-[#333333]">Service Areas</h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="font-bold text-lg mb-4 text-[#333333]">
            <i class="fas fa-map-marker-alt text-[#FFA985] mr-2"></i>Alabama
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li><a href="/birmingham-cleaning" class="hover:text-[#FFA985] transition">Birmingham</a></li>
            <li><a href="/huntsville-cleaning" class="hover:text-[#FFA985] transition">Huntsville</a></li>
            <li><a href="/madison-cleaning" class="hover:text-[#FFA985] transition">Madison</a></li>
            <li><a href="/muscle-shoals-cleaning" class="hover:text-[#FFA985] transition">Muscle Shoals</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold text-lg mb-4 text-[#333333]">
            <i class="fas fa-map-marker-alt text-[#FFA985] mr-2"></i>Tennessee
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li><a href="/west-nashville-cleaning" class="hover:text-[#FFA985] transition">West Nashville</a></li>
            <li><a href="/#locations" class="hover:text-[#FFA985] transition">View All Locations</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
