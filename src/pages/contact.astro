---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contact The Valley Clean Team | Professional Cleaning Services" description="Get a free cleaning quote in 2 hours. Call 256-826-1100 or book online. Serving Huntsville, Birmingham, Nashville, Muscle Shoals & more. Same-day service available.">
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold mb-4 text-[#333333]">
          Get in <span class="gold-gradient">Touch</span>
        </h1>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">We'd love to hear from you. Reach out to us for a free quote or any questions about our cleaning services.</p>
      </div>

      <!-- Contact Methods -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- Phone -->
        <div class="contact-card text-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-phone text-[#333333] text-2xl"></i>
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Call Us</h3>
          <p class="text-gray-600 mb-4">Available Mon-Fri, 9am-5pm</p>
          <a href="tel:2568261100" class="text-[#FFA985] font-bold text-xl hover:underline">256-826-1100</a>
        </div>

        <!-- Email -->
        <div class="contact-card text-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-envelope text-[#333333] text-2xl"></i>
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Email Us</h3>
          <p class="text-gray-600 mb-4">We'll respond within 2 hours</p>
          <a href="mailto:info@thevalleycleanteam.com" class="text-[#FFA985] font-bold hover:underline break-all">info@thevalleycleanteam.com</a>
        </div>

        <!-- Hours -->
        <div class="contact-card text-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-clock text-[#333333] text-2xl"></i>
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Hours</h3>
          <p class="text-gray-600">Monday - Friday<br>9:00 AM - 5:00 PM<br><br>Saturday & Sunday by appointment</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Online Booking Section -->
  <section class="py-16 px-6 bg-gradient-to-br from-[#FFA985]/10 to-[#FFC67D]/10">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-8">
        <div class="inline-block bg-white px-4 py-2 rounded-full mb-4 shadow-sm">
          <span class="text-[#FFA985] font-semibold">
            <i class="fas fa-calendar-check mr-2"></i>New! Book Online
          </span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[#333333]">
          Schedule Your Cleaning Online
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Skip the phone call! Choose your preferred date and time, and we'll confirm your appointment instantly.
        </p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-200">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Booking Benefits -->
          <div>
            <h3 class="text-2xl font-bold mb-6 text-[#333333]">Why Book Online?</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
                <span class="text-gray-700"><strong>Instant Confirmation</strong> - No waiting for callbacks</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
                <span class="text-gray-700"><strong>See Real Availability</strong> - Pick a time that works for you</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
                <span class="text-gray-700"><strong>24/7 Booking</strong> - Schedule anytime, even after hours</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
                <span class="text-gray-700"><strong>Automatic Reminders</strong> - We'll remind you before your appointment</span>
              </li>
            </ul>
          </div>

          <!-- Booking CTA -->
          <div class="text-center">
            <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 border border-gray-200">
              <i class="fas fa-calendar-alt text-[#FFA985] text-5xl mb-4"></i>
              <h4 class="text-xl font-bold mb-2 text-[#333333]">Ready to Book?</h4>
              <p class="text-gray-600 mb-6">Select your service and preferred time slot</p>

              <!-- Calendly Widget Embed - Replace URL with actual Calendly link -->
              <a
                href="https://calendly.com/thevalleycleanteam"
                target="_blank"
                rel="noopener noreferrer"
                class="btn-primary px-8 py-4 rounded-full text-lg font-semibold inline-block shadow-lg w-full"
                id="booking-btn"
              >
                <i class="fas fa-calendar-plus mr-2"></i>Book Now
              </a>

              <p class="text-sm text-gray-500 mt-4">
                <i class="fas fa-shield-alt mr-1"></i>Secure booking powered by Calendly
              </p>
            </div>
          </div>
        </div>

        <!-- Service Quick Links -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h4 class="font-bold text-[#333333] mb-4 text-center">Quick Book by Service Type:</h4>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="https://calendly.com/thevalleycleanteam/deep-cleaning" target="_blank" rel="noopener noreferrer" class="px-4 py-2 bg-gray-100 hover:bg-[#FFA985]/20 rounded-full text-gray-700 hover:text-[#333333] transition text-sm font-medium">
              <i class="fas fa-sparkles mr-1 text-[#FFA985]"></i>Deep Cleaning
            </a>
            <a href="https://calendly.com/thevalleycleanteam/regular-cleaning" target="_blank" rel="noopener noreferrer" class="px-4 py-2 bg-gray-100 hover:bg-[#FFA985]/20 rounded-full text-gray-700 hover:text-[#333333] transition text-sm font-medium">
              <i class="fas fa-home mr-1 text-[#FFA985]"></i>Regular Cleaning
            </a>
            <a href="https://calendly.com/thevalleycleanteam/move-cleaning" target="_blank" rel="noopener noreferrer" class="px-4 py-2 bg-gray-100 hover:bg-[#FFA985]/20 rounded-full text-gray-700 hover:text-[#333333] transition text-sm font-medium">
              <i class="fas fa-truck-moving mr-1 text-[#FFA985]"></i>Move In/Out
            </a>
            <a href="https://calendly.com/thevalleycleanteam/airbnb-cleaning" target="_blank" rel="noopener noreferrer" class="px-4 py-2 bg-gray-100 hover:bg-[#FFA985]/20 rounded-full text-gray-700 hover:text-[#333333] transition text-sm font-medium">
              <i class="fas fa-key mr-1 text-[#FFA985]"></i>Airbnb Turnover
            </a>
          </div>
        </div>
      </div>

      <p class="text-center text-gray-500 mt-6">
        Prefer to talk? Call us at <a href="tel:2568261100" class="text-[#FFA985] font-semibold hover:underline">256-826-1100</a>
      </p>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto max-w-4xl">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Form -->
        <div>
          <h2 class="text-3xl font-bold mb-6 text-[#333333]">Send Us a Message</h2>
          <form id="contact-form" class="space-y-6">
            <div>
              <label for="cf-name" class="block text-gray-700 font-semibold mb-2">Full Name *</label>
              <input type="text" id="cf-name" name="name" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Your name" required>
            </div>

            <div>
              <label for="cf-email" class="block text-gray-700 font-semibold mb-2">Email Address *</label>
              <input type="email" id="cf-email" name="email" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="your@email.com" required>
            </div>

            <div>
              <label for="cf-phone" class="block text-gray-700 font-semibold mb-2">Phone Number *</label>
              <input type="tel" id="cf-phone" name="phone" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="256-826-1100" required>
            </div>

            <div>
              <label for="cf-service" class="block text-gray-700 font-semibold mb-2">Service Type *</label>
              <select id="cf-service" name="service" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" required>
                <option value="">Select a service</option>
                <option value="Deep Cleaning">Deep Cleaning</option>
                <option value="Regular Cleaning">Regular Cleaning</option>
                <option value="Move In/Out Cleaning">Move In/Out Cleaning</option>
                <option value="Commercial/Office Cleaning">Commercial/Office Cleaning</option>
                <option value="Event Cleaning">Event Cleaning</option>
                <option value="Airbnb Cleaning">Airbnb Cleaning</option>
                <option value="Post-Construction Cleaning">Post-Construction Cleaning</option>
                <option value="Green Cleaning">Green Cleaning</option>
              </select>
            </div>

            <div>
              <label for="cf-location" class="block text-gray-700 font-semibold mb-2">Your Location</label>
              <input type="text" id="cf-location" name="location" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="City, State">
            </div>

            <div>
              <label for="cf-message" class="block text-gray-700 font-semibold mb-2">Message</label>
              <textarea id="cf-message" name="message" class="w-full px-4 py-3 rounded-lg bg-white border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Tell us about your cleaning needs..." rows="5"></textarea>
            </div>

            <button type="submit" id="submit-btn" class="btn-primary w-full py-4 rounded-lg text-lg font-semibold shadow-lg">
              Send Message
            </button>
            <p class="text-center text-sm text-gray-500">
              <i class="fas fa-lock mr-1"></i> Your information is secure and will not be shared.
            </p>
            <div id="form-message" class="hidden text-center p-4 rounded-lg"></div>
          </form>

          <script>
            document.getElementById('contact-form').addEventListener('submit', async function(e) {
              e.preventDefault();

              const submitBtn = document.getElementById('submit-btn');
              const formMessage = document.getElementById('form-message');
              const form = e.target;

              // Disable button and show loading
              submitBtn.disabled = true;
              submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';

              // Gather form data
              const formData = {
                name: form.name.value,
                email: form.email.value,
                phone: form.phone.value,
                service: form.service.value,
                location: form.location.value,
                message: form.message.value,
                source: 'Website Contact Form',
                page_url: window.location.href
              };

              try {
                const response = await fetch('https://u.thevalleycleanteam.com/widget/form/hvhNBpTY8bFtBgY2qJen', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify(formData)
                });

                // Show success message
                formMessage.className = 'text-center p-4 rounded-lg bg-green-100 text-green-800';
                formMessage.innerHTML = '<i class="fas fa-check-circle mr-2"></i>Thank you! We\'ll be in touch within 2 hours.';
                form.reset();

              } catch (error) {
                // Show error message
                formMessage.className = 'text-center p-4 rounded-lg bg-red-100 text-red-800';
                formMessage.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i>Something went wrong. Please call us at 256-826-1100.';
              }

              // Reset button
              submitBtn.disabled = false;
              submitBtn.innerHTML = 'Send Message';
            });
          </script>
        </div>

        <!-- Info -->
        <div>
          <h2 class="text-3xl font-bold mb-6 text-[#333333]">Why Contact Us?</h2>

          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Free Quotes</h3>
                <p class="text-gray-600">Get a no-obligation quote within 2 hours</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Expert Advice</h3>
                <p class="text-gray-600">Our team can answer any questions about our services</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Personalized Solutions</h3>
                <p class="text-gray-600">We'll work with you to find the perfect cleaning package</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Quick Response</h3>
                <p class="text-gray-600">We typically respond to inquiries within 2 hours</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0">
                <i class="fas fa-check text-[#FFA985] text-lg"></i>
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Multiple Contact Methods</h3>
                <p class="text-gray-600">Call, email, or use our contact form - choose what works for you</p>
              </div>
            </div>
          </div>

          <div class="mt-8 p-6 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-2xl border border-[#FFA985]/20">
            <h3 class="font-bold text-[#333333] mb-2">
              <i class="fas fa-star text-[#FFA985] mr-2"></i>Ready to Get Started?
            </h3>
            <p class="text-gray-600">Call us today at <span class="font-bold text-[#FFA985]">256-826-1100</span> for immediate assistance!</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-[#333333]">Service Areas</h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="font-bold text-lg mb-4 text-[#333333]">
            <i class="fas fa-map-marker-alt text-[#FFA985] mr-2"></i>Alabama
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li><a href="/birmingham-cleaning" class="hover:text-[#FFA985] transition">Birmingham</a></li>
            <li><a href="/huntsville-cleaning" class="hover:text-[#FFA985] transition">Huntsville</a></li>
            <li><a href="/madison-cleaning" class="hover:text-[#FFA985] transition">Madison</a></li>
            <li><a href="/muscle-shoals-cleaning" class="hover:text-[#FFA985] transition">Muscle Shoals</a></li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold text-lg mb-4 text-[#333333]">
            <i class="fas fa-map-marker-alt text-[#FFA985] mr-2"></i>Tennessee
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li><a href="/west-nashville-cleaning" class="hover:text-[#FFA985] transition">West Nashville</a></li>
            <li><a href="/#locations" class="hover:text-[#FFA985] transition">View All Locations</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
