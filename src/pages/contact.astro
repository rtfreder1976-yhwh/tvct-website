---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
import QuoteForm from "../components/QuoteForm.astro";

// LocalBusiness schema for Contact page
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: "The Valley Clean Team",
  image:
    "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png",
  url: "https://thevalleycleanteam.com",
  telephone: "256-826-1100",
  email: "hello@thevalleycleanteam.com",
  address: {
    "@type": "PostalAddress",
    addressLocality: "Huntsville",
    addressRegion: "AL",
    addressCountry: "US",
  },
  priceRange: "$$",
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "17:00",
    },
  ],
  areaServed: [
    {
      "@type": "City",
      name: "Huntsville",
      containedInPlace: { "@type": "State", name: "Alabama" },
    },
    {
      "@type": "City",
      name: "Birmingham",
      containedInPlace: { "@type": "State", name: "Alabama" },
    },
    {
      "@type": "City",
      name: "Nashville",
      containedInPlace: { "@type": "State", name: "Tennessee" },
    },
    {
      "@type": "City",
      name: "Muscle Shoals",
      containedInPlace: { "@type": "State", name: "Alabama" },
    },
  ],
};
---

<BaseLayout
  title="Contact Us | Valley Clean Team"
  description="Get a free cleaning quote from The Valley Clean Team. Call 256-826-1100 or email us. Serving Huntsville, Nashville, Birmingham & The Shoals."
  ogImage="https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png"
>
  <script
    type="application/ld+json"
    set:html={JSON.stringify(localBusinessSchema)}
  />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold mb-4 text-[#333333]">
          Get in <span class="gold-gradient">Touch</span>
        </h1>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">
          We'd love to hear from you. Reach out to us for a free quote or any
          questions about our cleaning services.
        </p>
      </div>

      <!-- Contact Methods -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- Phone -->
        <div class="contact-card text-center">
          <div
            class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="phone" class="w-6 h-6 text-[#333333]" />
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Call Us</h3>
          <p class="text-gray-600 mb-4">Available Mon-Fri, 9am-5pm</p>
          <a
            href="tel:2568261100"
            class="text-[#FFA985] font-bold text-xl hover:underline"
            >256-826-1100</a
          >
        </div>

        <!-- Email -->
        <div class="contact-card text-center">
          <div
            class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="envelope" class="w-6 h-6 text-[#333333]" />
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Email Us</h3>
          <p class="text-gray-600 mb-4">We'll respond within 2 hours</p>
          <a
            href="mailto:hello@thevalleycleanteam.com"
            class="text-[#FFA985] font-bold hover:underline break-all"
            >hello@thevalleycleanteam.com</a
          >
        </div>

        <!-- Hours -->
        <div class="contact-card text-center">
          <div
            class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="clock" class="w-6 h-6 text-[#333333]" />
          </div>
          <h3 class="text-2xl font-bold mb-2 text-[#333333]">Hours</h3>
          <p class="text-gray-600">
            Monday - Friday<br />9:00 AM - 5:00 PM<br /><br />Saturday & Sunday
            by appointment
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto max-w-4xl">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Form -->
        <div>
          <h2 class="text-3xl font-bold mb-6 text-[#333333]">
            Send Us a Message
          </h2>
          <QuoteForm formId="contact-page-form" source="Contact Page Form" />
        </div>

        <!-- Info -->
        <div>
          <h2 class="text-3xl font-bold mb-6 text-[#333333]">
            Why Contact Us?
          </h2>

          <div class="space-y-6">
            <div class="flex items-start">
              <div
                class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0"
              >
                <Icon name="check" class="w-5 h-5 text-[#FFA985]" />
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Free Quotes</h3>
                <p class="text-gray-600">
                  Get a no-obligation quote within 2 hours
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div
                class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0"
              >
                <Icon name="check" class="w-5 h-5 text-[#FFA985]" />
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Expert Advice</h3>
                <p class="text-gray-600">
                  Our team can answer any questions about our services
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div
                class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0"
              >
                <Icon name="check" class="w-5 h-5 text-[#FFA985]" />
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">
                  Personalized Solutions
                </h3>
                <p class="text-gray-600">
                  We'll work with you to find the perfect cleaning package
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div
                class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0"
              >
                <Icon name="check" class="w-5 h-5 text-[#FFA985]" />
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">Quick Response</h3>
                <p class="text-gray-600">
                  We typically respond to inquiries within 2 hours
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div
                class="w-12 h-12 rounded-full bg-[#FFA985]/20 flex items-center justify-center mr-4 flex-shrink-0"
              >
                <Icon name="check" class="w-5 h-5 text-[#FFA985]" />
              </div>
              <div>
                <h3 class="font-bold text-[#333333] mb-1">
                  Multiple Contact Methods
                </h3>
                <p class="text-gray-600">
                  Call, email, or use our contact form - choose what works for
                  you
                </p>
              </div>
            </div>
          </div>

          <div
            class="mt-8 p-6 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-2xl border border-[#FFA985]/20"
          >
            <h3 class="font-bold text-[#333333] mb-2">
              <Icon
                name="star"
                class="w-4 h-4 text-[#FFA985] mr-2 inline"
                fill="currentColor"
              />Ready to Get Started?
            </h3>
            <p class="text-gray-600">
              Call us today at <span class="font-bold text-[#FFA985]"
                >256-826-1100</span
              > for immediate assistance!
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-[#333333]">Service Areas</h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="font-bold text-lg mb-4 text-[#333333]">
            <Icon
              name="map-marker-alt"
              class="w-5 h-5 text-[#FFA985] mr-2"
            />Alabama
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>
              <a
                href="/locations/birmingham"
                class="hover:text-[#FFA985] transition">Birmingham</a>
            </li>
            <li>
              <a
                href="/locations/huntsville"
                class="hover:text-[#FFA985] transition">Huntsville</a>
            </li>
            <li>
              <a
                href="/locations/madison"
                class="hover:text-[#FFA985] transition">Madison</a>
            </li>
            <li>
              <a
                href="/locations/muscle-shoals"
                class="hover:text-[#FFA985] transition">Muscle Shoals</a>
            </li>
          </ul>
        </div>

        <div>
          <h3 class="font-bold text-lg mb-4 text-[#333333]">
            <Icon
              name="map-marker-alt"
              class="w-5 h-5 text-[#FFA985] mr-2"
            />Tennessee
          </h3>
          <ul class="space-y-2 text-gray-600">
            <li>
              <a
                href="/locations/west-nashville"
                class="hover:text-[#FFA985] transition">West Nashville</a>
            </li>
            <li>
              <a href="/#locations" class="hover:text-[#FFA985] transition"
                >View All Locations</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
