---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import Icon from '../../components/Icon.astro';

// ItemList schema for services page
const servicesListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Cleaning Services",
  "description": "Professional cleaning services offered by The Valley Clean Team",
  "numberOfItems": 8,
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@type": "Service",
        "name": "Deep Cleaning",
        "description": "Comprehensive top-to-bottom cleaning that tackles every corner of your home",
        "url": "https://thevalleycleanteam.com/services/deep-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@type": "Service",
        "name": "Regular Cleaning",
        "description": "Consistent, reliable cleaning services on a weekly, bi-weekly, or monthly schedule",
        "url": "https://thevalleycleanteam.com/services/regular-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 3,
      "item": {
        "@type": "Service",
        "name": "Move In/Out Cleaning",
        "description": "Thorough move cleaning to ensure your new home is spotless or help secure your deposit back",
        "url": "https://thevalleycleanteam.com/services/move-in-out-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 4,
      "item": {
        "@type": "Service",
        "name": "Commercial Cleaning",
        "description": "Professional cleaning services for businesses of all sizes",
        "url": "https://thevalleycleanteam.com/services/commercial-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 5,
      "item": {
        "@type": "Service",
        "name": "Airbnb Cleaning",
        "description": "Fast, thorough turnover cleaning for vacation rental hosts",
        "url": "https://thevalleycleanteam.com/services/airbnb-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 6,
      "item": {
        "@type": "Service",
        "name": "Post-Construction Cleaning",
        "description": "Transform your newly built or renovated space from construction zone to move-in ready",
        "url": "https://thevalleycleanteam.com/services/post-construction-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 7,
      "item": {
        "@type": "Service",
        "name": "Event Cleaning",
        "description": "Pre-event, during-event, and post-event cleaning services for any occasion",
        "url": "https://thevalleycleanteam.com/services/event-cleaning"
      }
    },
    {
      "@type": "ListItem",
      "position": 8,
      "item": {
        "@type": "Service",
        "name": "Green Cleaning",
        "description": "Eco-friendly cleaning using safe, sustainable, non-toxic products",
        "url": "https://thevalleycleanteam.com/services/green-cleaning"
      }
    }
  ]
};

// LocalBusiness schema
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "The Valley Clean Team",
  "image": "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png",
  "url": "https://thevalleycleanteam.com/services",
  "telephone": "256-826-1100",
  "priceRange": "$$",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Huntsville",
    "addressRegion": "AL",
    "addressCountry": "US"
  },
  "areaServed": [
    { "@type": "State", "name": "Alabama" },
    { "@type": "State", "name": "Tennessee" }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Cleaning Services",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Deep Cleaning" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Regular Cleaning" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Move In/Out Cleaning" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Commercial Cleaning" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Airbnb Cleaning" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Post-Construction Cleaning" } }
    ]
  }
};
---

<BaseLayout ogImage="https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692f521d2b865ec42a6b89f0.png" title="Our Cleaning Services | Valley Clean Team" description="Professional cleaning services in Alabama & Tennessee. Deep cleaning, recurring maid service, move-out, Airbnb, and commercial cleaning. Free quotes!">
  <script type="application/ld+json" set:html={JSON.stringify(servicesListSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6 text-[#333333]">
        Our <span class="gold-gradient">Cleaning Services</span>
      </h1>
      <div class="section-divider"></div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Professional cleaning solutions tailored to your needs across Alabama and Tennessee. From residential deep cleaning to commercial maintenance, we do it all with expertise and care.
      </p>
      <a href="/contact" class="btn-primary px-10 py-4 rounded-full text-xl font-semibold inline-block shadow-lg">
        Get Free Quote
      </a>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <h2 class="sr-only">Our Professional Cleaning Services</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

        <!-- Deep Cleaning -->
        <a href="/services/deep-cleaning" class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200 block">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692f521d2b865ec42a6b89f0.png" alt="Deep Cleaning Kitchen" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />4-6 hours</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />2-3 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <div class="inline-block bg-[#FFA985]/10 text-[#FFA985] text-xs font-semibold px-2 py-1 rounded-full mb-2">Most Popular</div>
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Deep Cleaning</h3>
            <p class="text-gray-600 mb-4">
              A comprehensive, top-to-bottom cleaning that tackles every corner of your home. Perfect for spring cleaning, move-ins, or when your home needs extra attention.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>Baseboards and crown molding</li>
              <li>Inside cabinets and appliances</li>
              <li>Light fixtures and ceiling fans</li>
              <li>Window sills and tracks</li>
              <li>Behind and under furniture</li>
            </ul>
            <span class="text-[#FFA985] font-semibold">
              View Full Details →
            </span>
          </div>
        </a>

        <!-- Regular Cleaning -->
        <div class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029f8fa3b30bb23e26e.webp" alt="Regular Cleaning Kitchen" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />2-3 hours</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />1-2 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Regular Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Consistent, reliable cleaning services on a weekly, bi-weekly, or monthly schedule. Keep your home consistently fresh and welcoming.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>Dusting all surfaces</li>
              <li>Vacuuming and mopping floors</li>
              <li>Kitchen and bathroom sanitizing</li>
              <li>Trash removal</li>
              <li>Flexible scheduling options</li>
            </ul>
            <a href="/contact" class="text-[#FFA985] font-semibold hover:underline">
              Book Regular Cleaning →
            </a>
          </div>
        </div>

        <!-- Move In/Out Cleaning -->
        <a href="/services/move-in-out-cleaning" class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200 block">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802af8fa3bc14e23e27e.jpg" alt="Move In/Out Cleaning Empty Room" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />4-8 hours</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />2-3 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <div class="inline-block bg-green-100 text-green-700 text-xs font-semibold px-2 py-1 rounded-full mb-2">Get Deposit Back</div>
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Move In/Out Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Make your transition seamless with our thorough move cleaning. Ensure your new home is spotless or help secure your deposit back.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>All rooms deep cleaned</li>
              <li>Inside cabinets and closets</li>
              <li>Appliance cleaning (inside & out)</li>
              <li>Wall and baseboard wiping</li>
              <li>Same-day service available</li>
            </ul>
            <span class="text-[#FFA985] font-semibold">
              View Full Details →
            </span>
          </div>
        </a>

        <!-- Commercial/Office Cleaning -->
        <div class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802939374189b36d02dc.webp" alt="Commercial Office Cleaning" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />Varies</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />2-4 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Commercial/Office Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Professional cleaning services for businesses of all sizes. Create a clean, healthy, and productive work environment for your team.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>Office and cubicle cleaning</li>
              <li>Restroom sanitization</li>
              <li>Break room maintenance</li>
              <li>Floor care (vacuum, mop, polish)</li>
              <li>After-hours scheduling available</li>
            </ul>
            <a href="/contact" class="text-[#FFA985] font-semibold hover:underline">
              Book Office Cleaning →
            </a>
          </div>
        </div>

        <!-- Airbnb Cleaning -->
        <div class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920e69af8fa3b6226330f2d.jpg" alt="Airbnb Vacation Rental Cleaning" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />2-4 hours</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />1-2 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Airbnb Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Fast, thorough turnover cleaning for vacation rental hosts. Keep your guests happy and your reviews glowing with our reliable service.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>Quick turnaround times</li>
              <li>Linen change and laundry</li>
              <li>Guest-ready presentation</li>
              <li>Restocking supplies</li>
              <li>Same-day availability</li>
            </ul>
            <a href="/contact" class="text-[#FFA985] font-semibold hover:underline">
              Book Airbnb Cleaning →
            </a>
          </div>
        </div>

        <!-- Post-Construction Cleaning -->
        <a href="/services/post-construction-cleaning" class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200 block">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692080293937416b676d02dd.webp" alt="Post-Construction Cleaning" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />6-10 hours</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />2-4 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <div class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold px-2 py-1 rounded-full mb-2">New Build Ready</div>
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Post-Construction Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Transform your newly built or renovated space from construction zone to move-in ready. We handle all the dust, debris, and detail work.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>Dust and debris removal</li>
              <li>Window and track cleaning</li>
              <li>Paint and sticker removal</li>
              <li>Floor cleaning and polishing</li>
              <li>Final walk-through ready</li>
            </ul>
            <span class="text-[#FFA985] font-semibold">
              View Full Details →
            </span>
          </div>
        </a>

        <!-- Event Cleaning -->
        <div class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029a460c03aa0a6bcb1.webp" alt="Event Cleaning Setup" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />Varies</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />2-6 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Event Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Make your event shine from start to finish. We provide pre-event, during-event, and post-event cleaning services for any occasion.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>Pre-event deep cleaning</li>
              <li>During-event maintenance</li>
              <li>Post-event cleanup</li>
              <li>Venue restoration</li>
              <li>Flexible scheduling</li>
            </ul>
            <a href="/contact" class="text-[#FFA985] font-semibold hover:underline">
              Book Event Cleaning →
            </a>
          </div>
        </div>

        <!-- Green Cleaning -->
        <div class="service-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
          <div class="h-64 overflow-hidden relative">
            <img src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920e7465408c65fe8150cac.jpg" alt="Green Eco-Friendly Cleaning" class="w-full h-full object-cover" loading="lazy" decoding="async" width="400" height="256">
            <div class="absolute bottom-3 left-3 flex gap-2">
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="clock" class="w-5 h-5 text-[#FFA985] mr-1" />2-4 hours</span>
              <span class="bg-white/90 backdrop-blur text-gray-700 text-xs font-semibold px-2 py-1 rounded-full"><Icon name="users" class="w-5 h-5 text-[#FFA985] mr-1" />1-2 cleaners</span>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold mb-4 text-[#333333]">Green Cleaning</h3>
            <p class="text-gray-600 mb-4">
              Eco-friendly cleaning using safe, sustainable, non-toxic products. Perfect for families with children, pets, or environmental concerns.
            </p>
            <ul class="feature-list text-gray-600 mb-6">
              <li>EPA-approved green products</li>
              <li>Safe for children and pets</li>
              <li>Environmentally responsible</li>
              <li>Effective and thorough</li>
              <li>Reduces allergens</li>
            </ul>
            <a href="/contact" class="text-[#FFA985] font-semibold hover:underline">
              Book Green Cleaning →
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Why Choose Our Services -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Why Choose The Valley Clean Team
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">What sets our services apart</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center p-6">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="shield-alt" class="w-8 h-8 text-[#333333]" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Licensed & Insured</h3>
          <p class="text-gray-600">Fully licensed, bonded, and insured for your complete peace of mind.</p>
        </div>

        <div class="text-center p-6">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="user-check" class="w-8 h-8 text-[#333333]" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Background Checked</h3>
          <p class="text-gray-600">All team members are thoroughly vetted and background checked.</p>
        </div>

        <div class="text-center p-6">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="spray-can" class="w-8 h-8 text-[#333333]" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Supplies Provided</h3>
          <p class="text-gray-600">We bring all necessary supplies and equipment to every job.</p>
        </div>

        <div class="text-center p-6">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="medal" class="w-8 h-8 text-[#333333]" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Satisfaction Guaranteed</h3>
          <p class="text-gray-600">Not happy? We'll make it right. That's our promise to you.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pet-Friendly Protocols -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Pet-Friendly <span class="gold-gradient">Cleaning</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">We love your furry family members as much as you do</p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center max-w-5xl mx-auto">
        <div>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mr-4 flex-shrink-0">
