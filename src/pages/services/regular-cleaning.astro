---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import SchemaMarkup from '../../components/SchemaMarkup.astro';
import TrustBadges from '../../components/TrustBadges.astro';

const title = "Regular Cleaning Services | Weekly, Bi-Weekly & Monthly House Cleaning";
const description = "Professional recurring house cleaning services in Alabama & Tennessee. Weekly, bi-weekly, or monthly options. Veteran-owned, insured, background-checked cleaners. Save up to 20% with recurring service.";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Regular Cleaning Service",
  "description": "Professional recurring house cleaning services with weekly, bi-weekly, and monthly options. Consistent, reliable cleaning to maintain your home.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "256-826-1100",
    "email": "info@thevalleycleanteam.com"
  },
  "areaServed": [
    { "@type": "State", "name": "Alabama" },
    { "@type": "State", "name": "Tennessee" }
  ],
  "serviceType": "Regular Cleaning",
  "offers": {
    "@type": "Offer",
    "priceSpecification": {
      "@type": "PriceSpecification",
      "price": "99",
      "priceCurrency": "USD",
      "minPrice": "99"
    },
    "availability": "https://schema.org/InStock"
  }
};

const faqs = [
  {
    question: "How often should I schedule regular cleaning?",
    answer: "It depends on your lifestyle. Families with kids or pets benefit from weekly cleaning. Most households do well with bi-weekly service. Monthly works for smaller homes or those who maintain well between visits."
  },
  {
    question: "What's included in regular cleaning?",
    answer: "Regular cleaning covers all essential areas: vacuuming, mopping, dusting, bathroom sanitizing, kitchen cleaning, and trash removal. It maintains your home's cleanliness between deep cleans."
  },
  {
    question: "Can I customize my regular cleaning service?",
    answer: "Absolutely! We tailor each visit to your priorities. Focus on certain rooms, add specific tasks, or skip areas you handle yourself. Your cleaning, your way."
  },
  {
    question: "Do I need a deep clean first?",
    answer: "We recommend starting with a deep clean if your home hasn't been professionally cleaned recently. This gives us a clean baseline, making regular maintenance more effective."
  },
  {
    question: "What if I need to skip or reschedule?",
    answer: "Life happens! Just give us 24-48 hours notice and we'll reschedule at no charge. We're flexible and understand schedules change."
  },
  {
    question: "Will I have the same cleaner each time?",
    answer: "We prioritize consistency. You'll typically have the same cleaner or team for each visit, so they learn your home and preferences."
  },
  {
    question: "How do I save with recurring service?",
    answer: "Weekly service saves 20%, bi-weekly saves 15%, and monthly saves 10% compared to one-time cleaning rates. The more frequent, the bigger the discount."
  },
  {
    question: "Are your cleaners background checked?",
    answer: "Yes, every team member undergoes thorough background checks. We're also fully insured with $2M liability coverage and bonded for your protection."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const cleaningTasks = [
  {
    section: "Every Visit",
    icon: "fa-check-double",
    tasks: [
      "Vacuum all floors and carpets",
      "Mop hard floors",
      "Dust surfaces and furniture",
      "Clean and sanitize bathrooms",
      "Clean kitchen counters and appliances",
      "Empty trash bins",
      "Make beds",
      "Wipe mirrors and glass"
    ]
  },
  {
    section: "Kitchen Focus",
    icon: "fa-kitchen-set",
    tasks: [
      "Wipe down countertops",
      "Clean stovetop and exterior",
      "Microwave interior and exterior",
      "Sink scrubbed and sanitized",
      "Appliance exteriors wiped",
      "Cabinet fronts cleaned"
    ]
  },
  {
    section: "Bathroom Focus",
    icon: "fa-bath",
    tasks: [
      "Toilet cleaned and sanitized",
      "Shower/tub scrubbed",
      "Vanity and sink cleaned",
      "Mirrors polished",
      "Floors mopped",
      "Fixtures polished"
    ]
  },
  {
    section: "Living Areas",
    icon: "fa-couch",
    tasks: [
      "Dust all surfaces",
      "Vacuum upholstery",
      "Dust blinds and windowsills",
      "Clean light switches",
      "Organize cushions",
      "Dust decor items"
    ]
  }
];

const pricingPlans = [
  {
    name: "Weekly",
    discount: "20% OFF",
    description: "Best for families, pet owners, or busy households",
    features: ["Same cleaner each week", "Priority scheduling", "Maximum savings", "Always guest-ready"],
    popular: false
  },
  {
    name: "Bi-Weekly",
    discount: "15% OFF",
    description: "Most popular - perfect balance of clean and cost",
    features: ["Consistent cleaner", "Flexible scheduling", "Great savings", "Maintains cleanliness"],
    popular: true
  },
  {
    name: "Monthly",
    discount: "10% OFF",
    description: "Ideal for smaller homes or light maintenance",
    features: ["Thorough monthly reset", "Budget-friendly", "Easy scheduling", "Refreshes your space"],
    popular: false
  }
];

const benefits = [
  {
    icon: "fa-clock",
    title: "Reclaim Your Time",
    description: "Stop spending weekends cleaning. We handle it so you can enjoy life."
  },
  {
    icon: "fa-heart",
    title: "Healthier Home",
    description: "Regular cleaning reduces allergens, dust, and bacteria for a healthier environment."
  },
  {
    icon: "fa-smile",
    title: "Less Stress",
    description: "Come home to a clean house every time. No more cleaning guilt or overwhelm."
  },
  {
    icon: "fa-piggy-bank",
    title: "Save Money",
    description: "Regular maintenance extends the life of carpets, floors, and fixtures."
  },
  {
    icon: "fa-users",
    title: "Always Guest-Ready",
    description: "Unexpected visitors? No problem. Your home is always presentable."
  },
  {
    icon: "fa-leaf",
    title: "Eco-Friendly Options",
    description: "Green cleaning products available upon request for sensitive households."
  }
];

const serviceAreas = [
  { name: "Huntsville", link: "/huntsville-cleaning" },
  { name: "Madison", link: "/madison-cleaning" },
  { name: "Athens", link: "/athens-cleaning" },
  { name: "Birmingham", link: "/birmingham-cleaning" },
  { name: "Mountain Brook", link: "/mountain-brook-cleaning" },
  { name: "Muscle Shoals", link: "/muscle-shoals-cleaning" },
  { name: "Florence", link: "/florence-cleaning" },
  { name: "Nashville", link: "/nashville-cleaning" },
  { name: "West Nashville", link: "/west-nashville-cleaning" }
];
---

<BaseLayout title={title} description={description}>
  <SchemaMarkup type="organization" />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-br from-white to-gray-50">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4">
            <span class="text-[#FFA985] font-semibold">
              <i class="fas fa-calendar-check mr-2"></i>Save Up to 20% with Recurring Service
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-[#333333]">
            Professional <span class="gold-gradient">Regular Cleaning</span> Services
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Keep your home consistently clean with our reliable recurring cleaning service. Weekly, bi-weekly, or monthly visits tailored to your lifestyle and budget. Never come home to a messy house again.
          </p>
          <div class="flex flex-wrap gap-4 mb-8">
            <div class="flex items-center text-gray-700">
              <i class="fas fa-check-circle text-[#FFA985] mr-2"></i>
              <span>Same Cleaner Each Visit</span>
            </div>
            <div class="flex items-center text-gray-700">
              <i class="fas fa-check-circle text-[#FFA985] mr-2"></i>
              <span>Flexible Scheduling</span>
            </div>
            <div class="flex items-center text-gray-700">
              <i class="fas fa-check-circle text-[#FFA985] mr-2"></i>
              <span>No Contracts Required</span>
            </div>
          </div>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="tel:2568261100" class="btn-primary px-8 py-4 rounded-full text-lg font-semibold text-center shadow-lg">
              <i class="fas fa-phone mr-2"></i>Call 256-826-1100
            </a>
            <a href="/contact" class="btn-secondary px-8 py-4 rounded-full text-lg font-semibold text-center">
              Get Free Quote
            </a>
          </div>
        </div>

        <!-- Pricing Card -->
        <div class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-[#333333] mb-2">Regular Cleaning Pricing</h3>
            <p class="text-gray-600">Affordable plans for every budget</p>
          </div>

          <div class="space-y-4 mb-6">
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
              <div>
                <h4 class="font-bold text-[#333333]">Small Home</h4>
                <p class="text-sm text-gray-600">Up to 1,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $176</span>
              </div>
            </div>

            <div class="flex justify-between items-center p-4 bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl border-2 border-[#FFA985]">
              <div>
                <h4 class="font-bold text-[#333333]">Medium Home</h4>
                <p class="text-sm text-gray-600">1,500 - 2,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $281</span>
                <p class="text-xs text-gray-600">Most Popular</p>
              </div>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
              <div>
                <h4 class="font-bold text-[#333333]">Large Home</h4>
                <p class="text-sm text-gray-600">2,500 - 4,000 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $436</span>
              </div>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
              <div>
                <h4 class="font-bold text-[#333333]">XL Home</h4>
                <p class="text-sm text-gray-600">4,000+ sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $656</span>
              </div>
            </div>
          </div>

          <div class="bg-green-50 border border-green-200 rounded-xl p-4 mb-6">
            <p class="text-green-800 text-sm text-center">
              <i class="fas fa-tag mr-2"></i>
              <strong>Weekly = 20% OFF</strong> | Bi-Weekly = 15% OFF | Monthly = 10% OFF
            </p>
          </div>

          <a href="/contact" class="btn-primary w-full py-4 rounded-lg text-lg font-semibold text-center block shadow-lg">
            Start Your Regular Service
          </a>
          <p class="text-center text-xs text-gray-500 mt-3">
            <i class="fas fa-ban mr-1"></i> No long-term contracts required
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-8 px-6 bg-gray-50">
    <div class="container mx-auto">
      <TrustBadges variant="full" showGuarantee={true} />
    </div>
  </section>

  <!-- Pricing Plans -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Choose Your <span class="gold-gradient">Cleaning Schedule</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Pick the frequency that works for your lifestyle. All plans include our full regular cleaning service.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {pricingPlans.map(plan => (
          <div class={`bg-white rounded-2xl p-8 shadow-lg border-2 ${plan.popular ? 'border-[#FFA985] relative' : 'border-gray-200'} hover:shadow-xl transition-shadow`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] text-white px-4 py-1 rounded-full text-sm font-bold">
                  Most Popular
                </span>
              </div>
            )}
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-[#333333] mb-2">{plan.name}</h3>
              <div class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-bold mb-3">
                {plan.discount}
              </div>
              <p class="text-gray-600 text-sm">{plan.description}</p>
            </div>
            <ul class="space-y-3 mb-8">
              {plan.features.map(feature => (
                <li class="flex items-center text-gray-700">
                  <i class="fas fa-check text-[#FFA985] mr-3"></i>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <a href="/contact" class={`w-full py-3 rounded-lg text-center block font-semibold ${plan.popular ? 'btn-primary' : 'btn-secondary'}`}>
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          What's <span class="gold-gradient">Included</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Every regular cleaning visit covers all the essentials to keep your home fresh and tidy
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {cleaningTasks.map(room => (
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
              <i class={`fas ${room.icon} text-white text-xl`}></i>
            </div>
            <h3 class="text-xl font-bold mb-4 text-[#333333]">{room.section}</h3>
            <ul class="space-y-2">
              {room.tasks.map(task => (
                <li class="flex items-start text-gray-600 text-sm">
                  <i class="fas fa-check text-[#FFA985] mr-2 mt-1 flex-shrink-0"></i>
                  <span>{task}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Benefits of <span class="gold-gradient">Regular Cleaning</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          More than just a clean home - it's a lifestyle upgrade
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {benefits.map(benefit => (
          <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200 hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
              <i class={`fas ${benefit.icon} text-white text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold mb-3 text-[#333333]">{benefit.title}</h3>
            <p class="text-gray-600">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          How It <span class="gold-gradient">Works</span>
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="space-y-8">
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl flex-shrink-0">1</div>
          <div>
            <h3 class="text-xl font-bold text-[#333333] mb-2">Book Your First Clean</h3>
            <p class="text-gray-600">Call us or fill out our online form. We'll discuss your home, preferences, and schedule a time that works for you.</p>
          </div>
        </div>
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl flex-shrink-0">2</div>
          <div>
            <h3 class="text-xl font-bold text-[#333333] mb-2">Initial Deep Clean (Recommended)</h3>
            <p class="text-gray-600">We start with a deep clean to establish a baseline. This makes regular maintenance more effective and efficient.</p>
          </div>
        </div>
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl flex-shrink-0">3</div>
          <div>
            <h3 class="text-xl font-bold text-[#333333] mb-2">Regular Visits Begin</h3>
            <p class="text-gray-600">Your assigned cleaner arrives on schedule. Same person, same day, same great results every time.</p>
          </div>
        </div>
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl flex-shrink-0">4</div>
          <div>
            <h3 class="text-xl font-bold text-[#333333] mb-2">Enjoy Your Clean Home</h3>
            <p class="text-gray-600">Come home to a consistently clean, fresh-smelling home. No more weekend cleaning sessions!</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Regular Cleaning <span class="gold-gradient">Service Areas</span>
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 max-w-4xl mx-auto mb-8">
        {serviceAreas.map(area => (
          <a href={area.link} class="bg-white rounded-xl p-4 shadow-md border border-gray-200 text-center hover:border-[#FFA985] hover:shadow-lg transition group">
            <i class="fas fa-map-marker-alt text-[#FFA985] mb-2"></i>
            <p class="font-semibold text-[#333333] group-hover:text-[#FFA985] transition">{area.name}</p>
          </a>
        ))}
      </div>

      <div class="text-center">
        <p class="text-gray-600">
          <i class="fas fa-phone text-[#FFA985] mr-2"></i>
          Don't see your area? Call <a href="tel:2568261100" class="text-[#FFA985] font-semibold hover:underline">256-826-1100</a>
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Regular Cleaning <span class="gold-gradient">FAQs</span>
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer" onclick="this.classList.toggle('active')">
            <div class="flex justify-between items-center">
              <h4 class="font-bold text-[#333333] pr-4">{faq.question}</h4>
              <i class="fas fa-chevron-down text-[#FFA985] faq-icon flex-shrink-0"></i>
            </div>
            <div class="faq-answer">
              <p class="text-gray-600 mt-4">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 px-6 bg-gradient-to-br from-[#FFA985]/10 to-gray-100">
    <div class="container mx-auto max-w-4xl text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-[#333333]">
        Ready for a <span class="gold-gradient">Consistently Clean Home</span>?
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Start your regular cleaning service today and reclaim your weekends
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6 mb-8">
        <a href="tel:2568261100" class="btn-primary px-12 py-5 rounded-full text-xl font-semibold inline-block shadow-lg">
          <i class="fas fa-phone mr-2"></i>Call 256-826-1100
        </a>
        <a href="/contact" class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg font-semibold px-8 py-5 bg-white border-2 border-gray-300 rounded-full shadow-md">
          <i class="fas fa-envelope mr-2"></i>Get Free Quote
        </a>
      </div>
      <p class="text-gray-600">
        <i class="fas fa-clock text-[#FFA985] mr-2"></i>
        Most quotes replied to within 2 hours
      </p>
    </div>
  </section>

  <Footer />
</BaseLayout>
