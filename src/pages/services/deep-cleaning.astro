---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SchemaMarkup from "../../components/SchemaMarkup.astro";
import TrustBadges from "../../components/TrustBadges.astro";
import Icon from "../../components/Icon.astro";

const title = "Deep Cleaning Services | Valley Clean Team";
const description =
  "Top-to-bottom deep cleaning in Alabama & Tennessee. Baseboards, cabinets, fans & more. Veteran-owned, insured, same-day available.";

// Service schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Deep Cleaning Service",
  description:
    "Comprehensive top-to-bottom deep cleaning service for homes. Includes detailed cleaning of all rooms, baseboards, ceiling fans, windows, cabinets, and hard-to-reach areas.",
  provider: {
    "@type": "LocalBusiness",
    name: "The Valley Clean Team",
    telephone: "256-826-1100",
    email: "hello@thevalleycleanteam.com",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Huntsville",
      addressRegion: "AL",
      addressCountry: "US",
    },
  },
  areaServed: [
    { "@type": "State", name: "Alabama" },
    { "@type": "State", name: "Tennessee" },
  ],
  serviceType: "Deep Cleaning",
  offers: {
    "@type": "Offer",
    priceSpecification: {
      "@type": "PriceSpecification",
      price: "175",
      priceCurrency: "USD",
      minPrice: "175",
    },
    availability: "https://schema.org/InStock",
  },
};

// FAQ Schema - condensed for optimal word count
const faqs = [
  {
    question: "How long does a deep cleaning take?",
    answer:
      "A typical deep cleaning takes 3-6 hours depending on home size. A 2,000 sq ft home usually takes 4-5 hours.",
  },
  {
    question: "How much does deep cleaning cost?",
    answer:
      "Deep cleaning starts at $276 for homes up to 1,500 sq ft. Medium homes (1,500-2,500 sq ft) start at $381, and larger homes are priced accordingly. We provide free quotes tailored to your needs.",
  },
  {
    question:
      "What's the difference between deep cleaning and regular cleaning?",
    answer:
      "Regular cleaning maintains surfaces. Deep cleaning tackles built-up grime, hard-to-reach spots like baseboards, ceiling fans, and behind appliances.",
  },
  {
    question: "How often should I get a deep cleaning?",
    answer:
      "We recommend every 3-6 months. Homes with pets, children, or allergy sufferers benefit from quarterly deep cleans.",
  },
  {
    question: "Do I need to be home during cleaning?",
    answer:
      "No, many clients provide key or code access. We're fully insured, bonded, and background checked.",
  },
  {
    question: "Do you bring your own supplies?",
    answer:
      "Yes! We bring all professional-grade supplies and equipment. We can accommodate product preferences or allergies.",
  },
  {
    question: "Can you do same-day deep cleaning?",
    answer:
      "Yes! Call 256-826-1100 as early as possible for same-day availability.",
  },
  {
    question: "What's your satisfaction guarantee?",
    answer:
      "100% satisfaction guaranteed. Not happy? Contact us within 24 hours and we'll re-clean the areas we missed at no charge.",
  },
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};

// Comprehensive checklist data organized by room
const checklistData = [
  {
    section: "All Rooms",
    icon: "home",
    tasks: [
      "Remove cobwebs",
      "Empty trash",
      "Sweep/vacuum floors (carpet + hard surfaces)",
      "Mop floors (hard surfaces)",
      "Dust shelves",
      "Wet wipe windows & blinds",
      "Wipe & clean mirrors",
      "Wipe & clean light switches",
      "Clean glass surfaces",
      "Hand detail baseboards",
      "Dust reachable ceiling fans & vents",
      "Dust furniture/lamps",
    ],
  },
  {
    section: "Kitchen",
    icon: "kitchen-set",
    tasks: [
      "Inside/outside of microwave oven",
      "Clean backsplash",
      "Exterior of trash can",
      "Outside of stove hood",
      "Clean stovetop",
      "Countertops",
      "Clean sink & chrome",
      "Pantry floor & door",
      "Top of refrigerator",
      "Tables and chairs",
      "Outside of appliances",
    ],
  },
  {
    section: "Bathrooms",
    icon: "bath",
    tasks: [
      "Clean shower",
      "Clean tub",
      "Polish faucets",
      "Clean sinks",
      "Clean toilet and toilet area",
      "Clean counters",
      "Dust ledges",
      "Exterior of cabinets and drawers",
      "Dust doors & door frames",
      "Vacuum rugs",
    ],
  },
  {
    section: "Bedrooms",
    icon: "bed",
    tasks: [
      "Make beds (change linen if available)",
      "Vacuum rugs",
      "Exterior of cabinets and drawers",
      "Dust ledges",
      "Dust doors & door frames",
    ],
  },
  {
    section: "Laundry Room",
    icon: "shirt",
    tasks: [
      "Dust and wipe outside of washer & dryer",
      "Clean sinks",
      "Vacuum rugs",
      "Countertops",
      "Dust ledges",
      "Dust doors & door frames",
    ],
  },
  {
    section: "Dining Room",
    icon: "utensils",
    tasks: ["Dust ledges", "Tables & chairs", "Dust doors & door frames"],
  },
  {
    section: "Living Room",
    icon: "couch",
    tasks: [
      "Dust ledges",
      "Exterior of cabinets & drawers",
      "Dust doors & door frames",
    ],
  },
  {
    section: "Office",
    icon: "briefcase",
    tasks: [
      "Dust ledges",
      "Vacuum rugs",
      "Exterior of cabinets & drawers",
      "Dust doors & door frames",
    ],
  },
];

// Extra/Add-on services
const extraServices = [
  "Wash dishes",
  "Laundry service",
  "Organizing & decluttering",
];

const commonProblems = [
  {
    icon: "spider",
    problem: "Cobwebs & Dust Buildup",
    solution:
      "We eliminate cobwebs from every corner and hidden spot, from ceiling fans to baseboards.",
  },
  {
    icon: "bacteria",
    problem: "Bathroom Grime & Mildew",
    solution:
      "Soap scum, hard water stains, and mildew removed. Grout scrubbed, fixtures descaled.",
  },
  {
    icon: "wind",
    problem: "Dust Allergies",
    solution:
      "We remove dust from vents, fans, and blinds to improve your home's air quality.",
  },
  {
    icon: "utensils",
    problem: "Kitchen Grease",
    solution:
      "Grease buildup on cabinets, range hoods, and appliances eliminated with our degreasing techniques.",
  },
];

const processSteps = [
  {
    number: 1,
    title: "Schedule Your Clean",
    description:
      "Book online or call us. We'll confirm your appointment and provide a clear quote.",
    icon: "calendar-check",
  },
  {
    number: 2,
    title: "Top-Down Approach",
    description:
      "We clean ceiling to floor, room by room, ensuring maximum efficiency.",
    icon: "arrow-down-long",
  },
  {
    number: 3,
    title: "Detail Work",
    description:
      "Baseboards hand-detailed, blinds wet-wiped, light switches sanitized.",
    icon: "magnifying-glass",
  },
  {
    number: 4,
    title: "Bathroom Deep Clean",
    description:
      "Toilets, showers, sinks scrubbed and sanitized. Grout addressed, fixtures polished.",
    icon: "bath",
  },
  {
    number: 5,
    title: "Kitchen Transformation",
    description:
      "Appliances cleaned, cabinets wiped, counters sanitized, stovetop degreased.",
    icon: "kitchen-set",
  },
  {
    number: 6,
    title: "Final Quality Check",
    description:
      "Complete inspection before we leave. Your satisfaction is guaranteed.",
    icon: "check-double",
  },
];

const serviceAreas = [
  { name: "Huntsville", link: "/locations/huntsville/deep-cleaning" },
  { name: "Madison", link: "/locations/madison/deep-cleaning" },
  { name: "Athens", link: "/locations/athens/deep-cleaning" },
  { name: "Florence", link: "/locations/florence/deep-cleaning" },
  { name: "Decatur", link: "/locations/decatur/deep-cleaning" },
  { name: "Muscle Shoals", link: "/locations/muscle-shoals/deep-cleaning" },
  { name: "Birmingham", link: "/locations/birmingham/deep-cleaning" },
  { name: "Mountain Brook", link: "/locations/mountain-brook/deep-cleaning" },
  { name: "Nashville", link: "/locations/nashville/deep-cleaning" },
  { name: "West Nashville", link: "/locations/west-nashville/deep-cleaning" },
];
---

<BaseLayout title={title} description={description}>
  <SchemaMarkup type="organization" />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  
  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-br from-white to-gray-50">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div
            class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4"
          >
            <span class="text-[#FFA985] font-semibold">
              <Icon name="sparkles" class="w-5 h-5 mr-2" />Our Most
              Comprehensive Service
            </span>
          </div>
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-[#333333]"
          >
            Professional <span class="gold-gradient">Deep Cleaning</span> Services
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            A thorough, top-to-bottom clean that tackles every corner, crevice,
            and forgotten spot in your home. Our deep cleaning goes far beyond
            regular cleaning to restore your home to pristine condition.
          </p>
          <div class="flex flex-wrap gap-4 mb-8">
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Same-Day Available</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>100% Satisfaction Guaranteed</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Veteran Owned</span>
            </div>
          </div>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="tel:2568261100"
              class="btn-primary px-8 py-4 rounded-full text-lg font-semibold text-center shadow-lg"
            >
              <Icon name="phone" class="w-5 h-5 mr-2" />Call 256-826-1100
            </a>
            <a
              href="/#hero-quote-form"
              class="btn-secondary px-8 py-4 rounded-full text-lg font-semibold text-center"
            >
              Get Free Quote
            </a>
          </div>
        </div>

        <!-- Pricing Card -->
        <div
          class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20"
        >
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-[#333333] mb-2">
              Deep Cleaning Pricing
            </h3>
            <p class="text-gray-600">Transparent pricing, no hidden fees</p>
          </div>

          <div class="space-y-4 mb-6">
            <div
              class="flex justify-between items-center p-4 bg-gray-50 rounded-xl"
            >
              <div>
                <h4 class="font-bold text-[#333333]">Small Home</h4>
                <p class="text-sm text-gray-600">Up to 1,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $276</span>
              </div>
            </div>

            <div
              class="flex justify-between items-center p-4 bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl border-2 border-[#FFA985]"
            >
              <div>
                <h4 class="font-bold text-[#333333]">Medium Home</h4>
                <p class="text-sm text-gray-600">1,500 - 2,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $381</span>
                <p class="text-xs text-gray-600">Most Popular</p>
              </div>
            </div>

            <div
              class="flex justify-between items-center p-4 bg-gray-50 rounded-xl"
            >
              <div>
                <h4 class="font-bold text-[#333333]">Large Home</h4>
                <p class="text-sm text-gray-600">2,500 - 4,000 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $561</span>
              </div>
            </div>

            <div
              class="flex justify-between items-center p-4 bg-gray-50 rounded-xl"
            >
              <div>
                <h4 class="font-bold text-[#333333]">XL Home</h4>
                <p class="text-sm text-gray-600">4,000+ sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $781</span>
              </div>
            </div>
          </div>

          <div class="bg-green-50 border border-green-200 rounded-xl p-4 mb-6">
            <p class="text-green-800 text-sm text-center">
              <Icon name="tag" class="w-5 h-5 mr-2" />
              <strong>Save 15-20%</strong> when you book recurring cleaning after
              your deep clean!
            </p>
          </div>

          <a
            href="/#hero-quote-form"
            class="btn-primary w-full py-4 rounded-lg text-lg font-semibold text-center block shadow-lg"
          >
            Get Your Free Quote
          </a>
          <p class="text-center text-xs text-gray-500 mt-3">
            <Icon name="clock" class="w-5 h-5 mr-1" /> Response within 2 hours
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-8 px-6 bg-gray-50">
    <div class="container mx-auto">
      <TrustBadges variant="full" showGuarantee={true} />
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          What's <span class="gold-gradient">Included</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our deep cleaning service is comprehensive and thorough. Here's
          everything we tackle in your home - room by room.
        </p>
      </div>

      <!-- Room-by-Room Checklist Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          checklistData.map((room) => (
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
              <div class="w-14 h-14 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
                <Icon name={room.icon} class="w-6 h-6 text-white" />
              </div>
              <h3 class="text-xl font-bold mb-4 text-[#333333]">
                {room.section}
              </h3>
              <ul class="space-y-2">
                {room.tasks.map((task) => (
                  <li class="flex items-start text-gray-600 text-sm">
                    <Icon
                      name="check"
                      class="w-5 h-5 text-[#FFA985] mr-2 mt-1 flex-shrink-0"
                    />
                    <span>{task}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <!-- Task Count Summary -->
      <div class="mt-8 text-center">
        <p class="text-gray-600">
          <span class="font-bold text-[#FFA985] text-2xl"
            >{
              checklistData.reduce((acc, room) => acc + room.tasks.length, 0)
            }+</span
          >
          <span class="text-lg"> cleaning tasks across </span>
          <span class="font-bold text-[#FFA985] text-2xl"
            >{checklistData.length}</span
          >
          <span class="text-lg"> room types</span>
        </p>
      </div>

      <!-- Add-on Services -->
      <div
        class="mt-12 bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-2xl p-8"
      >
        <h3 class="text-2xl font-bold text-[#333333] mb-2 text-center">
          Luxury Add-On Services
        </h3>
        <p class="text-gray-600 text-center mb-6">
          Premium services available upon request for an additional fee
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-2xl mx-auto">
          {
            extraServices.map((service) => (
              <div class="bg-white rounded-xl p-4 text-center shadow-sm hover:shadow-md transition-shadow">
                <Icon name="plus-circle" class="w-5 h-5 text-[#FFA985]  mb-2" />
                <p class="font-medium text-[#333333] text-sm">{service}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Problems We Solve -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Common Problems <span class="gold-gradient">We Solve</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our deep cleaning service addresses the issues that regular cleaning
          just can't handle
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          commonProblems.map((item) => (
            <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200 hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
                <Icon name={item.icon} class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold mb-3 text-[#333333]">
                {item.problem}
              </h3>
              <p class="text-gray-600">{item.solution}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Our Deep Cleaning <span class="gold-gradient">Process</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          A systematic, thorough approach that ensures nothing is missed
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          processSteps.map((step) => (
            <div class="relative bg-white rounded-2xl p-8 shadow-md border border-gray-200">
              <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl shadow-lg">
                {step.number}
              </div>
              <div class="ml-4">
                <div class="flex items-center mb-4">
                  <Icon name={step.icon} class="w-6 h-6 text-[#FFA985] mr-3" />
                  <h3 class="text-xl font-bold text-[#333333]">{step.title}</h3>
                </div>
                <p class="text-gray-600">{step.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Why Choose <span class="gold-gradient">The Valley Clean Team</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          What sets our deep cleaning service apart from the rest
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center"
          >
            <Icon name="medal" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Veteran Owned</h3>
          <p class="text-gray-600">Military precision in every clean.</p>
        </div>

        <div class="text-center">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center"
          >
            <Icon name="shield-alt" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Fully Insured</h3>
          <p class="text-gray-600">$2 million liability coverage and bonded.</p>
        </div>

        <div class="text-center">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center"
          >
            <Icon name="user-check" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">
            Background Checked
          </h3>
          <p class="text-gray-600">Every team member thoroughly vetted.</p>
        </div>

        <div class="text-center">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center"
          >
            <Icon name="redo" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">
            Satisfaction Guaranteed
          </h3>
          <p class="text-gray-600">
            Not happy? We re-clean the areas we missed for free.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Availability -->
  <section class="py-16 px-6 bg-gradient-to-r from-[#FFA985] to-[#FFC67D]">
    <div class="container mx-auto">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <div class="flex items-center mb-4">
            <Icon name="bolt" class="w-8 h-8 text-white mr-4" />
            <h2 class="text-3xl md:text-4xl font-bold text-white">
              Need Emergency Deep Cleaning?
            </h2>
          </div>
          <p class="text-white/90 text-lg mb-6">
            Unexpected guests? Last-minute showing? Same-day service available.
            Call early for best availability.
          </p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-2xl p-8 shadow-xl">
            <p class="text-gray-600 mb-2">Call Now for Same-Day Service</p>
            <a
              href="tel:2568261100"
              class="text-4xl md:text-5xl font-bold text-[#FFA985] hover:text-[#FF8C61] transition block mb-4"
            >
              256-826-1100
            </a>
            <p class="text-gray-600 text-sm">Available Mon-Fri, 9am-5pm</p>
            <p class="text-gray-600 text-sm">Sat & Sun by appointment</p>
          </div>
        </div>
      </div>
    </div>
  </section>

