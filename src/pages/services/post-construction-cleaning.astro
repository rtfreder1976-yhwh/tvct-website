---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import SchemaMarkup from '../../components/SchemaMarkup.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import Icon from '../../components/Icon.astro';

const title = "Post-Construction Cleaning | The Valley Clean Team";
const description = "Post-construction cleaning for new builds & renovations in AL & TN. We remove dust & debris to make your space move-in ready.";

// Service schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Post-Construction Cleaning Service",
  "description": "Professional post-construction and renovation cleaning service. Removes construction dust, debris, paint splatters, adhesive residue, and makes new builds or remodeled spaces move-in ready.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "256-826-1100",
    "email": "info@thevalleycleanteam.com"
  },
  "areaServed": [
    { "@type": "State", "name": "Alabama" },
    { "@type": "State", "name": "Tennessee" }
  ],
  "serviceType": "Post-Construction Cleaning",
  "offers": {
    "@type": "Offer",
    "priceSpecification": {
      "@type": "PriceSpecification",
      "price": "300",
      "priceCurrency": "USD",
      "minPrice": "300"
    },
    "availability": "https://schema.org/InStock"
  }
};

// FAQ Schema - condensed for optimal word count
const faqs = [
  {
    question: "What is post-construction cleaning?",
    answer: "A specialized deep clean after construction or renovation. Removes dust, debris, paint splatters, and adhesive residue to make spaces move-in ready."
  },
  {
    question: "How much does it cost?",
    answer: "Starts at $526 for homes up to 1,500 sq ft. Medium homes (1,500-2,500 sq ft) start at $684, and larger homes are priced accordingly. Custom quotes based on project scope."
  },
  {
    question: "When should I schedule?",
    answer: "After all construction is complete, including painting and flooring. Major debris should be removed by your contractor first."
  },
  {
    question: "How long does it take?",
    answer: "4-10 hours depending on size. Single room: 3-4 hours. Full new build: 8-12 hours or multiple visits."
  },
  {
    question: "Do you remove paint splatters?",
    answer: "Yes! We remove paint overspray, dried splatters, sticker residue, adhesive marks, and grout haze safely."
  },
  {
    question: "Do you clean windows?",
    answer: "Yes, included. We remove construction film, dust, paint splatters from all windows, tracks, and sills."
  },
  {
    question: "Do you clean inside cabinets?",
    answer: "Yes. Construction dust gets everywhere. We clean all interior cabinet and closet surfaces."
  },
  {
    question: "Can you clean small renovations?",
    answer: "Yes! From single bathroom remodels to full home builds. We clean projects of all sizes."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

// Post-construction specific checklist
const checklistData = [
  {
    section: "Dust & Debris Removal",
    icon: "fa-broom",
    tasks: [
      "Remove all construction dust from surfaces",
      "Vacuum and clean all flooring",
      "Clean air vents and returns (remove dust buildup)",
      "Wipe down all walls (remove dust film)",
      "Clean all ceiling fans and light fixtures",
      "Remove dust from window blinds and treatments",
      "Detail clean all baseboards",
      "Clean door frames and doors",
      "Vacuum/clean all closets and storage areas"
    ]
  },
  {
    section: "Windows & Glass",
    icon: "fa-window-maximize",
    tasks: [
      "Remove protective film from windows",
      "Clean all interior window glass",
      "Remove paint splatters from glass",
      "Clean window tracks and sills",
      "Remove sticker residue from glass",
      "Clean all mirrors",
      "Clean glass doors and shower enclosures",
      "Clean skylights (if accessible)"
    ]
  },
  {
    section: "Kitchen",
    icon: "fa-kitchen-set",
    tasks: [
      "Clean inside all cabinets and drawers",
      "Remove dust from cabinet tops",
      "Clean all appliances (inside and out)",
      "Remove protective film from appliances",
      "Clean and polish countertops",
      "Clean sink and polish fixtures",
      "Degrease range hood and vents",
      "Clean backsplash and tile grout",
      "Remove adhesive residue from surfaces"
    ]
  },
  {
    section: "Bathrooms",
    icon: "fa-bath",
    tasks: [
      "Clean and sanitize all fixtures",
      "Remove grout haze from tile",
      "Clean inside all cabinets",
      "Polish all faucets and hardware",
      "Clean toilets thoroughly",
      "Clean shower/tub (remove construction residue)",
      "Clean mirrors and glass",
      "Remove caulk residue",
      "Clean exhaust fans"
    ]
  },
  {
    section: "Surfaces & Details",
    icon: "fa-spray-can-sparkles",
    tasks: [
      "Remove paint splatters from all surfaces",
      "Clean all light switches and outlets",
      "Remove sticker residue from fixtures",
      "Clean all hardware (handles, knobs)",
      "Wipe down all shelving",
      "Clean fireplace exterior (if applicable)",
      "Detail clean stair railings",
      "Clean garage entry areas"
    ]
  },
  {
    section: "Floors",
    icon: "fa-broom",
    tasks: [
      "Sweep and vacuum all floors",
      "Mop hard surface floors",
      "Remove adhesive/grout from floors",
      "Clean tile grout lines",
      "Vacuum all carpeted areas",
      "Clean floor registers and vents",
      "Detail clean corners and edges",
      "Clean under appliances (if accessible)"
    ]
  }
];

// Extra services for post-construction
const extraServices = [
  { name: "Garage cleaning", icon: "fa-warehouse" },
  { name: "Exterior debris removal", icon: "fa-truck-pickup" }
];

const commonProblems = [
  {
    icon: "fa-cloud-meatball",
    problem: "Fine Construction Dust",
    solution: "Dust settles on every surface, inside cabinets, even in HVAC systems. We remove it all."
  },
  {
    icon: "fa-paint-roller",
    problem: "Paint Splatters",
    solution: "We safely remove dried paint from floors, windows, fixtures, and hardware."
  },
  {
    icon: "fa-tape",
    problem: "Adhesive Residue",
    solution: "We remove all protective film and sticker residue from new surfaces."
  },
  {
    icon: "fa-border-all",
    problem: "Grout Haze",
    solution: "We remove cloudy grout haze to reveal your new tile's true beauty."
  }
];

const processSteps = [
  {
    number: 1,
    title: "Project Consultation",
    description: "Tell us about your project. We'll quote based on size and type.",
    icon: "fa-comments"
  },
  {
    number: 2,
    title: "Debris Assessment",
    description: "We assess dust, paint, and residue areas to plan our approach.",
    icon: "fa-clipboard-list"
  },
  {
    number: 3,
    title: "Rough Clean",
    description: "Remove heavy debris, vacuum dust layers, clear surfaces.",
    icon: "fa-broom"
  },
  {
    number: 4,
    title: "Detail Cleaning",
    description: "Wipe surfaces, clean cabinets, remove splatters, clean windows.",
    icon: "fa-magnifying-glass"
  },
  {
    number: 5,
    title: "Final Polish",
    description: "Fixtures polished, floors cleaned, surfaces inspected.",
    icon: "fa-sparkles"
  },
  {
    number: 6,
    title: "Final Quality Check",
    description: "Complete walk-through. Move-in ready guaranteed.",
    icon: "fa-check-double"
  }
];

const serviceAreas = [
  { name: "Huntsville", link: "/huntsville-cleaning" },
  { name: "Madison", link: "/madison-cleaning" },
  { name: "Athens", link: "/athens-cleaning" },
  { name: "Birmingham", link: "/birmingham-cleaning" },
  { name: "Mountain Brook", link: "/mountain-brook-cleaning" },
  { name: "Muscle Shoals", link: "/muscle-shoals-cleaning" },
  { name: "Florence", link: "/florence-cleaning" },
  { name: "Nashville", link: "/nashville-cleaning" },
  { name: "West Nashville", link: "/west-nashville-cleaning" }
];

const projectTypes = [
  { type: "New Home Builds", icon: "fa-house-chimney", description: "Complete cleaning for newly constructed homes" },
  { type: "Kitchen Remodels", icon: "fa-kitchen-set", description: "Post-renovation cleaning for kitchen updates" },
  { type: "Bathroom Renovations", icon: "fa-bath", description: "Detailed cleaning after bathroom remodels" },
  { type: "Room Additions", icon: "fa-plus", description: "Cleaning for new additions to existing homes" },
  { type: "Commercial Build-Outs", icon: "fa-building", description: "Office, retail, and commercial space cleaning" },
  { type: "Basement Finishing", icon: "fa-stairs", description: "Post-construction cleaning for finished basements" }
];
---

<BaseLayout title={title} description={description}>
  <SchemaMarkup type="organization" />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-br from-white to-gray-50">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4">
            <span class="text-[#FFA985] font-semibold">
              <Icon name="hard-hat" class="w-5 h-5 mr-2" />Construction Complete? We're Next.
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-[#333333]">
            Post-Construction <span class="gold-gradient">Cleaning Services</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Your construction project is finished, but the dust, debris, and residue remain. Our specialized post-construction cleaning removes every trace of construction work - making your new or renovated space truly move-in ready.
          </p>

          <!-- Key Benefits -->
          <div class="grid grid-cols-2 gap-4 mb-8">
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>New Builds & Renovations</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Paint & Adhesive Removal</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Inside Cabinets & Vents</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Move-In Ready Results</span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a href="tel:2568261100" class="btn-primary px-8 py-4 rounded-full text-lg font-semibold text-center shadow-lg">
              <Icon name="phone" class="w-5 h-5 mr-2" />Call 256-826-1100
            </a>
            <a href="/contact" class="btn-secondary px-8 py-4 rounded-full text-lg font-semibold text-center">
              Get Free Quote
            </a>
          </div>
        </div>

        <!-- Pricing Card -->
        <div class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-[#333333] mb-2">Post-Construction Pricing</h3>
            <p class="text-gray-600">Custom quotes based on project scope</p>
          </div>

          <div class="space-y-4 mb-6">
            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
              <div>
                <h4 class="font-bold text-[#333333]">Small Home</h4>
                <p class="text-sm text-gray-600">Up to 1,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $526</span>
              </div>
            </div>

            <div class="flex justify-between items-center p-4 bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl border-2 border-[#FFA985]">
              <div>
                <h4 class="font-bold text-[#333333]">Medium Home</h4>
                <p class="text-sm text-gray-600">1,500 - 2,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $684</span>
                <p class="text-xs text-gray-600">Most Common</p>
              </div>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
              <div>
                <h4 class="font-bold text-[#333333]">Large Home</h4>
                <p class="text-sm text-gray-600">2,500 - 4,000 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $954</span>
              </div>
            </div>

            <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
              <div>
                <h4 class="font-bold text-[#333333]">XL Home</h4>
                <p class="text-sm text-gray-600">4,000+ sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">From $1,284</span>
              </div>
            </div>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4 mb-6">
            <p class="text-yellow-800 text-sm text-center">
              <Icon name="info-circle" class="w-5 h-5 mr-2" />
              <strong>Pricing varies</strong> based on square footage, construction type, and debris level
            </p>
          </div>

          <a href="/contact" class="btn-primary w-full py-4 rounded-lg text-lg font-semibold text-center block shadow-lg">
            Get Your Custom Quote
          </a>
          <p class="text-center text-xs text-gray-500 mt-3">
            <Icon name="clock" class="w-5 h-5 mr-1" /> Response within 2 hours
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Types We Clean -->
  <section class="py-12 px-6 bg-gray-50">
    <div class="container mx-auto">
      <h2 class="text-2xl font-bold text-center text-[#333333] mb-8">Projects We Clean</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {projectTypes.map(project => (
          <div class="bg-white rounded-xl p-4 text-center shadow-md border border-gray-200 hover:border-[#FFA985] transition-colors">
            <div class="w-12 h-12 mx-auto rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-3">
              <i class={`fas ${project.icon} text-white`}></i>
            </div>
            <h4 class="font-bold text-[#333333] text-sm mb-1">{project.type}</h4>
            <p class="text-xs text-gray-600">{project.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-8 px-6">
    <div class="container mx-auto">
      <TrustBadges variant="full" showGuarantee={true} />
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          What's <span class="gold-gradient">Included</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Post-construction cleaning requires specialized techniques. We address every type of construction residue to make your space truly clean.
        </p>
      </div>

      <!-- Checklist Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {checklistData.map(room => (
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
              <i class={`fas ${room.icon} text-white text-xl`}></i>
            </div>
            <h3 class="text-xl font-bold mb-4 text-[#333333]">{room.section}</h3>
            <ul class="space-y-2">
              {room.tasks.map(task => (
                <li class="flex items-start text-gray-600 text-sm">
                  <Icon name="check" class="w-5 h-5 text-[#FFA985] mr-2 mt-1 flex-shrink-0" />
                  <span>{task}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Task Count Summary -->
      <div class="mt-8 text-center">
        <p class="text-gray-600">
          <span class="font-bold text-[#FFA985] text-2xl">{checklistData.reduce((acc, room) => acc + room.tasks.length, 0)}+</span>
          <span class="text-lg"> specialized cleaning tasks to make your space </span>
          <span class="font-bold text-[#FFA985]">move-in ready</span>
        </p>
      </div>

      <!-- Extra Services -->
      <div class="mt-12 bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
        <h3 class="text-2xl font-bold text-[#333333] mb-2 text-center">Available Add-On Services</h3>
        <p class="text-gray-600 text-center mb-6">Complete your project with these extras</p>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {extraServices.map(service => (
            <div class="bg-gray-50 rounded-xl p-4 text-center hover:bg-[#FFA985]/10 transition-colors">
              <i class={`fas ${service.icon} text-[#FFA985] text-xl mb-2`}></i>
              <p class="font-medium text-[#333333] text-sm">{service.name}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Problems We Solve -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Common Problems <span class="gold-gradient">We Solve</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Construction leaves behind more than just the finished project
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {commonProblems.map(item => (
          <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200 hover:shadow-xl transition-shadow">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
              <i class={`fas ${item.icon} text-white text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold mb-3 text-[#333333]">{item.problem}</h3>
            <p class="text-gray-600">{item.solution}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Our Post-Construction <span class="gold-gradient">Process</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          A systematic approach designed to tackle construction mess effectively
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {processSteps.map(step => (
          <div class="relative bg-white rounded-2xl p-8 shadow-md border border-gray-200">
            <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl shadow-lg">
              {step.number}
            </div>
            <div class="ml-4">
              <div class="flex items-center mb-4">
                <i class={`fas ${step.icon} text-[#FFA985] text-2xl mr-3`}></i>
                <h3 class="text-xl font-bold text-[#333333]">{step.title}</h3>
              </div>
              <p class="text-gray-600">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Why Choose <span class="gold-gradient">The Valley Clean Team</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Trusted by contractors, builders, and homeowners across Alabama and Tennessee
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="medal" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Veteran Owned</h3>
          <p class="text-gray-600">Military precision for systematic, thorough work.</p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="hard-hat" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Construction Experience</h3>
          <p class="text-gray-600">We know what contractors leave behind.</p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="shield-alt" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Fully Insured</h3>
          <p class="text-gray-600">$2 million liability coverage.</p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center">
            <Icon name="redo" class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold mb-3 text-[#333333]">Satisfaction Guaranteed</h3>
          <p class="text-gray-600">Not satisfied? We re-clean for free.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Availability -->
  <section class="py-16 px-6 bg-gradient-to-r from-[#FFA985] to-[#FFC67D]">
    <div class="container mx-auto">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <div class="flex items-center mb-4">
            <Icon name="calendar-check" class="w-8 h-8 text-white  mr-4" />
            <h2 class="text-3xl md:text-4xl font-bold text-white">
              Project Finishing Soon?
            </h2>
          </div>
          <p class="text-white/90 text-lg mb-6">
            Closing date moved up? Need to pass inspection? Flexible scheduling to meet your construction deadlines. Call early to secure your date.
          </p>
        </div>
        <div class="text-center">
