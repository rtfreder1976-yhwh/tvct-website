---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SchemaMarkup from "../../components/SchemaMarkup.astro";
import TrustBadges from "../../components/TrustBadges.astro";
import Icon from "../../components/Icon.astro";
import QuoteForm from "../../components/QuoteForm.astro";

const title = "Luxury Move In/Out Cleaning | The Valley Clean Team";
const description =
  "Experience a seamless transition with our white-glove move in/out cleaning. Perfect for securing deposits and ensuring your new home is a pristine sanctuary.";

// Service schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Move Out Cleaning & Move In Service",
  description:
    "White-glove move out cleaning and end of tenancy service. We serve as your professional concierge for seamless moves.",
  provider: {
    "@type": "LocalBusiness",
    name: "The Valley Clean Team",
    telephone: "256-826-1100",
    email: "hello@thevalleycleanteam.com",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Huntsville",
      addressRegion: "AL",
      addressCountry: "US",
    },
  },
  areaServed: [
    { "@type": "State", name: "Alabama" },
    { "@type": "State", name: "Tennessee" },
  ],
  serviceType: "Move In/Out Cleaning",
  offers: {
    "@type": "Offer",
    priceSpecification: {
      "@type": "PriceSpecification",
      price: "199",
      priceCurrency: "USD",
      minPrice: "199",
    },
    availability: "https://schema.org/InStock",
  },
};

// FAQ Schema - AEO optimized
const faqs = [
  {
    question: "Do you guarantee I will get my security deposit back?",
    answer:
      "We operate with a 'Landlord Approval' mindset. While the final decision rests with your property manager, our 95%+ success rate speaks for itself. We meticulously document our work with before/after photos to arm you with proof of perfection. If an issue arises? We return within 24 hours—on us.",
  },
  {
    question: "What differentiates your Move-In/Out service?",
    answer:
      "This isn't just a surface wipe-down. It's a restoration. We tackle the areas that define 'clean' to an inspector: inside ovens, tracking down hidden dust in cabinets, scrubbing baseboards, and ensuring appliances look showroom-ready. It is our most comprehensive package.",
  },
  {
    question: "How is pricing determined?",
    answer:
      "We value transparency. Pricing begins at $351 for smaller homes and scales with square footage. This flat-rate model ensures you know exactly what your investment covers—no surprises, just peace of mind.",
  },
  {
    question: "What if I need a last-minute miracle?",
    answer:
      "Moving is unpredictable. We reserve slots for 'emergency' cleans when possible. Call us directly at 256-826-1100, and we will do everything in our power to accommodate your timeline.",
  },
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};

// Checklist Data
const checklistData = [
  {
    section: "Living & General",
    icon: "home",
    tasks: [
      "Remove cobwebs from corners & ceilings",
      "Vacuum & mop all floors",
      "Dust shelves, ledges, & surfaces",
      "Detail blind cleaning",
      "Windows & sills wiped down",
      "Mirrors polished streak-free",
      "Light switches cleaned",
      "Glass surfaces polished",
      "Baseboards detailed",
      "Ceiling fans & vents dusted",
      "Doors & frames wiped",
      "Light fixtures cleaned",
      "Spot clean walls",
    ],
  },
  {
    section: "Kitchen Sanctuary",
    icon: "kitchen-set",
    tasks: [
      "Deep clean refrigerator (Inside/Out)",
      "Degrease & clean Oven (Inside/Out)",
      "Microwave detailed",
      "Backsplash degreased",
      "Stove hood exterior",
      "Stovetop & drip pans scrubbed",
      "Countertops sanitized",
      "Sink scrubbed & chrome polished",
      "Cabinets & drawers (Inside/Out)",
      "Pantry organization wipe-down",
      "Top of refrigerator dusted",
      "Dishwasher interior cleaned",
    ],
  },
  {
    section: "Bathrooms",
    icon: "bath",
    tasks: [
      "Shower tile & grout deep clean",
      "Tub scrubbed to shine",
      "Faucets & fixtures polished",
      "Sinks sanitized",
      "Toilet detailed (Inside/Out/Base)",
      "Countertops & vanity cleaned",
      "Ledges dusted",
      "Cabinets & drawers (Inside/Out)",
      "Medicine cabinet detailed",
      "Doors & frames wiped",
      "Exhaust fan dusted",
      "Mirrors polished",
    ],
  },
  {
    section: "Bedrooms",
    icon: "bed",
    tasks: [
      "Floors vacuumed/mopped",
      "Closets detailed (Inside/Out)",
      "Shelves & rods wiped",
      "Cabinet exteriors cleaned",
      "Ledges & sills dusted",
      "Doors & frames wiped",
      "Light fixtures cleaned",
      "Spot clean walls",
    ],
  },
  {
    section: "Laundry Area",
    icon: "shirt",
    tasks: [
      "Washer & dryer exterior wiped",
      "Behind units cleaned (if accessible)",
      "Sinks scrubbed",
      "Countertops wiped",
      "Ledges dusted",
      "Cabinets (Inside/Out)",
      "Doors & frames wiped",
    ],
  },
];

// Extra services for move in/out
const extraServices = [
  { name: "Garage Sweep", icon: "warehouse" },
  { name: "Paint Touch-ups", icon: "paint-roller" },
];

const commonProblems = [
  {
    icon: "money-bill-wave",
    problem: "Deposit Security",
    solution:
      "We don't just 'clean'; we document. Our landlord-grade standards leverage before/after photos to help secure your deposit return.",
  },
  {
    icon: "clock",
    problem: "Timeline Pressure",
    solution:
      "Movers running late? Closing date pushed up? We adapt to your schedule, offering same-day flexible slots when you need a buffer.",
  },
  {
    icon: "broom",
    problem: "The previous 'Mess'",
    solution:
      "Walking into a dirty 'new' home is heartbreaking. We erase the previous tenant's footprint so your sanctuary feels truly yours.",
  },
];

const processSteps = [
  {
    number: 1,
    title: "Consult & Quote",
    description:
      "Share your timeline and square footage. We provide a transparent, flat-rate investment quote instantly.",
    icon: "calendar-check",
  },
  {
    number: 2,
    title: "The White-Glove Crew",
    description:
      "Our vetted, uniformed professionals arrive with professional-grade tools, ready to transform your space.",
    icon: "user-tie", // changed icon
  },
  {
    number: 3,
    title: "Deep Impact Clean",
    description:
      "We attack the hidden grime—inside ovens, behind toilets, and deep in cabinet corners.",
    icon: "kitchen-set",
  },
  {
    number: 4,
    title: "Sanctuary Polish",
    description:
      "Bathrooms and kitchens are sanitized to hospital-grade standards for your peace of mind.",
    icon: "bath",
  },
  {
    number: 5,
    title: "Detail Perfection",
    description:
      "Baseboards, sills, and fixtures. We sweat the small stuff so your inspector doesn't have to.",
    icon: "magnifying-glass",
  },
  {
    number: 6,
    title: "Quality Assurance",
    description:
      "A final walkthrough ensures total perfection. We don't leave until it sparkles.",
    icon: "check-double",
  },
];

const serviceAreas = [
  { name: "Huntsville", link: "/locations/huntsville/move-out-cleaning" },
  { name: "Madison", link: "/locations/madison/move-out-cleaning" },
  { name: "Athens", link: "/locations/athens/move-out-cleaning" },
  { name: "Florence", link: "/locations/florence/move-out-cleaning" },
  { name: "Decatur", link: "/locations/decatur/move-out-cleaning" },
  { name: "Muscle Shoals", link: "/locations/muscle-shoals/move-out-cleaning" },
  { name: "Birmingham", link: "/locations/birmingham/move-out-cleaning" },
  {
    name: "Mountain Brook",
    link: "/locations/mountain-brook/move-out-cleaning",
  },
  { name: "Nashville", link: "/locations/nashville/move-out-cleaning" },
  {
    name: "West Nashville",
    link: "/locations/west-nashville/move-out-cleaning",
  },
];
---

<BaseLayout ogImage="https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802af8fa3bc14e23e27e.jpg" title={title} description={description}>
  <SchemaMarkup type="organization" />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-br from-white to-gray-50">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div
            class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4"
          >
            <span class="text-[#FFA985] font-semibold">
              <Icon name="star" class="w-5 h-5 mr-2" />
              The Professional Neighbor Standard
            </span>
          </div>
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-[#333333]"
          >
            A Flawless Transition for <span class="gold-gradient"
              >Your Next Chapter</span
            >
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Moving is more than just boxes; it's a new beginning. Whether
            securing your deposit or preparing a pristine sanctuary, our
            white-glove service handles the heavy lifting so you can focus on
            the journey.
          </p>

          <!-- Key Benefits -->
          <div class="grid grid-cols-2 gap-4 mb-8">
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>100% Deposit Security Goal</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Inside Cabinets & Appliances</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Same-Day Concierge Service</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Full Photo Documentation</span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="tel:2568261100"
              class="btn-primary px-8 py-4 rounded-full text-lg font-semibold text-center shadow-lg transform hover:translate-y-[-2px] transition"
            >
              <Icon name="phone" class="w-5 h-5 mr-2" />Call 256-826-1100
            </a>
            <a
              href="/#hero-quote-form"
              class="btn-secondary px-8 py-4 rounded-full text-lg font-semibold text-center"
            >
              Get Custom Quote
            </a>
          </div>
        </div>

        <!-- Pricing Card -->
        <div
          class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20"
        >
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-[#333333] mb-2">
              Transparent Pricing
            </h3>
            <p class="text-gray-600">All-inclusive. No hidden fees.</p>
          </div>

          <div class="space-y-4 mb-6">
            <div
              class="flex justify-between items-center p-4 bg-gray-50 rounded-xl"
            >
              <div>
                <h4 class="font-bold text-[#333333]">Small Home</h4>
                <p class="text-sm text-gray-600">Up to 1,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">$351</span>
              </div>
            </div>

            <div
              class="flex justify-between items-center p-4 bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl border-2 border-[#FFA985] relative overflow-hidden"
            >
              <div
                class="absolute top-0 right-0 bg-[#FFA985] text-white text-xs px-2 py-0.5 rounded-bl-lg"
              >
                Most Popular
              </div>
              <div>
                <h4 class="font-bold text-[#333333]">Medium Home</h4>
                <p class="text-sm text-gray-600">1,500 - 2,500 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">$456</span>
              </div>
            </div>

            <div
              class="flex justify-between items-center p-4 bg-gray-50 rounded-xl"
            >
              <div>
                <h4 class="font-bold text-[#333333]">Large Home</h4>
                <p class="text-sm text-gray-600">2,500 - 4,000 sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">$636</span>
              </div>
            </div>

            <div
              class="flex justify-between items-center p-4 bg-gray-50 rounded-xl"
            >
              <div>
                <h4 class="font-bold text-[#333333]">XL Home</h4>
                <p class="text-sm text-gray-600">4,000+ sq ft</p>
              </div>
              <div class="text-right">
                <span class="text-2xl font-bold text-[#FFA985]">$856</span>
              </div>
            </div>
          </div>

          <div class="bg-blue-50 border border-blue-200 rounded-xl p-4 mb-6">
            <p class="text-blue-800 text-sm text-center">
              <Icon name="info-circle" class="w-5 h-5 mr-2" />
              <strong>Value Inclusive:</strong> Inside oven, fridge & cabinets are
              Standard.
            </p>
          </div>

          <QuoteForm
            formId="move-in-out-cleaning-quote-form"
            serviceName="Move In/Out Cleaning"
            source="Service Page - Move In/Out Cleaning"
            subtitle="Secure Your Spot"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Move Out vs Move In Comparison -->
  <section class="py-12 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div
          class="bg-white rounded-2xl p-8 shadow-lg border-2 border-[#FFA985]/30 transform transition hover:scale-[1.02]"
        >
          <div class="flex items-center mb-4">
            <div
              class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mr-4"
            >
              <Icon name="door-open" class="w-5 h-5 text-white" />
            </div>
            <h3 class="text-2xl font-bold text-[#333333]">
              The "Graceful Exit"
            </h3>
          </div>
          <p class="text-gray-600 mb-4">
            Moving out? Leave with dignity and your full deposit.
          </p>
          <ul class="space-y-2">
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-[#FFA985] mr-2 mt-1" />
              <span>Inspection-Ready Standards</span>
            </li>
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-[#FFA985] mr-2 mt-1" />
              <span>Photo Proof Provided</span>
            </li>
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-[#FFA985] mr-2 mt-1" />
              <span>24hr Re-Clean Guarantee</span>
            </li>
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-[#FFA985] mr-2 mt-1" />
              <span>Quick Turnaround</span>
            </li>
          </ul>
        </div>

        <div
          class="bg-white rounded-2xl p-8 shadow-lg border-2 border-green-200 transform transition hover:scale-[1.02]"
        >
          <div class="flex items-center mb-4">
            <div
              class="w-12 h-12 rounded-full bg-gradient-to-br from-green-400 to-green-600 flex items-center justify-center mr-4"
            >
              <Icon name="home" class="w-5 h-5 text-white" />
            </div>
            <h3 class="text-2xl font-bold text-[#333333]">The "Fresh Start"</h3>
          </div>
          <p class="text-gray-600 mb-4">
            Moving in? Step into a home that feels brand new.
          </p>
          <ul class="space-y-2">
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-green-500 mr-2 mt-1" />
              <span>Erase Previous Tenant Traces</span>
            </li>
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-green-500 mr-2 mt-1" />
              <span>Hospital-Grade Sanitization</span>
            </li>
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-green-500 mr-2 mt-1" />
              <span>Every Cabinet & Ledge Dusted</span>
            </li>
            <li class="flex items-start text-gray-700">
              <Icon name="check" class="w-5 h-5 text-green-500 mr-2 mt-1" />
              <span>Unpack Stress-Free</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-8 px-6">
    <div class="container mx-auto">
      <TrustBadges variant="full" showGuarantee={true} />
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Inclusions: <span class="gold-gradient">The White Glove Promise</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          True clean goes beyond the surface. We thoroughly clean the hidden
          areas most services skip.
        </p>
      </div>

      <!-- Room-by-Room Checklist Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          checklistData.map((room) => (
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
              <div class="w-14 h-14 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
                <Icon name={room.icon} class="w-6 h-6 text-white" />
              </div>
              <h3 class="text-xl font-bold mb-4 text-[#333333]">
                {room.section}
              </h3>
              <ul class="space-y-2">
                {room.tasks.map((task) => (
                  <li class="flex items-start text-gray-600 text-sm">
                    <Icon
                      name="check"
                      class="w-5 h-5 text-[#FFA985] mr-2 mt-1 flex-shrink-0"
                    />
                    <span>{task}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <!-- Task Count Summary -->
      <div class="mt-8 text-center">
        <p class="text-gray-600">
          <span class="font-bold text-[#FFA985] text-2xl"
            >{
              checklistData.reduce((acc, room) => acc + room.tasks.length, 0)
            }+</span
          >
          <span class="text-lg"> checkpoints for </span>
          <span class="font-bold text-[#FFA985]">guaranteed satisfaction</span>
        </p>
      </div>

      <!-- Extra Services -->
      <div
        class="mt-12 bg-white rounded-2xl p-8 shadow-lg border border-gray-200"
      >
        <h3 class="text-2xl font-bold text-[#333333] mb-2 text-center">
          Concierge Add-Ons
        </h3>
        <p class="text-gray-600 text-center mb-6">
          Tailor your service with these finishing touches.
        </p>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {
            extraServices.map((service) => (
              <div class="bg-gray-50 rounded-xl p-4 text-center hover:bg-[#FFA985]/10 transition-colors">
                <Icon name={service.icon} class="w-6 h-6 text-[#FFA985] mb-2" />
                <p class="font-medium text-[#333333] text-sm">{service.name}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Problems We Solve -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          We Solve <span class="gold-gradient">Moving Headaches</span>
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          You handle the boxes. We'll handle the burden of cleaning.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          commonProblems.map((item) => (
            <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200 hover:shadow-xl transition-shadow">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center mb-4">
                <Icon name={item.icon} class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold mb-3 text-[#333333]">
                {item.problem}
              </h3>
              <p class="text-gray-600">{item.solution}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          The <span class="gold-gradient">Transformation</span> Process
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Systematic, efficient, and thorough. Here is how we engineer your
          fresh start.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          processSteps.map((step) => (
            <div class="relative bg-white rounded-2xl p-8 shadow-md border border-gray-200">
              <div class="absolute -top-4 -left-4 w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-xl shadow-lg">
                {step.number}
              </div>
              <div class="ml-4">
                <div class="flex items-center mb-4">
                  <Icon name={step.icon} class="w-8 h-8 text-[#FFA985] mr-3" />
                  <h3 class="text-xl font-bold text-[#333333]">{step.title}</h3>
                </div>
                <p class="text-gray-600">{step.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 px-6 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Why Locals Choose <span class="gold-gradient"
            >The Valley Clean Team</span
          >
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We bring military precision and neighborly care to every home in
          Alabama & Tennessee.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
