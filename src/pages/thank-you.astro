---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";

const metadata = {
    title: "Thank You - The Valley Clean Team",
    description: "Thank you for contacting The Valley Clean Team.",
};
---

<BaseLayout title={metadata.title} description={metadata.description}>
    <section
        class="min-h-[60vh] flex items-center justify-center py-20 px-6 bg-gray-50"
    >
        <div
            class="bg-white rounded-2xl p-10 md:p-16 max-w-2xl mx-auto shadow-sm border border-gray-100 text-center"
        >
            <div
                class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6"
            >
                <Icon name="check" class="w-10 h-10 text-green-600" />
            </div>

            <h1
                class="font-playfair text-4xl md:text-5xl font-bold mb-6 text-[#333333]"
            >
                Thank You!
            </h1>

            <p class="text-xl text-gray-600 mb-10 leading-relaxed">
                We have received your submission successfully. Our team will
                review your information and get back to you as soon as possible.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/"
                    class="bg-[#FFA985] text-white px-8 py-4 rounded-xl font-bold transition hover:bg-[#ff9566] text-center"
                >
                    Return Home
                </a>
                <a
                    href="/services"
                    class="border-2 border-[#FFA985] text-[#FFA985] hover:bg-orange-50 px-8 py-4 rounded-xl font-bold transition text-center"
                >
                    Explore Our Services
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
