---
import BaseLayout from "../layouts/BaseLayout.astro";
import TestimonialsSection from "../components/TestimonialsSection.astro";
import ReviewBadges from "../components/ReviewBadges.astro";
import BeforeAfterGallery from "../components/BeforeAfterGallery.astro";
import ServiceAreaMap from "../components/ServiceAreaMap.astro";
import TrustBadges from "../components/TrustBadges.astro";
import ResponseTimeStats from "../components/ResponseTimeStats.astro";
import Icon from "../components/Icon.astro";
import QuoteForm from "../components/QuoteForm.astro";
---

<BaseLayout
  title="The Valley Clean Team - Luxury Home & Office Cleaning"
  description="Professional luxury cleaning in Alabama & Tennessee. Veteran-owned, insured, bonded. 130+ 5-star reviews. Same-day service. Call 256-826-1100."
  ogImage="https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png"
>
  <link
    slot="preload"
    rel="preload"
    href="/images/hero-400w.avif"
    as="image"
    fetchpriority="high"
    type="image/avif"
    media="(max-width: 1023px)"
  />
  <link
    slot="preload"
    rel="preload"
    href="/images/hero-1280w.avif"
    as="image"
    fetchpriority="high"
    type="image/avif"
    media="(min-width: 1024px)"
  />

  <!-- Hero Section -->
  <section class="pt-24 pb-20 px-6 relative overflow-hidden">
    <!-- Hero Background Image - Self-hosted for optimal cache -->
    <div class="absolute inset-0 z-0">
      <img
        src="/images/hero-1280w.avif"
        alt="Professional cleaning team providing luxury home cleaning services"
        class="w-full h-full object-cover opacity-75"
        loading="eager"
        fetchpriority="high"
        decoding="async"
        width="1280"
        height="720"
      />
      <div
        class="absolute inset-0 bg-gradient-to-b from-white/80 via-white/60 to-white"
      >
      </div>
    </div>

    <div class="container mx-auto relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center mb-20">
        <!-- Left Column - Headline & Contact -->
        <div class="text-center lg:text-left">
          <!-- Hero Image - Mobile visible, desktop accent (LCP element on mobile) -->
          <div class="mb-6 lg:hidden">
            <img
              src="/images/hero-400w.avif"
              alt="The Valley Clean Team - Professional home cleaning"
              class="w-full max-w-md mx-auto rounded-2xl shadow-xl"
              loading="eager"
              fetchpriority="high"
              decoding="sync"
              width="400"
              height="267"
            />
          </div>
          <!-- Mobile CTA Button - Above the fold -->
          <div class="lg:hidden mb-6">
            <a
              href="#hero-quote-form"
              onclick="document.getElementById('hero-quote-form').scrollIntoView({ behavior: 'smooth' }); return false;"
              class="btn-primary w-full py-4 rounded-full text-lg font-semibold shadow-lg flex items-center justify-center"
            >
              <Icon name="calendar-check" class="w-5 h-5 mr-2" />
              Get Your Free Quote
            </a>
            <p class="text-center text-sm text-gray-500 mt-2">
              <Icon name="clock" class="w-4 h-4 inline mr-1" />
              Response within 2 hours
            </p>
          </div>
          <h1
            class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight text-[#333333]"
          >
            Luxury Cleaning Services in <span class="gold-gradient"
              >Alabama & Tennessee</span
            >
          </h1>
          <p class="text-xl md:text-2xl text-gray-700 mb-6">
            Our luxury concierge model matches homes with vetted, insured
            cleaners who meet strict white glove standards.
          </p>
          <p class="text-lg text-gray-600 mb-8">
            The Valley Clean Team takes care of your home while you focus on
            what matters. Our professional team ensures a spotless space,
            tailored to your needs.
          </p>
          <div
            class="flex flex-col sm:flex-row items-center lg:items-start justify-center lg:justify-start space-y-4 sm:space-y-0 sm:space-x-6"
          >
            <a
              href="tel:2568261100"
              class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg"
            >
              <Icon name="phone" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="font-semibold">256-826-1100</span>
            </a>
            <a
              href="mailto:hello@thevalleycleanteam.com"
              class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg"
            >
              <Icon name="envelope" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="font-semibold">Email Us</span>
            </a>
          </div>
          <p class="text-sm text-gray-500 mt-4">
            âš¡ Most quotes replied to within 2 hours
          </p>
        </div>

        <!-- Right Column - Quick Quote Form -->
        <div
          class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20"
        >
          <h2 class="text-2xl font-bold text-[#333333] mb-2 text-center">
            Get Your Free Quote
          </h2>
          <p class="text-gray-600 mb-6 text-center">Fill out in 60 seconds</p>
          <QuoteForm formId="hero-quote-form" source="Homepage Hero Form" />
        </div>
      </div>

      <!-- Stats -->
      <div class="grid md:grid-cols-3 gap-8 max-w-3xl mx-auto">
        <div class="text-center">
          <div class="text-4xl font-bold text-[#FFA985] mb-2">20+</div>
          <p class="text-gray-600">Years Cleaning</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-[#FFA985] mb-2">1047+</div>
          <p class="text-gray-600">Cleanings Completed</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-[#FFA985] mb-2">130+</div>
          <p class="text-gray-600">5-Star Reviews</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges Section -->
  <TrustBadges variant="section" />

  <!-- Review Badges -->
  <section class="py-12 px-6 bg-gray-50">
    <div class="container mx-auto max-w-4xl">
      <ReviewBadges />
    </div>
  </section>

  <!-- Divider -->
  <div class="container mx-auto px-6 mb-20 mt-16">
    <div class="text-center">
      <Icon
        name="star"
        class="w-8 h-8 text-[#FFA985] mb-4 mx-auto"
        fill="currentColor"
      />
      <h3 class="text-2xl md:text-3xl font-semibold text-[#333333] mb-6">
        Why Settle for Less? Discover the Luxury of a Spotless Environment
        Today!
      </h3>
      <a
        href="/contact"
        class="btn-primary px-8 py-3 rounded-full text-lg font-semibold inline-block"
      >
        Schedule Your Cleaning
      </a>
    </div>
  </div>

  <!-- Services Section -->
  <section id="services" class="py-20 px-6 bg-gray-50 content-visibility-auto">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Services
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">
          Discover Our Premium Cleaning Services Tailored for Every Need
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Service Card 1 -->
        <a
          href="/services/deep-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692f521d2b865ec42a6b89f0.png"
              alt="Professional deep cleaning service in Huntsville, Birmingham and Nashville - baseboards, appliances, and detailed cleaning"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Deep Cleaning
            </h3>
            <p class="text-gray-600">
              A thorough, top-to-bottom clean for those hard-to-reach areas,
              restoring your home's sparkle.
            </p>
          </div>
        </a>

        <!-- Service Card 2 -->
        <a
          href="/services/regular-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029f8fa3b30bb23e26e.webp"
              alt="Weekly and biweekly recurring house cleaning and maid service in Alabama and Tennessee"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Regular Maid Service
            </h3>
            <p class="text-gray-600">
              Comprehensive maid service and recurring cleaning to ensure your
              home remains pristine and fresh.
            </p>
          </div>
        </a>

        <!-- Service Card 3 -->
        <a
          href="/services/move-in-out-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802af8fa3bc14e23e27e.jpg"
              alt="Move in and move out cleaning service - get your security deposit back"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Move In/Out Cleaning
            </h3>
            <p class="text-gray-600">
              Move stress-free with our meticulous cleaning services tailored
              for new or vacated spaces.
            </p>
          </div>
        </a>

        <!-- Service Card 4 -->
        <a
          href="/services/green-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920e7465408c65fe8150cac.jpg"
              alt="Eco-friendly green cleaning service using non-toxic products safe for kids and pets"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Green Cleaning
            </h3>
            <p class="text-gray-600">
              Eco-friendly cleaning using safe, sustainable products for a
              healthier home and environment.
            </p>
          </div>
        </a>

        <!-- Service Card 5 -->
        <a
          href="/services/airbnb-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920e69af8fa3b6226330f2d.jpg"
              alt="Fast turnaround Airbnb and vacation rental cleaning with guest-ready presentation"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Vacation Rental Cleaning
            </h3>
            <p class="text-gray-600">
              Impress your guests with a sparkling clean vacation rental, ready
              for a 5-star review every time.
            </p>
          </div>
        </a>

        <!-- Service Card 6 -->
        <a
          href="/services/post-construction-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692080293937416b676d02dd.webp"
              alt="Post-construction and renovation cleaning - dust removal and move-in ready prep"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Post-Construction Cleaning
            </h3>
            <p class="text-gray-600">
              Transform your newly built or renovated space from construction
              zone to move-in ready with our thorough post-construction
              cleaning.
            </p>
          </div>
        </a>

        <!-- Service Card 7 -->
        <a
          href="/services/commercial-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802939374189b36d02dc.webp"
              alt="Commercial and office cleaning services for businesses in Alabama and Tennessee"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Commercial/Office Cleaning
            </h3>
            <p class="text-gray-600">
              Ensure your workspace remains spotless and professional with our
              detailed commercial and office cleaning services.
            </p>
          </div>
        </a>

        <!-- Service Card 8 -->
        <a
          href="/services/event-cleaning"
          class="service-card bg-white rounded-2xl overflow-hidden border border-gray-200 shadow-md block hover:shadow-lg transition-shadow"
        >
          <div class="h-64 overflow-hidden">
            <img
              src="https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto,w_400/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029a460c03aa0a6bcb1.webp"
              alt="Pre and post event cleaning for parties, weddings and special occasions"
              class="w-full h-full object-cover"
              loading="lazy"
              decoding="async"
              width="400"
              height="256"
            />
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold mb-3 text-[#333333]">
              Event Cleaning
            </h3>
            <p class="text-gray-600">
              Before, during, or after - we ensure your event space is
              immaculate for your guests and attendees.
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Quick Location Links -->
  <section class="py-16 px-6 bg-white">
    <div class="container mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-3 text-[#333333]">
          Find Cleaning Services <span class="gold-gradient">Near You</span>
        </h2>
        <p class="text-lg text-gray-600">
          We serve homes and businesses across Alabama and Tennessee
        </p>
      </div>

      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 max-w-5xl mx-auto"
      >
        <a
          href="/locations/huntsville"
          class="group bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-[#FFA985] hover:shadow-md transition text-center"
        >
          <Icon name="map-marker" class="w-6 h-6 text-[#FFA985] mx-auto mb-2" />
          <h3
            class="font-bold text-[#333333] group-hover:text-[#FFA985] transition"
          >
            Huntsville
          </h3>
          <p class="text-xs text-gray-500 mt-1">Alabama</p>
        </a>

        <a
          href="/locations/athens"
          class="group bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-[#FFA985] hover:shadow-md transition text-center"
        >
          <Icon name="map-marker" class="w-6 h-6 text-[#FFA985] mx-auto mb-2" />
          <h3
            class="font-bold text-[#333333] group-hover:text-[#FFA985] transition"
          >
            Athens
          </h3>
          <p class="text-xs text-gray-500 mt-1">Alabama</p>
        </a>

        <a
          href="/locations/florence"
          class="group bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-[#FFA985] hover:shadow-md transition text-center"
        >
          <Icon name="map-marker" class="w-6 h-6 text-[#FFA985] mx-auto mb-2" />
          <h3
            class="font-bold text-[#333333] group-hover:text-[#FFA985] transition"
          >
            Florence
          </h3>
          <p class="text-xs text-gray-500 mt-1">Alabama</p>
        </a>

        <a
          href="/locations/mountain-brook"
          class="group bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-[#FFA985] hover:shadow-md transition text-center"
        >
          <Icon name="map-marker" class="w-6 h-6 text-[#FFA985] mx-auto mb-2" />
          <h3
            class="font-bold text-[#333333] group-hover:text-[#FFA985] transition"
          >
            Mountain Brook
          </h3>
          <p class="text-xs text-gray-500 mt-1">Alabama</p>
        </a>

        <a
          href="/locations/nashville"
          class="group bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-[#FFA985] hover:shadow-md transition text-center"
        >
          <Icon name="map-marker" class="w-6 h-6 text-[#FFA985] mx-auto mb-2" />
          <h3
            class="font-bold text-[#333333] group-hover:text-[#FFA985] transition"
          >
            Nashville
          </h3>
          <p class="text-xs text-gray-500 mt-1">Tennessee</p>
        </a>
      </div>

      <div class="text-center mt-8">
        <a
          href="/services"
          class="text-[#FFA985] font-semibold hover:underline inline-flex items-center"
        >
          View All Services
          <Icon name="arrow-right" class="w-4 h-4 ml-1" />
        </a>
      </div>
    </div>
  </section>

  <!-- Before/After Gallery -->
  <BeforeAfterGallery />

  <!-- Testimonials Section -->
  <TestimonialsSection />

  <!-- Service Area Map -->
  <ServiceAreaMap />

  <!-- Response Time Stats -->
  <ResponseTimeStats />

  <!-- FAQ Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Frequently Asked Questions
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">
          Everything you need to know about our cleaning services
        </p>
      </div>

      <div class="space-y-4">
        <div
          class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer"
          onclick="this.classList.toggle('active')"
        >
          <div class="flex justify-between items-center">
            <h3 class="font-bold text-[#333333] pr-4">
              How much does house cleaning cost?
            </h3>
            <Icon
              name="chevron-down"
              class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0"
            />
          </div>
          <div class="faq-answer">
            <p class="text-gray-600 mt-4">
              Our pricing depends on your home's size and the service type.
              Regular cleaning starts at $99, deep cleaning from $175, and
              move-in/out cleaning from $225. We provide free, no-obligation
              quotes tailored to your specific needs. Call 256-826-1100 for an
              instant estimate.
            </p>
          </div>
        </div>

        <div
          class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer"
          onclick="this.classList.toggle('active')"
        >
          <div class="flex justify-between items-center">
            <h3 class="font-bold text-[#333333] pr-4">
              What areas do you serve?
            </h3>
            <Icon
              name="chevron-down"
              class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0"
            />
          </div>
          <div class="faq-answer">
            <p class="text-gray-600 mt-4">
              We proudly serve Alabama (Huntsville, Birmingham, Madison, Athens,
              Mountain Brook, Muscle Shoals) and Tennessee (Nashville, West
              Nashville, Belle Meade, Green Hills). If you're unsure if we cover
              your area, give us a call at 256-826-1100!
            </p>
          </div>
        </div>

        <div
          class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer"
          onclick="this.classList.toggle('active')"
        >
          <div class="flex justify-between items-center">
            <h3 class="font-bold text-[#333333] pr-4">
              Are your cleaners background checked and insured?
            </h3>
            <Icon
              name="chevron-down"
              class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0"
            />
          </div>
          <div class="faq-answer">
            <p class="text-gray-600 mt-4">
              Absolutely. Every member of The Valley Clean Team is thoroughly
              background checked, professionally trained, and fully insured with
              $2 million in liability coverage. We're also bonded for your
              complete peace of mind. As a veteran-owned business, we hold
              ourselves to the highest standards.
            </p>
          </div>
        </div>

        <div
          class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer"
          onclick="this.classList.toggle('active')"
        >
          <div class="flex justify-between items-center">
            <h3 class="font-bold text-[#333333] pr-4">
              Do you offer same-day cleaning service?
            </h3>
            <Icon
              name="chevron-down"
              class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0"
            />
          </div>
          <div class="faq-answer">
            <p class="text-gray-600 mt-4">
              Yes! We offer same-day cleaning service based on availability. For
              same-day requests, we recommend calling us directly at
              256-826-1100 as early as possible. We'll do our best to
              accommodate urgent cleaning needs.
            </p>
          </div>
        </div>

        <div
          class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer"
          onclick="this.classList.toggle('active')"
        >
          <div class="flex justify-between items-center">
            <h3 class="font-bold text-[#333333] pr-4">
              Do you bring your own cleaning supplies?
            </h3>
            <Icon
              name="chevron-down"
              class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0"
            />
          </div>
          <div class="faq-answer">
