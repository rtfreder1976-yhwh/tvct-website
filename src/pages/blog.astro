---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Cleaning Tips & Advice - The Valley Clean Team Blog">
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 px-6 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 text-[#333333]">
        Cleaning Tips & <span class="gold-gradient">Expert Advice</span>
      </h1>
      <div class="section-divider"></div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Discover professional cleaning tips, home maintenance guides, and expert advice to keep your space spotless.
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 px-6">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Blog Content -->
        <div class="lg:col-span-2">
          <!-- Featured Post -->
          <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-lg mb-12 border border-gray-200">
            <div class="h-96 bg-gradient-to-br from-[#FFA985]/20 to-gray-100 flex items-center justify-center">
              <i class="fas fa-sparkles text-[#FFA985] text-9xl opacity-50"></i>
            </div>
            <div class="p-8">
              <div class="flex items-center space-x-4 mb-4">
                <span class="category-tag">Cleaning Tips</span>
                <span class="text-gray-500 text-sm">
                  <i class="far fa-calendar mr-2"></i>November 15, 2024
                </span>
                <span class="text-gray-500 text-sm">
                  <i class="far fa-clock mr-2"></i>5 min read
                </span>
              </div>
              <h2 class="text-3xl font-bold mb-4 text-[#333333]">
                The Ultimate Guide to Spring Cleaning Your Home
              </h2>
              <p class="text-gray-600 mb-6 text-lg leading-relaxed">
                Spring cleaning doesn't have to be overwhelming. Learn our professional techniques for deep cleaning every room in your home efficiently. We'll cover everything from organizing strategies to the best cleaning products for each surface type.
              </p>
              <a href="#" class="inline-flex items-center text-[#FFA985] font-semibold hover:underline">
                Read Full Article
                <i class="fas fa-arrow-right ml-2"></i>
              </a>
            </div>
          </article>

          <!-- Blog Grid -->
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Blog Post 1 -->
            <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
              <div class="h-48 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 flex items-center justify-center">
                <i class="fas fa-leaf text-[#FFA985] text-6xl"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="category-tag">Green Cleaning</span>
                  <span class="text-gray-500 text-sm">Nov 12, 2024</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-[#333333]">
                  10 Eco-Friendly Cleaning Products You Need
                </h3>
                <p class="text-gray-600 mb-4">
                  Discover natural, environmentally-safe cleaning solutions that are tough on dirt but gentle on the planet.
                </p>
                <a href="#" class="text-[#FFA985] font-semibold hover:underline">
                  Read More →
                </a>
              </div>
            </article>

            <!-- Blog Post 2 -->
            <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
              <div class="h-48 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 flex items-center justify-center">
                <i class="fas fa-couch text-[#FFA985] text-6xl"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="category-tag">Home Care</span>
                  <span class="text-gray-500 text-sm">Nov 10, 2024</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-[#333333]">
                  How to Deep Clean Your Upholstery
                </h3>
                <p class="text-gray-600 mb-4">
                  Professional tips for removing stains and refreshing your furniture without damaging the fabric.
                </p>
                <a href="#" class="text-[#FFA985] font-semibold hover:underline">
                  Read More →
                </a>
              </div>
            </article>

            <!-- Blog Post 3 -->
            <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
              <div class="h-48 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 flex items-center justify-center">
                <i class="fas fa-sink text-[#FFA985] text-6xl"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="category-tag">Kitchen Tips</span>
                  <span class="text-gray-500 text-sm">Nov 8, 2024</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-[#333333]">
                  5 Kitchen Cleaning Hacks That Save Time
                </h3>
                <p class="text-gray-600 mb-4">
                  Speed up your kitchen cleaning routine with these proven professional techniques and time-savers.
                </p>
                <a href="#" class="text-[#FFA985] font-semibold hover:underline">
                  Read More →
                </a>
              </div>
            </article>

            <!-- Blog Post 4 -->
            <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
              <div class="h-48 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 flex items-center justify-center">
                <i class="fas fa-bath text-[#FFA985] text-6xl"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="category-tag">Bathroom Care</span>
                  <span class="text-gray-500 text-sm">Nov 5, 2024</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-[#333333]">
                  The Best Way to Clean Grout and Tile
                </h3>
                <p class="text-gray-600 mb-4">
                  Get your bathroom looking brand new with our step-by-step guide to deep cleaning tile and grout.
                </p>
                <a href="#" class="text-[#FFA985] font-semibold hover:underline">
                  Read More →
                </a>
              </div>
            </article>

            <!-- Blog Post 5 -->
            <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
              <div class="h-48 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 flex items-center justify-center">
                <i class="fas fa-spray-can text-[#FFA985] text-6xl"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="category-tag">DIY Solutions</span>
                  <span class="text-gray-500 text-sm">Nov 3, 2024</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-[#333333]">
                  DIY All-Purpose Cleaner Recipes
                </h3>
                <p class="text-gray-600 mb-4">
                  Make your own effective cleaning solutions using common household ingredients you already have.
                </p>
                <a href="#" class="text-[#FFA985] font-semibold hover:underline">
                  Read More →
                </a>
              </div>
            </article>

            <!-- Blog Post 6 -->
            <article class="blog-card bg-white rounded-2xl overflow-hidden shadow-md border border-gray-200">
              <div class="h-48 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 flex items-center justify-center">
                <i class="fas fa-home text-[#FFA985] text-6xl"></i>
              </div>
              <div class="p-6">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="category-tag">Moving Tips</span>
                  <span class="text-gray-500 text-sm">Nov 1, 2024</span>
                </div>
                <h3 class="text-xl font-bold mb-3 text-[#333333]">
                  Complete Move-Out Cleaning Checklist
                </h3>
                <p class="text-gray-600 mb-4">
                  Ensure you get your security deposit back with our comprehensive move-out cleaning checklist.
                </p>
                <a href="#" class="text-[#FFA985] font-semibold hover:underline">
                  Read More →
                </a>
              </div>
            </article>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <!-- Search Widget -->
          <div class="sidebar-widget">
            <h3 class="text-xl font-bold mb-4 text-[#333333]">Search Articles</h3>
            <div class="relative">
              <input type="text" placeholder="Search blog posts..." class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20">
              <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-[#FFA985]">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="sidebar-widget">
            <h3 class="text-xl font-bold mb-4 text-[#333333]">Categories</h3>
            <ul class="space-y-3">
              <li>
                <a href="#" class="flex items-center justify-between text-gray-700 hover:text-[#FFA985] transition">
                  <span><i class="fas fa-folder text-[#FFA985] mr-2"></i> Cleaning Tips</span>
                  <span class="text-gray-500 text-sm">12</span>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between text-gray-700 hover:text-[#FFA985] transition">
                  <span><i class="fas fa-folder text-[#FFA985] mr-2"></i> Green Cleaning</span>
                  <span class="text-gray-500 text-sm">8</span>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between text-gray-700 hover:text-[#FFA985] transition">
                  <span><i class="fas fa-folder text-[#FFA985] mr-2"></i> Home Care</span>
                  <span class="text-gray-500 text-sm">15</span>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between text-gray-700 hover:text-[#FFA985] transition">
                  <span><i class="fas fa-folder text-[#FFA985] mr-2"></i> Kitchen Tips</span>
                  <span class="text-gray-500 text-sm">6</span>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between text-gray-700 hover:text-[#FFA985] transition">
                  <span><i class="fas fa-folder text-[#FFA985] mr-2"></i> Bathroom Care</span>
                  <span class="text-gray-500 text-sm">9</span>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between text-gray-700 hover:text-[#FFA985] transition">
                  <span><i class="fas fa-folder text-[#FFA985] mr-2"></i> Moving Tips</span>
                  <span class="text-gray-500 text-sm">5</span>
                </a>
              </li>
            </ul>
          </div>

          <!-- Recent Posts Widget -->
          <div class="sidebar-widget">
            <h3 class="text-xl font-bold mb-4 text-[#333333]">Recent Posts</h3>
            <div class="space-y-4">
              <a href="#" class="flex items-start space-x-3 group">
                <div class="w-20 h-20 flex-shrink-0 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-lg flex items-center justify-center">
                  <i class="fas fa-sparkles text-[#FFA985] text-xl"></i>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 group-hover:text-[#FFA985] transition text-sm mb-1">
                    The Ultimate Guide to Spring Cleaning
                  </h4>
                  <span class="text-xs text-gray-500">Nov 15, 2024</span>
                </div>
              </a>
              <a href="#" class="flex items-start space-x-3 group">
                <div class="w-20 h-20 flex-shrink-0 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-lg flex items-center justify-center">
                  <i class="fas fa-leaf text-[#FFA985] text-xl"></i>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 group-hover:text-[#FFA985] transition text-sm mb-1">
                    10 Eco-Friendly Cleaning Products
                  </h4>
                  <span class="text-xs text-gray-500">Nov 12, 2024</span>
                </div>
              </a>
              <a href="#" class="flex items-start space-x-3 group">
                <div class="w-20 h-20 flex-shrink-0 bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-lg flex items-center justify-center">
                  <i class="fas fa-couch text-[#FFA985] text-xl"></i>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 group-hover:text-[#FFA985] transition text-sm mb-1">
                    Deep Clean Your Upholstery
                  </h4>
                  <span class="text-xs text-gray-500">Nov 10, 2024</span>
                </div>
              </a>
            </div>
          </div>

          <!-- CTA Widget -->
          <div class="bg-gradient-to-br from-[#FFA985]/10 to-gray-100 rounded-2xl p-6 border border-gray-200">
            <div class="text-center">
              <i class="fas fa-star text-[#FFA985] text-4xl mb-4"></i>
              <h3 class="text-xl font-bold mb-3 text-[#333333]">Need Professional Help?</h3>
              <p class="text-gray-600 mb-4">
                Let our expert team handle the cleaning while you focus on what matters most.
              </p>
              <a href="/contact" class="btn-primary px-6 py-3 rounded-full font-semibold inline-block">
                Get Free Quote
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-16 px-6 bg-gray-50">
    <div class="container mx-auto max-w-4xl text-center">
      <i class="fas fa-envelope text-[#FFA985] text-5xl mb-4"></i>
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[#333333]">
        Get Cleaning Tips Delivered to Your Inbox
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        Subscribe to our newsletter for weekly cleaning tips, exclusive offers, and home care advice.
      </p>
      <form id="newsletter-form" class="flex flex-col sm:flex-row gap-4 max-w-2xl mx-auto">
        <input type="email" name="email" placeholder="Enter your email address" class="flex-1 px-6 py-4 rounded-full border border-gray-300 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" required>
        <button type="submit" id="newsletter-submit-btn" class="btn-primary px-8 py-4 rounded-full font-semibold">
          Subscribe Now
        </button>
      </form>
      <div id="newsletter-form-message" class="hidden text-center p-4 rounded-lg mt-4 max-w-2xl mx-auto"></div>
      <p class="text-sm text-gray-500 mt-4">
        <i class="fas fa-lock mr-1"></i> We respect your privacy. Unsubscribe anytime.
      </p>
    </div>
  </section>

  <Footer />

  <script>
    document.getElementById('newsletter-form')?.addEventListener('submit', async function(e) {
      e.preventDefault();

      const submitBtn = document.getElementById('newsletter-submit-btn');
      const messageDiv = document.getElementById('newsletter-form-message');
      const form = e.target;

      const formData = {
        email: form.email?.value || '',
        source: 'Blog Newsletter Subscription',
        page_url: window.location.href
      };

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>...';

      try {
        const response = await fetch('https://u.thevalleycleanteam.com/widget/form/hvhNBpTY8bFtBgY2qJen', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        messageDiv.className = 'text-center p-4 rounded-lg bg-green-100 text-green-800';
        messageDiv.innerHTML = '<i class="fas fa-check-circle mr-2"></i>Thanks for subscribing! Check your inbox for cleaning tips.';
        messageDiv.classList.remove('hidden');
        form.reset();
      } catch (error) {
        messageDiv.className = 'text-center p-4 rounded-lg bg-red-100 text-red-800';
        messageDiv.innerHTML = '<i class="fas fa-exclamation-circle mr-2"></i>Something went wrong. Please try again.';
        messageDiv.classList.remove('hidden');
      }

      submitBtn.disabled = false;
      submitBtn.innerHTML = 'Subscribe Now';
    });
  </script>
</BaseLayout>
