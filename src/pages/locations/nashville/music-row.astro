  name: "Cleaning Services in Music Row, Nashville",
  description:
    "Premium residential and small office cleaning services for Music Row's music industry professionals. Flexible scheduling, complete discretion, and meticulous attention to detail for recording artists, producers, executives, and industry staff.",
  provider: {
    "@type": "LocalBusiness",
    name: "The Valley Clean Team",
    telephone: "615-510-1427",
    email: "hello@thevalleycleanteam.com",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Nashville",
      addressRegion: "TN",
    },
  },
  areaServed: {
    "@type": "Place",
    name: "Music Row, Nashville, TN",
    geo: {
      "@type": "GeoCoordinates",
      latitude: "36.1503",
      longitude: "-86.7976",
    },
  },
  serviceType: "Residential and Commercial Cleaning",
};

// LocalBusiness schema
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: "The Valley Clean Team - Music Row",
  description:
    "Premium cleaning services for Music Row's music industry professionals",
  telephone: "615-510-1427",
  email: "hello@thevalleycleanteam.com",
  address: {
    "@type": "PostalAddress",
    addressLocality: "Nashville",
    addressRegion: "TN",
    addressCountry: "US",
