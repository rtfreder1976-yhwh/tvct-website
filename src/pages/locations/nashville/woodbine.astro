---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = "House Cleaning in Woodbine, Nashville | Valley Clean Team";
const description = "Professional house cleaning in Woodbine, Nashville. Serving 37210, 37211. Veteran-owned, insured. Affordable rates for South Nashville homes. Free quotes!";

const faqs = [
  {
    question: "Do you provide house cleaning in Woodbine?",
    answer: "Yes! We provide comprehensive house cleaning services throughout Woodbine and the 37210/37211 zip codes, including the historic Woodbine neighborhood, Nolensville Pike corridor, and areas near the Tennessee State Fairgrounds."
  },
  {
    question: "What cleaning services do you offer in Woodbine?",
    answer: "We offer recurring maid service (weekly, biweekly, monthly), deep cleaning, move-in/move-out cleaning, and one-time cleaning for Woodbine homes and apartments."
  },
  {
    question: "How much does house cleaning cost in Woodbine?",
    answer: "Woodbine home cleaning starts at $120-$200 for standard cleaning, depending on home size and condition. We offer competitive rates and free quotes with no hidden fees."
  },
  {
    question: "Are your cleaners background-checked and insured?",
    answer: "Absolutely. Every team member passes comprehensive background checks. We carry $2M liability insurance and are fully bonded for your protection."
  },
  {
    question: "Do you clean apartments and rental properties?",
    answer: "Yes! We clean single-family homes, apartments, duplexes, and rental properties throughout Woodbine. We also offer move-in/move-out cleaning for landlords and tenants."
  },
  {
    question: "Can I get the same cleaning team each visit?",
    answer: "Yes! We assign dedicated teams to Woodbine clients. Consistency means better results because your team knows your home's specific needs."
  },
  {
    question: "Do you offer affordable cleaning options?",
    answer: "We believe quality cleaning should be accessible. We offer competitive rates, flexible scheduling, and no long-term contracts. Pay only for what you need."
  },
  {
    question: "How do I book cleaning for my Woodbine home?",
    answer: "Book online, call us at (615) 510-1427, or text us anytime. We typically respond within minutes and offer flexible scheduling."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "House Cleaning Service",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+1-615-510-1427",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Nashville",
      "addressRegion": "TN",
      "postalCode": "37211",
      "addressCountry": "US"
    }
  },
  "areaServed": {
    "@type": "Place",
    "name": "Woodbine, Nashville, TN"
  },
  "description": "Professional house cleaning services in Woodbine, Nashville, Tennessee."
};
---

<BaseLayout title={title} description={description}>
  <Fragment slot="head">
    <meta name="geo.region" content="US-TN" />
    <meta name="geo.placename" content="Woodbine, Nashville" />
    <meta name="geo.position" content="36.1162;-86.7442" />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <div class="hero-text">
        <h1>House Cleaning Services in Woodbine, Nashville</h1>
        <p class="hero-subtitle">Quality cleaning at honest prices for South Nashville's diverse, vibrant community</p>
        <div class="trust-badges">
          <span class="badge"><i class="fas fa-shield-alt"></i> $2M Insured</span>
          <span class="badge"><i class="fas fa-medal"></i> Veteran-Owned</span>
          <span class="badge"><i class="fas fa-star"></i> 5-Star Rated</span>
        </div>
      </div>
      <div class="hero-form">
        <h3>Get Your Free Quote</h3>
        <form id="quote-form" action="/api/submit-form" method="POST">
          <input type="hidden" name="source" value="woodbine-neighborhood" />
          <input type="hidden" name="city" value="Woodbine" />
          <div class="form-group">
            <input type="text" name="name" placeholder="Your Name" required />
          </div>
          <div class="form-group">
            <input type="tel" name="phone" placeholder="Phone Number" required />
          </div>
          <div class="form-group">
            <input type="email" name="email" placeholder="Email Address" required />
          </div>
          <div class="form-group">
            <select name="service" required>
              <option value="">Select Service...</option>
              <option value="recurring">Recurring Cleaning</option>
              <option value="deep-clean">Deep Cleaning</option>
              <option value="move-in-out">Move In/Out Cleaning</option>
              <option value="one-time">One-Time Cleaning</option>
            </select>
          </div>
          <div class="form-group">
            <select name="bedrooms" required>
              <option value="">Bedrooms...</option>
              <option value="1-2">1-2 Bedrooms</option>
              <option value="3">3 Bedrooms</option>
              <option value="4">4 Bedrooms</option>
              <option value="5+">5+ Bedrooms</option>
            </select>
          </div>
          <button type="submit" class="btn-primary">Get Free Quote</button>
        </form>
        <p class="form-note"><i class="fas fa-clock"></i> Response within 15 minutes</p>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="intro-section">
    <div class="container">
      <div class="intro-content">
        <h2>Professional Cleaning for Woodbine Homes</h2>
        <p>Woodbine is one of Nashville's most dynamic neighborhoods—a diverse community with deep roots and exciting growth. From the historic homes near the Fairgrounds to the new developments along Nolensville Pike, we provide cleaning services that fit the real needs of Woodbine residents.</p>
        <p>We believe everyone deserves a clean home, regardless of budget. That's why we offer competitive, honest pricing without sacrificing quality. No fancy upsells, no hidden fees—just reliable cleaning from a team you can trust.</p>
        <p>As a veteran-owned company serving the 37210 and 37211 zip codes, we bring discipline and work ethic to every home we clean. Whether you rent or own, live in a house or apartment, we're here to help.</p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section">
    <div class="container">
      <h2>Our Woodbine Cleaning Services</h2>
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon"><i class="fas fa-home"></i></div>
          <h3>Regular House Cleaning</h3>
          <p>Weekly, biweekly, or monthly cleaning to maintain a consistently clean home. Flexible scheduling.</p>
          <ul>
            <li>All rooms dusted and vacuumed</li>
            <li>Kitchens and bathrooms cleaned</li>
            <li>Floors mopped throughout</li>
            <li>Trash emptied, beds made</li>
          </ul>
        </div>
        <div class="service-card">
          <div class="service-icon"><i class="fas fa-sparkles"></i></div>
          <h3>Deep Cleaning</h3>
          <p>Thorough top-to-bottom cleaning. Perfect for first-time service or seasonal refreshes.</p>
          <ul>
            <li>Inside appliances cleaned</li>
            <li>Baseboards and door frames</li>
            <li>Light fixtures and fans</li>
            <li>Behind and under furniture</li>
          </ul>
        </div>
        <div class="service-card">
          <div class="service-icon"><i class="fas fa-box"></i></div>
          <h3>Move In/Out Cleaning</h3>
          <p>Complete cleaning for moves and rentals. Help secure deposits and start fresh.</p>
          <ul>
            <li>Every surface detailed</li>
            <li>Appliances inside and out</li>
            <li>Closets and cabinets</li>
            <li>Windows and blinds</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-choose-section">
    <div class="container">
      <h2>Why Woodbine Residents Choose Us</h2>
      <div class="features-grid">
        <div class="feature">
          <i class="fas fa-dollar-sign"></i>
          <h3>Honest Pricing</h3>
          <p>Competitive rates with no hidden fees. Quality cleaning that fits your budget.</p>
        </div>
        <div class="feature">
          <i class="fas fa-users"></i>
          <h3>Same Team</h3>
          <p>Your dedicated team returns each visit. They know your home and your preferences.</p>
        </div>
        <div class="feature">
          <i class="fas fa-shield-alt"></i>
          <h3>Fully Insured</h3>
          <p>$2 million liability coverage protects you. Peace of mind included.</p>
        </div>
        <div class="feature">
          <i class="fas fa-handshake"></i>
          <h3>No Contracts</h3>
          <p>No long-term commitments required. Flexible service on your terms.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Areas Served Section -->
  <section class="areas-section">
    <div class="container">
      <h2>Serving Woodbine & South Nashville</h2>
      <p>Our Woodbine cleaning service covers the 37210 and 37211 zip codes and surrounding areas:</p>
      <div class="areas-grid">
        <div class="area-item">
          <h4>Woodbine Areas</h4>
          <ul>
            <li>Historic Woodbine</li>
            <li>Nolensville Pike corridor</li>
            <li>Tennessee State Fairgrounds area</li>
            <li>Wedgewood-Houston nearby</li>
          </ul>
        </div>
        <div class="area-item">
          <h4>Nearby Communities</h4>
          <ul>
            <li><a href="/locations/nashville/crieve-hall/">Crieve Hall</a></li>
            <li><a href="/locations/nashville/">Nashville</a></li>
            <li>Berry Hill</li>
            <li>South Nashville</li>
          </ul>
        </div>
        <div class="area-item">
          <h4>Service Coverage</h4>
          <ul>
            <li>37210 zip code</li>
            <li>37211 zip code</li>
            <li>Houses and apartments</li>
            <li>Rental properties welcome</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2>Frequently Asked Questions</h2>
      <div class="faq-grid">
        {faqs.map((faq) => (
          <div class="faq-item">
            <h3>{faq.question}</h3>
            <p>{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready for a Cleaner Woodbine Home?</h2>
      <p>Get quality cleaning at honest prices. Join your neighbors who trust The Valley Clean Team.</p>
      <div class="cta-buttons">
        <a href="tel:+16155101427" class="btn-primary"><i class="fas fa-phone"></i> (615) 510-1427</a>
        <a href="/get-quote/" class="btn-secondary">Get Free Quote</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    position: relative;
    background: linear-gradient(135deg, #1e3a5f 0%, #2d5a87 100%);
    padding: 60px 20px;
    min-height: 500px;
    display: flex;
    align-items: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(30,58,95,0.3) 0%, rgba(45,90,135,0.2) 100%);
  }

  .hero-content {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 60px;
    align-items: center;
  }

  .hero-text {
    color: white;
  }

  .hero-text h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }

  .trust-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .badge {
    background: rgba(255,255,255,0.2);
    padding: 8px 16px;
    border-radius: 50px;
    font-size: 0.9rem;
  }

  .badge i {
    margin-right: 6px;
  }

  .hero-form {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  .hero-form h3 {
    text-align: center;
    margin-bottom: 20px;
    color: #1e3a5f;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 1rem;
  }

  .btn-primary {
    width: 100%;
    padding: 14px;
    background: #2d5a87;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
  }

  .btn-primary:hover {
    background: #1e3a5f;
  }

  .form-note {
    text-align: center;
    margin-top: 15px;
    font-size: 0.9rem;
    color: #666;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  section {
    padding: 60px 0;
  }

  section h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 40px;
    color: #1e3a5f;
  }

  .intro-section {
    background: #f8f9fa;
  }

  .intro-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .intro-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #555;
    margin-bottom: 1rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .service-card {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    border: 1px solid #eee;
  }

  .service-icon {
    width: 60px;
    height: 60px;
    background: #e8f4f8;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }

  .service-icon i {
    font-size: 1.5rem;
    color: #2d5a87;
  }

  .service-card h3 {
    color: #1e3a5f;
