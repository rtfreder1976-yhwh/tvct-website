  "@context": "https://schema.org",
  "@type": "Service",
  name: "House Cleaning Services in Germantown Nashville",
  description:
    "Premium house cleaning services for Germantown's historic row houses, converted lofts, and modern townhomes. Specialized in original hardwood care, exposed brick maintenance, and high-ceiling cleaning.",
  provider: {
    "@type": "LocalBusiness",
    name: "The Valley Clean Team",
    telephone: "615-510-1427",
    email: "hello@thevalleycleanteam.com",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Nashville",
      addressRegion: "TN",
    },
  },
  areaServed: {
    "@type": "Place",
    name: "Germantown, Nashville, TN",
    geo: {
      "@type": "GeoCoordinates",
      latitude: "36.1772",
      longitude: "-86.7932",
    },
  },
  serviceType: "House Cleaning",
};

// LocalBusiness schema
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: "The Valley Clean Team - Germantown Nashville",
  description:
    "Premium house cleaning services for Germantown's historic homes and urban residences",
  telephone: "615-510-1427",
  email: "hello@thevalleycleanteam.com",
