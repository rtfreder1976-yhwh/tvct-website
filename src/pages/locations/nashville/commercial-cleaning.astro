---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import Icon from '../../../components/Icon.astro';

const city = "Nashville";
const state = "Tennessee";
const phone = "(615) 961-0028";

// Business areas
const businessAreas = [
  "Downtown Nashville",
  "The Gulch",
  "Music Row",
  "West End",
  "Midtown",
  "Green Hills",
  "Belle Meade",
  "12 South",
  "East Nashville",
  "Berry Hill",
  "Germantown",
  "Sylvan Park"
];

// Industries served
const industries = [
  "Music & Recording Studios",
  "Entertainment Offices",
  "Healthcare & Medical",
  "Dental Practices",
  "Professional Services",
  "Law Firms",
  "Real Estate Offices",
  "Tech Companies",
  "Retail Boutiques",
  "Restaurants & Bars",
  "Fitness Studios",
  "Churches & Religious"
];

// What's included
const includedServices = [
  "Reception & lobby cleaning",
  "All surfaces dusted & wiped",
  "Desks & workstations cleaned",
  "Conference rooms detailed",
  "Break rooms & kitchens sanitized",
  "Restrooms deep cleaned",
  "Floors vacuumed & mopped",
  "Trash removed & bins relined",
  "Windows & glass cleaned",
  "High-touch surface disinfection",
  "Carpet spot cleaning",
  "Supply restocking available"
];

// FAQs
const faqs = [
  {
    question: "How much does commercial cleaning cost in Nashville?",
    answer: "Commercial cleaning pricing varies based on square footage, cleaning frequency, and specific needs. Small offices typically start around $175-$300 per visit, while larger facilities receive custom quotes. Nashville's Music Row studios and Gulch offices all get personalized pricing. Call (615) 961-0028 for a free assessment."
  },
  {
    question: "Do you clean recording studios and music industry offices?",
    answer: "Absolutely! Nashville is Music City, and we understand the unique needs of recording studios, label offices, and entertainment companies. Discretion is paramount—we respect artist privacy, work around session schedules, and understand the importance of dust-free environments for equipment."
  },
  {
    question: "What Nashville business areas do you serve?",
    answer: "We serve all Nashville commercial areas including Downtown, The Gulch, Music Row, West End, Midtown, Green Hills, Belle Meade, 12 South, East Nashville, Berry Hill, Germantown, and Sylvan Park. Anywhere in Davidson County, we've got you covered."
  },
  {
    question: "Do you offer after-hours cleaning?",
    answer: "Yes! Most Nashville businesses prefer evening, early morning, or weekend cleaning to avoid disrupting operations. For Music Row clients, we work around recording schedules—late nights and odd hours are no problem."
  },
  {
    question: "Can you clean medical and dental offices?",
    answer: "Yes! We follow healthcare cleaning protocols with EPA-registered disinfectants. Our team understands the heightened sanitation requirements for medical environments throughout Nashville, from Green Hills clinics to West End practices."
  },
  {
    question: "Do you provide janitorial supplies?",
    answer: "We can! Many clients prefer we supply paper products, soap, and sanitizer. We'll include this in your quote or you can provide your preferred products."
  },
  {
    question: "Are you insured for commercial properties?",
    answer: "Yes! We carry $2 million in liability insurance and are fully bonded. Your business property and assets are protected. All team members are background-checked—essential for music industry clients with valuable equipment."
  },
  {
    question: "Can you handle restaurants and food service?",
    answer: "Yes! We clean many Nashville restaurants, bars, and food service establishments. We understand health code requirements and the intensive cleaning needed in kitchen environments. From Broadway honky-tonks to Germantown bistros, we've got experience."
  }
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Commercial Cleaning Nashville TN",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+16159610028"
  },
  "areaServed": businessAreas.map(n => ({
    "@type": "Place",
    "name": `${n}, Nashville, TN`
  })),
  "serviceType": "Commercial Cleaning",
  "description": "Professional commercial cleaning in Nashville TN. Offices, studios, medical, restaurants. Music Row specialists. Veteran-owned."
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout
  title="Commercial Cleaning Nashville TN | Office & Business Cleaning | Valley Clean Team"
  description="Professional commercial cleaning in Nashville TN. Music Row, The Gulch, offices, medical. Veteran-owned, $2M insured. Call (615) 961-0028"
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-blue-50 border border-blue-200 px-4 py-2 rounded-full mb-4">
            <span class="text-blue-700 text-sm font-medium">
              <Icon name="building" class="w-5 h-5 mr-2" />Music City Business Cleaning
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-[#333333] mb-6 leading-tight">
            Commercial Cleaning in <span class="gold-gradient">Nashville, TN</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            From Music Row recording studios to Gulch tech offices, Nashville businesses need cleaning that understands their unique world. We deliver professional, discreet commercial cleaning that keeps your workspace impressive and your operations running smoothly. Veteran-owned with the reliability Music City demands.
          </p>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-3 mb-6">
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="medal" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">Veteran-Owned</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="shield-alt" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">$2M Insured</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="user-secret" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">Discreet Service</span>
            </div>
          </div>

          <!-- Price -->
          <div class="bg-white rounded-xl p-4 shadow-md border border-gray-100 inline-block mb-6">
            <div class="text-center">
              <span class="text-sm text-gray-600">Custom Pricing Based On</span>
              <div class="text-xl font-bold text-[#333333] mt-1">Size • Frequency • Services</div>
              <div class="text-[#FFA985] font-semibold mt-2">Free Assessment Available</div>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#quote" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-white bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-full shadow-lg hover:shadow-xl transition-all">
              <Icon name="calendar-check" class="w-5 h-5 mr-2" />Get Free Quote
            </a>
            <a href="tel:+16159610028" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-[#333333] bg-white border-2 border-[#FFA985] rounded-full hover:bg-[#FFA985]/10 transition-all">
              <Icon name="phone" class="w-5 h-5 mr-2" />{phone}
            </a>
          </div>
        </div>

        <!-- Quote Form -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-[#333333] mb-2 text-center">Get Your Free Quote</h2>
          <p class="text-gray-600 text-center mb-6">Commercial cleaning specialists</p>
          <iframe
            src="https://api.leadconnectorhq.com/widget/form/X00JsI4NjCZNHEAEqcXj"
            style="width:100%; height:400px; border:none; border-radius:3px"
            id="inline-X00JsI4NjCZNHEAEqcXj"
            data-layout="{'id':'INLINE'}"
            data-trigger-type="alwaysShow"
            data-trigger-value=""
            data-activation-type="alwaysActivated"
            data-activation-value=""
            data-deactivation-type="neverDeactivate"
            data-deactivation-value=""
            data-form-name="TVCT Quote Request"
            data-height="400"
            data-layout-iframe-id="inline-X00JsI4NjCZNHEAEqcXj"
            data-form-id="X00JsI4NjCZNHEAEqcXj"
            title="TVCT Quote Request"
          ></iframe>
          <script src="https://link.msgsndr.com/js/form_embed.js"></script>
        </div>
      </div>
    </div>
  </section>

  <!-- Nashville Business Context -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        Built for <span class="gold-gradient">Music City Business</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Nashville's entertainment, healthcare, and tech industries demand excellence. Your business operates at the highest standards—your cleaning service should match.
      </p>
      
      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="music" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-2">Music Row Ready</h3>
          <p class="text-gray-600">Discreet, flexible scheduling for studios, labels, and entertainment offices. We understand artist privacy and session schedules.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="user-shield" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-2">Background-Checked</h3>
          <p class="text-gray-600">Every team member vetted for your peace of mind—essential around valuable equipment and confidential materials.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="medal" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-2">Veteran-Owned</h3>
          <p class="text-gray-600">Military discipline and attention to detail. Reliable service that Nashville businesses count on.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Served -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        Industries We <span class="gold-gradient">Serve</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Specialized cleaning for Nashville's diverse business community
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        {industries.map((industry) => (
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 text-center">
            <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
            <span class="text-gray-700 font-medium">{industry}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        What's Included in <span class="gold-gradient">Commercial Cleaning</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Comprehensive cleaning for a professional workspace
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-5xl mx-auto">
        {includedServices.map((service) => (
          <div class="flex items-center bg-white rounded-lg p-4 shadow-sm border border-gray-100">
            <Icon name="check-circle" class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" />
            <span class="text-gray-700">{service}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Areas Served -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-12">
        Commercial Cleaning Throughout <span class="gold-gradient">Nashville</span>
      </h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {businessAreas.map((area) => (
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 text-center">
            <Icon name="map-marker-alt" class="w-5 h-5 text-[#FFA985] mr-2" />
            <span class="text-gray-700 font-medium">{area}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-12">
        Frequently Asked <span class="gold-gradient">Questions</span>
      </h2>
      
      <div class="max-w-3xl mx-auto space-y-4">
        {faqs.map((faq) => (
          <details class="bg-white rounded-xl shadow-md border border-gray-100 group">
            <summary class="p-6 cursor-pointer list-none flex justify-between items-center">
              <span class="font-semibold text-[#333333] pr-4">{faq.question}</span>
              <Icon name="chevron-down" class="w-5 h-5 text-[#FFA985] group-open:rotate-180 transition-transform flex-shrink-0" />
            </summary>
            <div class="px-6 pb-6 text-gray-600">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 px-6 bg-gradient-to-r from-[#FFA985] to-[#FFC67D]" id="quote">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        A Clean Business is Good Business
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Professional commercial cleaning that impresses clients and supports your Nashville team.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#quote" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#FFA985] bg-white rounded-full shadow-lg hover:shadow-xl transition-all">
          <Icon name="calendar-check" class="w-5 h-5 mr-2" />Get Free Quote
        </a>
        <a href="tel:+16159610028" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-full hover:bg-white/10 transition-all">
          <Icon name="phone" class="w-5 h-5 mr-2" />{phone}
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .gold-gradient {
    background: linear-gradient(135deg, #FFA985 0%, #FFC67D 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
