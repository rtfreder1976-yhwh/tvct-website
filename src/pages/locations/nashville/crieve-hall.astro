  }

  .area-item li {
    padding: 8px 0;
    color: #555;
  }

  .area-item a {
    color: #2d5a87;
    text-decoration: none;
  }

  .area-item a:hover {
    text-decoration: underline;
  }

  .faq-section {
    background: white;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .faq-item {
    background: #f8f9fa;
    padding: 25px;
    border-radius: 10px;
  }

  .faq-item h3 {
    color: #1e3a5f;
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .faq-item p {
    color: #555;
    line-height: 1.6;
  }

  .cta-section {
    background: linear-gradient(135deg, #2d5a87 0%, #1e3a5f 100%);
    color: white;
    text-align: center;
  }

  .cta-section h2 {
    color: white;
  }

  .cta-section p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .cta-buttons .btn-primary {
    width: auto;
    padding: 14px 30px;
    text-decoration: none;
