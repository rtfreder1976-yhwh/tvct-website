    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-secondary:hover {
    background: white;
    color: #1e3a5f;
  }

  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-form {
      max-width: 400px;
      margin: 0 auto;
    }

    .trust-badges {
      justify-content: center;
