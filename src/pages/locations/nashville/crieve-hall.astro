---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Icon from '../../../components/Icon.astro';

const title = "House Cleaning in Crieve Hall, TN | Valley Clean Team";
const description = "Professional house cleaning in Crieve Hall, Nashville. Serving 37220. Veteran-owned, insured. Family-friendly cleaning for South Nashville homes. Free quotes!";

const faqs = [
  {
    question: "Do you provide house cleaning in Crieve Hall?",
    answer: "Yes! We provide comprehensive house cleaning services throughout Crieve Hall and the 37220 zip code, including homes near Radnor Lake, Granny White Pike, and the Crieve Hall Elementary area."
  },
  {
    question: "What cleaning services do you offer in Crieve Hall?",
    answer: "We offer recurring maid service (weekly, biweekly, monthly), deep cleaning, move-in/move-out cleaning, and special occasion cleaning for Crieve Hall homes."
  },
  {
    question: "How much does house cleaning cost in Crieve Hall?",
    answer: "Crieve Hall home cleaning typically starts at $150-$250 for standard cleaning, depending on home size and condition. We provide free, detailed quotes with transparent pricing."
  },
  {
    question: "Are your cleaners background-checked and insured?",
    answer: "Absolutely. Every team member passes comprehensive background checks. We carry $2M liability insurance and are fully bonded for your peace of mind."
  },
  {
    question: "Do you clean homes with pets?",
    answer: "Yes! We love homes with pets. Our teams are experienced with pet-friendly cleaning and pay special attention to pet hair, dander, and high-traffic pet areas."
  },
  {
    question: "Can I get the same cleaning team each visit?",
    answer: "Yes! We assign dedicated teams to Crieve Hall clients. You'll see the same familiar faces who learn your home's specific needs and preferences."
  },
  {
    question: "Do you work around family schedules?",
    answer: "Absolutely. We understand busy family life in Crieve Hall. We can clean while you're at work, during school hours, or whenever works best for your family."
  },
  {
    question: "How do I book cleaning for my Crieve Hall home?",
    answer: "Book online, call us at (615) 510-1427, or text us anytime. We typically respond within minutes and can often accommodate same-week appointments."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "House Cleaning Service",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+1-615-510-1427",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Nashville",
      "addressRegion": "TN",
      "postalCode": "37220",
      "addressCountry": "US"
    }
  },
  "areaServed": {
    "@type": "Place",
    "name": "Crieve Hall, Nashville, TN"
  },
  "description": "Professional house cleaning services in Crieve Hall, Nashville, Tennessee."
};
---

<BaseLayout title={title} description={description}>
  <Fragment slot="head">
    <meta name="geo.region" content="US-TN" />
    <meta name="geo.placename" content="Crieve Hall, Nashville" />
    <meta name="geo.position" content="36.0692;-86.7819" />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <div class="hero-text">
        <h1>House Cleaning Services in Crieve Hall, Nashville</h1>
        <p class="hero-subtitle">Family-focused cleaning for South Nashville's favorite neighborhood near Radnor Lake</p>
        <div class="trust-badges">
          <span class="badge"><Icon name="shield-alt" class="w-5 h-5" /> $2M Insured</span>
          <span class="badge"><Icon name="medal" class="w-5 h-5" /> Veteran-Owned</span>
          <span class="badge"><Icon name="star" class="w-5 h-5" fill="currentColor" /> 5-Star Rated</span>
        </div>
      </div>
      <div class="hero-form">
        <h3>Get Your Free Quote</h3>
        <form id="quote-form" action="/api/submit-form" method="POST">
          <input type="hidden" name="source" value="crieve-hall-neighborhood" />
          <input type="hidden" name="city" value="Crieve Hall" />
          <div class="form-group">
            <input type="text" name="name" placeholder="Your Name" required />
          </div>
          <div class="form-group">
            <input type="tel" name="phone" placeholder="Phone Number" required />
          </div>
          <div class="form-group">
            <input type="email" name="email" placeholder="Email Address" required />
          </div>
          <div class="form-group">
            <select name="service" required>
              <option value="">Select Service...</option>
              <option value="recurring">Recurring Cleaning</option>
              <option value="deep-clean">Deep Cleaning</option>
              <option value="move-in-out">Move In/Out Cleaning</option>
              <option value="one-time">One-Time Cleaning</option>
            </select>
          </div>
          <div class="form-group">
            <select name="bedrooms" required>
              <option value="">Bedrooms...</option>
              <option value="1-2">1-2 Bedrooms</option>
              <option value="3">3 Bedrooms</option>
              <option value="4">4 Bedrooms</option>
              <option value="5+">5+ Bedrooms</option>
            </select>
          </div>
          <button type="submit" class="btn-primary">Get Free Quote</button>
        </form>
        <p class="form-note"><Icon name="clock" class="w-5 h-5" /> Response within 15 minutes</p>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="intro-section">
    <div class="container">
      <div class="intro-content">
        <h2>Professional Cleaning for Crieve Hall Families</h2>
        <p>Crieve Hall is one of South Nashville's most beloved neighborhoods—a tight-knit community where families put down roots, kids walk to school, and neighbors know each other by name. Our cleaning team understands what makes this neighborhood special and provides service that fits the family-friendly lifestyle.</p>
        <p>Located near Radnor Lake State Park and along the Granny White Pike corridor, Crieve Hall homes deserve care that matches the community's character. Whether you're a busy parent juggling school activities, a professional working from home, or enjoying retirement, we're here to give you back your weekends.</p>
        <p>As a veteran-owned company serving the 37220 zip code, we bring the same dedication to your home that we brought to our service. Reliable scheduling, consistent teams, and cleaning you can trust.</p>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section">
    <div class="container">
      <h2>Our Crieve Hall Cleaning Services</h2>
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon"><Icon name="home" class="w-5 h-5" /></div>
          <h3>Regular House Cleaning</h3>
          <p>Weekly, biweekly, or monthly cleaning to keep your Crieve Hall home consistently clean. Perfect for busy families.</p>
          <ul>
            <li>All rooms dusted and vacuumed</li>
            <li>Kitchens and bathrooms sanitized</li>
            <li>Floors mopped and cleaned</li>
            <li>Beds made, spaces tidied</li>
          </ul>
        </div>
        <div class="service-card">
          <div class="service-icon"><Icon name="sparkles" class="w-5 h-5" /></div>
          <h3>Deep Cleaning</h3>
          <p>Thorough cleaning that reaches everywhere. Great for seasonal refreshes or before special occasions.</p>
          <ul>
            <li>Inside appliances and cabinets</li>
            <li>Baseboards and door frames</li>
            <li>Light fixtures and fans</li>
            <li>Behind furniture and appliances</li>
          </ul>
        </div>
        <div class="service-card">
          <div class="service-icon"><Icon name="box" class="w-5 h-5" /></div>
          <h3>Move In/Out Cleaning</h3>
          <p>Complete cleaning for Crieve Hall real estate transactions. We help secure deposits and smooth moves.</p>
          <ul>
            <li>Every surface detailed</li>
            <li>Appliances cleaned inside/out</li>
            <li>Closets and storage spaces</li>
            <li>Windows and blinds</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-choose-section">
    <div class="container">
      <h2>Why Crieve Hall Families Choose Us</h2>
      <div class="features-grid">
        <div class="feature">
          <Icon name="users" class="w-5 h-5" />
          <h3>Same Team Every Time</h3>
          <p>Your dedicated team gets to know your home, your family, and your pets. Consistent results every visit.</p>
        </div>
        <div class="feature">
          <Icon name="paw" class="w-5 h-5" />
          <h3>Pet-Friendly Service</h3>
          <p>We love your furry family members! Our teams are trained for homes with dogs, cats, and other pets.</p>
        </div>
        <div class="feature">
          <Icon name="shield-alt" class="w-5 h-5" />
          <h3>Fully Insured</h3>
          <p>$2 million liability coverage means complete protection for your home and peace of mind for you.</p>
        </div>
        <div class="feature">
          <Icon name="calendar-check" class="w-5 h-5" />
          <h3>Flexible Scheduling</h3>
          <p>We work around your family's schedule—while you're at work, during school, or whenever suits you.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Areas Served Section -->
  <section class="areas-section">
    <div class="container">
      <h2>Serving Crieve Hall & South Nashville</h2>
      <p>Our Crieve Hall cleaning service covers the 37220 zip code and surrounding South Nashville areas:</p>
      <div class="areas-grid">
        <div class="area-item">
          <h4>Crieve Hall Areas</h4>
          <ul>
            <li>Crieve Hall Elementary area</li>
            <li>Granny White Pike corridor</li>
            <li>Radnor Lake vicinity</li>
            <li>Battery Lane area</li>
          </ul>
        </div>
        <div class="area-item">
          <h4>Nearby Communities</h4>
          <ul>
            <li><a href="/locations/nashville/woodbine/">Woodbine</a></li>
            <li><a href="/locations/nashville/">Nashville</a></li>
            <li>Berry Hill</li>
            <li>Oak Hill</li>
          </ul>
        </div>
        <div class="area-item">
          <h4>Service Coverage</h4>
          <ul>
            <li>37220 zip code (primary)</li>
            <li>South Nashville residents</li>
            <li>All home sizes welcome</li>
            <li>Family homes our specialty</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2>Frequently Asked Questions</h2>
      <div class="faq-grid">
        {faqs.map((faq) => (
          <div class="faq-item">
            <h3>{faq.question}</h3>
            <p>{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready for a Cleaner Crieve Hall Home?</h2>
      <p>Join your neighbors who trust The Valley Clean Team for reliable, family-friendly cleaning service.</p>
      <div class="cta-buttons">
        <a href="tel:+16155101427" class="btn-primary"><Icon name="phone" class="w-5 h-5" /> (615) 510-1427</a>
        <a href="/get-quote/" class="btn-secondary">Get Free Quote</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
