    background: rgba(255,255,255,0.2);
    padding: 8px 16px;
    border-radius: 50px;
    font-size: 0.9rem;
  }

  .badge i {
    margin-right: 6px;
  }

  .hero-form {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  .hero-form h3 {
    text-align: center;
    margin-bottom: 20px;
    color: #1e3a5f;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 1rem;
  }

  .btn-primary {
    width: 100%;
    padding: 14px;
    background: #2d5a87;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
  }

