    margin-bottom: 15px;
    color: #7cb9e8;
  }

  .feature h3 {
    margin-bottom: 10px;
  }

  .feature p {
    opacity: 0.9;
    font-size: 0.95rem;
  }

  .areas-section {
    background: #f8f9fa;
  }

  .areas-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-top: 30px;
  }

  .area-item {
    background: white;
    padding: 25px;
    border-radius: 10px;
  }

  .area-item h4 {
    color: #1e3a5f;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 2px solid #2d5a87;
  }

  .area-item ul {
