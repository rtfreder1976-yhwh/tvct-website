    align-items: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(30,58,95,0.3) 0%, rgba(45,90,135,0.2) 100%);
  }

  .hero-content {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 60px;
    align-items: center;
  }

  .hero-text {
    color: white;
  }

  .hero-text h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }

  .trust-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

