---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import Icon from '../../../components/Icon.astro';

const city = "Nashville";
const state = "Tennessee";
const phone = "(615) 961-0028";

// Event types
const eventTypes = [
  "CMA Fest Hosting",
  "Music Industry Parties",
  "Album Release Celebrations",
  "Corporate Events",
  "Holiday Parties",
  "Birthday Celebrations",
  "Graduation Parties",
  "Baby & Bridal Showers",
  "NFL Watch Parties",
  "Anniversary Celebrations",
  "Fundraiser Galas",
  "House Concerts"
];

// Nashville events context
const localEvents = [
  "CMA Fest & Awards Hosting",
  "Titans Game Day Parties",
  "Predators Watch Parties",
  "Album Release Parties",
  "Nashville Songwriter Nights",
  "Industry Showcases at Home",
  "Bonnaroo Pre-Parties",
  "New Year's Eve Celebrations",
  "Derby Day Parties",
  "Music Row Networking Events"
];

// Pre-event services
const preEventServices = [
  "Deep clean all main areas",
  "Kitchen & bar area prep",
  "Bathroom deep cleaning",
  "Floor vacuuming & mopping",
  "Surface dusting & polishing",
  "Window & mirror cleaning",
  "Guest room preparation",
  "Outdoor patio cleaning",
  "Trash removal",
  "Fresh scent throughout"
];

// Post-event services
const postEventServices = [
  "Trash & recyclables removal",
  "Dish collection & kitchen cleanup",
  "Spill & stain treatment",
  "Food debris removal",
  "Bathroom sanitization",
  "Floor cleaning (all types)",
  "Surface wipe-down",
  "Furniture repositioning",
  "Outdoor area cleanup",
  "Next-day deep clean available"
];

// FAQs
const faqs = [
  {
    question: "How much does event cleaning cost in Nashville?",
    answer: "Pre-event cleaning typically starts at $225 and post-event cleanup at $175, depending on home size and event scale. Combined packages save 10-15%. For large gatherings like CMA Fest hosting or corporate events, we'll provide a custom quote. Call (615) 961-0028."
  },
  {
    question: "How far in advance should I book event cleaning?",
    answer: "We recommend booking 1-2 weeks ahead. During CMA Fest (June), New Year's Eve, Titans season, and major holidays, book even earlier—Nashville hosts love to entertain! Last-minute requests? Call us—we'll do our best to accommodate."
  },
  {
    question: "Do you clean before AND after events?",
    answer: "Yes! Many Nashville hosts book both. Pre-event cleaning ensures your Belle Meade or Green Hills home impresses guests, while post-event cleanup means you wake up to a clean house. Combined packages save 10-15%."
  },
  {
    question: "Can you handle music industry events?",
    answer: "Absolutely! Nashville is Music City. We've cleaned before and after album release parties, songwriter rounds at home, industry showcases, and more. We're discreet, professional, and understand the entertainment world."
  },
  {
    question: "What if my party runs late—can you still come?",
    answer: "Yes! Nashville knows how to party. We offer next-morning cleanup for late events. Schedule post-event cleaning for whenever you need—we don't judge the hour your celebration ended!"
  },
  {
    question: "Can you handle large game day gatherings?",
    answer: "Yes! Titans watch parties, Predators playoff gatherings, and Derby Day events often draw 50+ guests. We'll assess the scope and bring the right team to restore your home quickly."
  },
  {
    question: "Do you clean outdoor areas for events?",
    answer: "Yes! Patios, decks, porches, and outdoor entertaining spaces are included. Nashville's beautiful weather means outdoor hosting is popular—we'll make sure your spaces shine."
  },
  {
    question: "Can you handle red wine and food stains?",
    answer: "We treat common party stains—red wine, BBQ sauce, food spills. For severe carpet stains, we may recommend professional carpet cleaning, but we'll get the rest of your home spotless."
  }
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Event Cleaning Nashville TN",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+16159610028"
  },
  "areaServed": {
    "@type": "City",
    "name": "Nashville",
    "containedInPlace": {
      "@type": "State",
      "name": "Tennessee"
    }
  },
  "serviceType": "Event Cleaning",
  "description": "Pre-event and post-party cleaning in Nashville TN. CMA Fest, music events, corporate parties. Veteran-owned."
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout
  title="Event Cleaning Nashville TN "
  description="Event cleaning in Nashville TN. Pre-party prep & post-event cleanup. CMA Fest, music events, celebrations. Veteran-owned. Call (615) 961-0028"
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-purple-50 border border-purple-200 px-4 py-2 rounded-full mb-4">
            <span class="text-purple-700 text-sm font-medium">
              <Icon name="glass-cheers" class="w-5 h-5 mr-2" />Music City Celebrations
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-[#333333] mb-6 leading-tight">
            Event Cleaning in <span class="gold-gradient">Nashville, TN</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Nashville knows how to celebrate—from CMA Fest hosting to album release parties, Titans game days to elegant galas. Let us handle the cleaning so you can focus on your guests. Pre-event prep makes your home party-ready. Post-event cleanup means you wake up to a spotless house, not last night's mess.
          </p>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-3 mb-6">
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="broom" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">Pre-Event Prep</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="sunrise" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">Post-Party Cleanup</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="piggy-bank" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">Bundle & Save 10-15%</span>
            </div>
          </div>

          <!-- Pricing -->
          <div class="bg-white rounded-xl p-4 shadow-md border border-gray-100 mb-6">
            <div class="grid grid-cols-2 gap-4 text-center">
              <div>
                <span class="text-sm text-gray-600">Pre-Event Cleaning</span>
                <div class="text-2xl font-bold text-[#333333]">From $225</div>
              </div>
              <div>
                <span class="text-sm text-gray-600">Post-Event Cleanup</span>
                <div class="text-2xl font-bold text-[#333333]">From $175</div>
              </div>
            </div>
            <div class="text-center mt-3 pt-3 border-t border-gray-100">
              <span class="text-[#FFA985] font-semibold">Book Both & Save 10-15%</span>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#quote" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-white bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-full shadow-lg hover:shadow-xl transition-all">
              <Icon name="calendar-check" class="w-5 h-5 mr-2" />Book Event Cleaning
            </a>
            <a href="tel:+16159610028" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-[#333333] bg-white border-2 border-[#FFA985] rounded-full hover:bg-[#FFA985]/10 transition-all">
              <Icon name="phone" class="w-5 h-5 mr-2" />{phone}
            </a>
          </div>
        </div>

        <!-- Quote Form -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-[#333333] mb-2 text-center">Book Your Event Cleaning</h2>
          <p class="text-gray-600 text-center mb-6">Pre-party prep or post-event rescue</p>
          <iframe
            src="https://api.leadconnectorhq.com/widget/form/X00JsI4NjCZNHEAEqcXj"
            style="width:100%; height:400px; border:none; border-radius:3px"
            id="inline-X00JsI4NjCZNHEAEqcXj"
            data-layout="{'id':'INLINE'}"
            data-trigger-type="alwaysShow"
            data-trigger-value=""
            data-activation-type="alwaysActivated"
            data-activation-value=""
            data-deactivation-type="neverDeactivate"
            data-deactivation-value=""
            data-form-name="TVCT Quote Request"
            data-height="400"
            data-layout-iframe-id="inline-X00JsI4NjCZNHEAEqcXj"
            data-form-id="X00JsI4NjCZNHEAEqcXj"
            title="TVCT Quote Request"
          ></iframe>
          <script src="https://link.msgsndr.com/js/form_embed.js"></script>
        </div>
      </div>
    </div>
  </section>

  <!-- Nashville Events Context -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        Cleaning for <span class="gold-gradient">Music City Events</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Nashville celebrates bigger than anywhere else—from CMA Fest to New Year's Eve on Broadway to backyard songwriter rounds. We've got your cleaning covered.
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-4 max-w-5xl mx-auto">
        {localEvents.map((event) => (
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 text-center">
            <Icon name="star" class="w-5 h-5 text-[#FFA985] mr-2" fill="currentColor" />
            <span class="text-gray-700 font-medium text-sm">{event}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pre-Event vs Post-Event -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        
        <!-- Pre-Event -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
          <div class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] p-6 text-white text-center">
            <Icon name="broom" class="w-5 h-5 text-4xl mb-3" />
            <h3 class="text-2xl font-bold">Pre-Event Cleaning</h3>
            <p class="text-white/90">Impress Nashville's finest guests</p>
            <div class="text-3xl font-bold mt-2">From $225</div>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">Schedule 1-2 days before your event. We'll make every room guest-ready:</p>
            <ul class="space-y-2">
              {preEventServices.map((service) => (
                <li class="flex items-center">
                  <Icon name="check" class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" />
                  <span class="text-gray-700">{service}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Post-Event -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
          <div class="bg-gradient-to-r from-purple-500 to-purple-600 p-6 text-white text-center">
            <Icon name="sunrise" class="w-5 h-5 text-4xl mb-3" />
            <h3 class="text-2xl font-bold">Post-Event Cleanup</h3>
            <p class="text-white/90">Wake up to a clean house, not chaos</p>
            <div class="text-3xl font-bold mt-2">From $175</div>
          </div>
          <div class="p-6">
            <p class="text-gray-600 mb-4">Schedule for the morning after. We'll restore order:</p>
            <ul class="space-y-2">
              {postEventServices.map((service) => (
                <li class="flex items-center">
                  <Icon name="check" class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" />
                  <span class="text-gray-700">{service}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <!-- Bundle CTA -->
      <div class="text-center mt-8">
        <div class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl p-6 border border-[#FFA985]/30">
          <Icon name="piggy-bank" class="w-8 h-8 text-[#FFA985] mb-2" />
          <p class="text-xl font-bold text-[#333333]">Book Both Services & Save 10-15%</p>
          <p class="text-gray-600">The stress-free hosting package</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Event Types -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        Events We <span class="gold-gradient">Clean For</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        From intimate songwriter rounds to grand celebrations
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        {eventTypes.map((eventType) => (
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 text-center">
            <Icon name="check-circle" class="w-5 h-5 text-[#FFA985] mr-2" />
            <span class="text-gray-700 font-medium">{eventType}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-12">
        Frequently Asked <span class="gold-gradient">Questions</span>
      </h2>
      
      <div class="max-w-3xl mx-auto space-y-4">
        {faqs.map((faq) => (
          <details class="bg-white rounded-xl shadow-md border border-gray-100 group">
            <summary class="p-6 cursor-pointer list-none flex justify-between items-center">
              <span class="font-semibold text-[#333333] pr-4">{faq.question}</span>
              <Icon name="chevron-down" class="w-5 h-5 text-[#FFA985] group-open:rotate-180 transition-transform flex-shrink-0" />
            </summary>
            <div class="px-6 pb-6 text-gray-600">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 px-6 bg-gradient-to-r from-[#FFA985] to-[#FFC67D]" id="quote">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Host the Party. Skip the Cleanup.
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Nashville celebrates big—you deserve to enjoy every moment, and the morning after.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#quote" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#FFA985] bg-white rounded-full shadow-lg hover:shadow-xl transition-all">
          <Icon name="calendar-check" class="w-5 h-5 mr-2" />Book Event Cleaning
        </a>
        <a href="tel:+16159610028" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-full hover:bg-white/10 transition-all">
          <Icon name="phone" class="w-5 h-5 mr-2" />{phone}
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .gold-gradient {
    background: linear-gradient(135deg, #FFA985 0%, #FFC67D 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
