---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';

const city = "West Nashville";
const state = "Tennessee";
const phone = "(615) 961-0028";

// Business areas
const businessAreas = [
  "Belle Meade",
  "Sylvan Park",
  "The Nations",
  "Charlotte Pike",
  "West End",
  "White Bridge Road",
  "Murphy Road",
  "Centennial Area",
  "Hillwood",
  "Green Hills"
];

// Industries served
const industries = [
  "Medical & Dental Offices",
  "Professional Services",
  "Retail Stores",
  "Restaurants & Cafes",
  "Fitness Studios",
  "Salons & Spas",
  "Churches & Religious",
  "Daycares & Schools",
  "Real Estate Offices",
  "Recording Studios",
  "Creative Agencies",
  "Coworking Spaces"
];

// What's included
const includedServices = [
  "Reception & lobby cleaning",
  "All surfaces dusted & wiped",
  "Desks & workstations cleaned",
  "Conference rooms detailed",
  "Break rooms & kitchens sanitized",
  "Restrooms deep cleaned",
  "Floors vacuumed & mopped",
  "Trash removed & bins relined",
  "Windows & glass cleaned",
  "High-touch surface disinfection",
  "Carpet spot cleaning",
  "Supply restocking available"
];

// FAQs
const faqs = [
  {
    question: "How much does commercial cleaning cost in West Nashville?",
    answer: "Commercial cleaning pricing varies based on square footage, cleaning frequency, and specific needs. Small offices typically start around $150-$250 per visit, while larger spaces receive custom quotes. Call (615) 961-0028 for a free assessment."
  },
  {
    question: "What West Nashville business areas do you serve?",
    answer: "We serve all West Nashville commercial areas including Charlotte Pike, West End, White Bridge Road, Murphy Road, The Nations, Sylvan Park business district, and areas near Centennial Park. We also serve Belle Meade and Green Hills."
  },
  {
    question: "Do you offer after-hours cleaning?",
    answer: "Yes! Most of our commercial clients prefer evening, early morning, or weekend cleaning to avoid disrupting business operations. We work around your schedule."
  },
  {
    question: "Do you clean recording studios and music industry spaces?",
    answer: "Absolutely! West Nashville is home to many studios and music industry offices. We understand the need for discretion, respect for equipment, and dust-free environments critical for recording."
  },
  {
    question: "Can you clean medical and dental offices?",
    answer: "Yes! We follow healthcare cleaning protocols with EPA-registered disinfectants. Our team understands the heightened sanitation requirements for medical environments."
  },
  {
    question: "Do you provide janitorial supplies?",
    answer: "We can! Many clients prefer we supply paper products, soap, and sanitizer. We'll include this in your quote or you can provide your preferred products."
  },
  {
    question: "Are you insured for commercial properties?",
    answer: "Yes! We carry $2 million in liability insurance and are fully bonded. Your business property and assets are protected. All team members are background-checked."
  },
  {
    question: "How do you handle security and access?",
    answer: "We establish secure access protocols for each client—key, code, or coordinated entry. Our background-checked team respects confidentiality and follows your security procedures."
  }
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Commercial Cleaning West Nashville TN",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+16159610028"
  },
  "areaServed": businessAreas.map(n => ({
    "@type": "Place",
    "name": `${n}, Nashville, TN`
  })),
  "serviceType": "Commercial Cleaning",
  "description": "Professional commercial cleaning in West Nashville. Offices, medical, retail, studios. Charlotte Pike, West End, The Nations."
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout
  title="Commercial Cleaning West Nashville TN | Office & Business Cleaning | Valley Clean Team"
  description="Professional commercial cleaning in West Nashville. Offices, medical, retail, studios. Charlotte Pike, West End, The Nations. Call (615) 961-0028"
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-blue-50 border border-blue-200 px-4 py-2 rounded-full mb-4">
            <span class="text-blue-700 text-sm font-medium">
              <i class="fas fa-building mr-2"></i>Professional Business Cleaning
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-[#333333] mb-6 leading-tight">
            Commercial Cleaning in <span class="gold-gradient">West Nashville</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Your West Nashville business deserves a clean that impresses clients and supports your team. From Charlotte Pike offices to The Nations' creative spaces to recording studios near Music Row, we deliver reliable commercial cleaning that fits your schedule and exceeds expectations.
          </p>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-3 mb-6">
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <i class="fas fa-medal text-[#FFA985] mr-2"></i>
              <span class="text-sm font-semibold text-gray-700">Veteran-Owned</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <i class="fas fa-shield-alt text-[#FFA985] mr-2"></i>
              <span class="text-sm font-semibold text-gray-700">$2M Insured</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <i class="fas fa-moon text-[#FFA985] mr-2"></i>
              <span class="text-sm font-semibold text-gray-700">After-Hours Available</span>
            </div>
          </div>

          <!-- Price -->
          <div class="bg-white rounded-xl p-4 shadow-md border border-gray-100 inline-block mb-6">
            <div class="text-center">
              <span class="text-sm text-gray-600">Custom Pricing Based On</span>
              <div class="text-xl font-bold text-[#333333] mt-1">Size • Frequency • Services</div>
              <div class="text-[#FFA985] font-semibold mt-2">Free Assessment Available</div>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#quote" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-white bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-full shadow-lg hover:shadow-xl transition-all">
              <i class="fas fa-calendar-check mr-2"></i>Get Free Quote
            </a>
            <a href="tel:+16159610028" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-[#333333] bg-white border-2 border-[#FFA985] rounded-full hover:bg-[#FFA985]/10 transition-all">
              <i class="fas fa-phone mr-2"></i>{phone}
            </a>
          </div>
        </div>

        <!-- Quote Form -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-[#333333] mb-2 text-center">Get Your Free Quote</h2>
          <p class="text-gray-600 text-center mb-6">Commercial cleaning specialists</p>
          <iframe
            src="https://api.leadconnectorhq.com/widget/form/X00JsI4NjCZNHEAEqcXj"
            style="width:100%; height:400px; border:none; border-radius:3px"
            id="inline-X00JsI4NjCZNHEAEqcXj"
            data-layout="{'id':'INLINE'}"
            data-trigger-type="alwaysShow"
            data-trigger-value=""
            data-activation-type="alwaysActivated"
            data-activation-value=""
            data-deactivation-type="neverDeactivate"
            data-deactivation-value=""
            data-form-name="TVCT Quote Request"
            data-height="400"
            data-layout-iframe-id="inline-X00JsI4NjCZNHEAEqcXj"
            data-form-id="X00JsI4NjCZNHEAEqcXj"
            title="TVCT Quote Request"
          ></iframe>
          <script src="https://link.msgsndr.com/js/form_embed.js"></script>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Served -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        Industries We <span class="gold-gradient">Serve</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Specialized cleaning for West Nashville's diverse business community
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        {industries.map((industry) => (
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 text-center">
            <i class="fas fa-check-circle text-[#FFA985] mr-2"></i>
            <span class="text-gray-700 font-medium">{industry}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        What's Included in <span class="gold-gradient">Commercial Cleaning</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Comprehensive cleaning for a professional workspace
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-5xl mx-auto">
        {includedServices.map((service) => (
          <div class="flex items-center bg-white rounded-lg p-4 shadow-sm border border-gray-100">
            <i class="fas fa-check-circle text-green-500 mr-3 flex-shrink-0"></i>
            <span class="text-gray-700">{service}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-12">
        Why West Nashville Businesses <span class="gold-gradient">Choose Us</span>
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100">
          <div class="w-14 h-14 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-clock text-[#FFA985] text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">Flexible Scheduling</h3>
          <p class="text-gray-600">Evening, early morning, weekend—we clean when it's convenient for your business operations.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100">
          <div class="w-14 h-14 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-check-double text-[#FFA985] text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">Consistent Quality</h3>
          <p class="text-gray-600">Same team, same standards, every visit. You'll know exactly what to expect.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100">
          <div class="w-14 h-14 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-shield-virus text-[#FFA985] text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">Health-Focused</h3>
          <p class="text-gray-600">EPA-registered disinfectants and attention to high-touch surfaces keep your team healthy.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100">
          <div class="w-14 h-14 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-lock text-[#FFA985] text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">Secure & Trustworthy</h3>
          <p class="text-gray-600">Background-checked team, secure access protocols, confidentiality respected.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100">
          <div class="w-14 h-14 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-medal text-[#FFA985] text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">Veteran-Owned</h3>
          <p class="text-gray-600">Military discipline, attention to detail, and commitment to excellence.</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100">
          <div class="w-14 h-14 bg-gradient-to-r from-[#FFA985]/20 to-[#FFC67D]/20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-file-contract text-[#FFA985] text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-[#333333] mb-3">No Long Contracts</h3>
          <p class="text-gray-600">We earn your business with quality service, not legal agreements.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Areas Served -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-12">
        Commercial Cleaning Throughout <span class="gold-gradient">West Nashville</span>
      </h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 max-w-4xl mx-auto">
        {businessAreas.map((area) => (
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 text-center">
            <i class="fas fa-map-marker-alt text-[#FFA985] mr-2"></i>
            <span class="text-gray-700 font-medium">{area}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-12">
        Frequently Asked <span class="gold-gradient">Questions</span>
      </h2>
      
      <div class="max-w-3xl mx-auto space-y-4">
        {faqs.map((faq) => (
          <details class="bg-white rounded-xl shadow-md border border-gray-100 group">
            <summary class="p-6 cursor-pointer list-none flex justify-between items-center">
              <span class="font-semibold text-[#333333] pr-4">{faq.question}</span>
              <i class="fas fa-chevron-down text-[#FFA985] group-open:rotate-180 transition-transform flex-shrink-0"></i>
            </summary>
            <div class="px-6 pb-6 text-gray-600">
              {faq.answer}
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 px-6 bg-gradient-to-r from-[#FFA985] to-[#FFC67D]" id="quote">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        A Clean Business is Good Business
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Professional commercial cleaning that impresses clients and supports your team.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#quote" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-[#FFA985] bg-white rounded-full shadow-lg hover:shadow-xl transition-all">
          <i class="fas fa-calendar-check mr-2"></i>Get Free Quote
        </a>
        <a href="tel:+16159610028" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-full hover:bg-white/10 transition-all">
          <i class="fas fa-phone mr-2"></i>{phone}
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .gold-gradient {
    background: linear-gradient(135deg, #FFA985 0%, #FFC67D 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
