---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import Icon from '../../../components/Icon.astro';

const faqs = [
  {
    question: "What cleaning services do you offer in Somerville?",
    answer: "We offer comprehensive cleaning services including deep cleaning, recurring maid service (weekly, biweekly, monthly), move-in/move-out cleaning, and post-construction cleaning. Our team is experienced with both historic Somerville homes and newer construction."
  },
  {
    question: "Do you provide commercial cleaning in Somerville?",
    answer: "Yes! We provide professional commercial cleaning, office cleaning, and janitorial services for Somerville and Morgan County businesses. We can work around your schedule including evenings and weekends."
  },
  {
    question: "How much does cleaning service cost in Somerville?",
    answer: "Pricing depends on your home's size and cleaning needs. Most Somerville homes range from $120-$280 for standard cleaning. We provide free, no-obligation quotes and the price we quote is the price you pay."
  },
  {
    question: "Are your cleaners insured and background checked?",
    answer: "Absolutely. Every team member is fully insured, bonded, and has passed a comprehensive background check. As a veteran-owned business, we hold ourselves to the highest standards of trust and integrity."
  },
  {
    question: "Do you offer same-day cleaning in Somerville?",
    answer: "Yes, we offer emergency and same-day cleaning services when availability allows. Call us at 256-826-1100 and we'll do our best to accommodate urgent requests for Somerville area homes."
  },
  {
    question: "Do you have experience cleaning historic homes in Somerville?",
    answer: "Yes! We understand the special care historic homes require. Our team is trained to properly clean and maintain older properties, including hardwood floors, antique fixtures, and period details."
  },
  {
    question: "How do I schedule a cleaning in Somerville?",
    answer: "You can book online through our website, call us at 256-826-1100, or text us. We'll schedule a time that works for you and provide a detailed quote before any work begins."
  },
  {
    question: "What Morgan County areas do you also serve?",
    answer: "We serve all of Morgan County including Decatur, Hartselle, Trinity, Priceville, Danville, and Austinville. Our team knows these communities well and provides reliable service throughout the area."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://thevalleycleanteam.com/locations/decatur/somerville",
  "name": "The Valley Clean Team - Somerville",
  "image": "https://thevalleycleanteam.com/images/valley-clean-team-logo.png",
  "description": "Professional cleaning service in Somerville, Alabama. House cleaning and commercial cleaning. Veteran-owned, insured, and bonded.",
  "telephone": "+1-256-826-1100",
  "email": "hello@thevalleycleanteam.com",
  "url": "https://thevalleycleanteam.com/locations/decatur/somerville",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Somerville",
    "addressRegion": "AL",
    "postalCode": "35670",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 34.4706,
    "longitude": -86.8014
  },
  "areaServed": {
    "@type": "Place",
    "name": "Somerville, Morgan County, Alabama"
  },
  "priceRange": "$$",
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "18:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Saturday",
      "opens": "09:00",
      "closes": "16:00"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Cleaning Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Residential Cleaning",
          "description": "Professional house cleaning services for Somerville homes"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Commercial Cleaning",
          "description": "Office and business cleaning services in Morgan County"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Deep Cleaning",
          "description": "Thorough deep cleaning services for Somerville homes"
        }
      }
    ]
  }
};
---

<BaseLayout
  title="Cleaning Service Somerville AL | Valley Clean Team"
  description="Professional cleaning service in Somerville, Alabama. House cleaning & commercial services. Veteran-owned. Free quotes: 256-826-1100"
  geoRegion="US-AL"
  geoPlacename="Somerville, Alabama"
  geoPosition="34.4706;-86.8014"
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} slot="head" />
  <Navigation />

  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-[#FFA985]/20 to-[#FFDBC8]/30"></div>
      <div class="absolute top-20 right-20 w-72 h-72 bg-[#FFA985]/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-[#FFDBC8]/30 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10 text-center">
      <p class="text-[#FFA985] font-medium tracking-wide uppercase mb-4">Somerville • Morgan County, Alabama</p>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 text-[#333333]">
        Professional Cleaning Service in Somerville
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto mb-8">
        Veteran-owned cleaning service for Morgan County's historic community. The price you see is the price you pay.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:2568261100" class="btn-primary">
          <Icon name="phone" class="w-5 h-5" />
          (256) 826-1100
        </a>
        <a href="#quote" class="btn-secondary">
          Get Free Quote
        </a>
      </div>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-8 bg-white border-b border-gray-100">
    <div class="container mx-auto px-6">
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        <div class="flex items-center gap-2">
          <Icon name="shield-check" class="w-6 h-6 text-[#FFA985]" />
          <span class="text-gray-700 font-medium">Veteran Owned</span>
        </div>
        <div class="flex items-center gap-2">
          <Icon name="badge-check" class="w-6 h-6 text-[#FFA985]" />
          <span class="text-gray-700 font-medium">Insured & Bonded</span>
        </div>
        <div class="flex items-center gap-2">
          <Icon name="star" class="w-6 h-6 text-[#FFA985]" />
          <span class="text-gray-700 font-medium">5-Star Rated</span>
        </div>
        <div class="flex items-center gap-2">
          <Icon name="clock" class="w-6 h-6 text-[#FFA985]" />
          <span class="text-gray-700 font-medium">Same-Day Available</span>
        </div>
      </div>
    </div>
  </section>

  <!-- About Somerville Section -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
            House Cleaning Services in Somerville
          </h2>
          <div class="section-divider"></div>
        </div>

        <div class="prose prose-lg max-w-none text-gray-600">
          <p>
            Somerville is a small town in Morgan County with deep historic roots and a quiet, peaceful community atmosphere. Residents here enjoy the best of small-town living while having easy access to Decatur amenities. The town features a charming mix of historic homes with character and newer construction.
          </p>
          <p>
            The Valley Clean Team is proud to serve Somerville families with professional cleaning services. Whether you own a beautifully preserved historic home with original hardwood floors or a modern new build, our veteran-owned team delivers exceptional results with the care and attention your home deserves.
          </p>
          <p>
            We understand that Somerville residents value reliability and trustworthiness. That's why we send the same team to your home every visit, use professional-grade equipment, and follow our detailed 49-point cleaning checklist to ensure consistent, thorough results.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Residential Services Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Residential Cleaning in Somerville
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Professional maid service for Morgan County families</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow border border-gray-100">
          <Icon name="home" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Recurring Cleaning</h3>
          <p class="text-gray-600">Weekly, biweekly, or monthly maid service to keep your Somerville home consistently spotless. Same team every visit.</p>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow border border-gray-100">
          <Icon name="sparkles" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Deep Cleaning</h3>
          <p class="text-gray-600">Thorough top-to-bottom cleaning that reaches every corner. Perfect for seasonal refreshes or special occasions.</p>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow border border-gray-100">
          <Icon name="truck" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Move-In/Move-Out</h3>
          <p class="text-gray-600">Comprehensive cleaning for real estate transactions. We ensure homes are spotless for new occupants.</p>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow border border-gray-100">
          <Icon name="bolt" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Same-Day Service</h3>
          <p class="text-gray-600">Emergency cleaning when you need it most. Unexpected guests? We're here to help on short notice.</p>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow border border-gray-100">
          <Icon name="wrench" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Post-Construction</h3>
          <p class="text-gray-600">Professional cleanup after renovations or new construction. We remove dust, debris, and builder's residue.</p>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow border border-gray-100">
          <Icon name="academic-cap" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Historic Home Care</h3>
          <p class="text-gray-600">Special care for Somerville's historic properties. We understand antique finishes, hardwood floors, and period details.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Commercial Services Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Commercial Cleaning in Somerville
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Professional janitorial and office cleaning services</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <Icon name="building" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Office Cleaning</h3>
          <p class="text-gray-600">Daily, weekly, or monthly office cleaning for Somerville businesses. We work around your schedule - evenings and weekends available.</p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <Icon name="store" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Retail Cleaning</h3>
          <p class="text-gray-600">Keep your Somerville business spotless for customers. Floor care, window cleaning, restroom sanitation, and more.</p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200">
          <Icon name="briefcase-medical" class="w-12 h-12 text-[#FFA985] mb-4" />
          <h3 class="text-xl font-bold text-[#333333] mb-3">Medical Office Cleaning</h3>
          <p class="text-gray-600">OSHA-compliant cleaning for medical and dental practices. Proper sanitization protocols for healthcare environments.</p>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="tel:2568261100" class="btn-primary inline-block">
          Get Commercial Quote
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Why Somerville Families Choose Us
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-[#FFA985]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="users" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-lg font-bold text-[#333333] mb-2">Same Team Every Time</h3>
          <p class="text-gray-600">Consistency builds trust. You'll see the same familiar faces at each visit.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#FFA985]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="currency-dollar" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-lg font-bold text-[#333333] mb-2">Transparent Pricing</h3>
          <p class="text-gray-600">The price we quote is the price you pay. No hidden fees or surprises.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#FFA985]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="clipboard-check" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-lg font-bold text-[#333333] mb-2">49-Point Checklist</h3>
          <p class="text-gray-600">Every clean follows our detailed checklist with post-clean photo verification.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-[#FFA985]/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <Icon name="chat-bubble-left-right" class="w-8 h-8 text-[#FFA985]" />
          </div>
          <h3 class="text-lg font-bold text-[#333333] mb-2">Fast Response</h3>
          <p class="text-gray-600">We respond in minutes, not days. Your time matters to us.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="py-20 px-6 bg-[#333333]">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto text-center">
        <Icon name="star" class="w-12 h-12 text-[#FFA985] mx-auto mb-6" />
        <blockquote class="text-2xl md:text-3xl text-white font-light mb-8 leading-relaxed">
          "We have an older home in Somerville with original hardwood floors. The Valley Clean Team knows exactly how to care for them. They're thorough, professional, and genuinely care about doing great work."
        </blockquote>
        <p class="text-[#FFA985] font-medium">— Somerville Homeowner</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Frequently Asked Questions
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Common questions about our Somerville cleaning services</p>
      </div>

      <div class="max-w-3xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <details class="group bg-gray-50 rounded-2xl p-6 cursor-pointer">
            <summary class="flex justify-between items-center font-semibold text-[#333333] text-lg list-none">
              {faq.question}
              <Icon name="chevron-down" class="w-5 h-5 text-[#FFA985] group-open:rotate-180 transition-transform" />
            </summary>
            <p class="mt-4 text-gray-600 leading-relaxed">{faq.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Nearby Service Areas
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">We also serve these Decatur area communities</p>
      </div>

      <div class="flex flex-wrap justify-center gap-4 max-w-4xl mx-auto">
        <a href="/locations/decatur" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Decatur
        </a>
        <a href="/locations/decatur/priceville" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Priceville
        </a>
        <a href="/locations/decatur/hartselle" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Hartselle
        </a>
        <a href="/locations/decatur/trinity" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Trinity
        </a>
        <a href="/locations/decatur/point-mallard" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Point Mallard
        </a>
        <a href="/locations/decatur/danville" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Danville
        </a>
        <a href="/locations/decatur/austinville" class="px-6 py-3 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow text-[#333333] font-medium border border-gray-200">
          Austinville
        </a>
      </div>

      <div class="text-center mt-8">
        <a href="/locations/decatur/deep-cleaning" class="text-[#FFA985] hover:underline font-medium mr-6">Deep Cleaning in Decatur →</a>
        <a href="/locations/decatur/recurring-maid-service" class="text-[#FFA985] hover:underline font-medium">Recurring Maid Service →</a>
      </div>
    </div>
  </section>

  <!-- Quote Form Section -->
  <section id="quote" class="py-20 px-6 bg-white">
    <div class="container mx-auto">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
            Get Your Free Quote
          </h2>
          <div class="section-divider"></div>
          <p class="text-xl text-gray-600">Somerville's trusted cleaning professionals</p>
        </div>

        <form action="/api/submit-form" method="POST" class="space-y-6">
          <input type="hidden" name="source" value="somerville-page" />
          <input type="hidden" name="service_area" value="Somerville, Morgan County" />

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
              <input type="text" id="name" name="name" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-[#FFA985] focus:border-transparent" />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
              <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-[#FFA985] focus:border-transparent" />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-[#FFA985] focus:border-transparent" />
          </div>

          <div>
            <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Service Needed</label>
            <select id="service" name="service" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-[#FFA985] focus:border-transparent">
              <option value="">Select a service...</option>
              <option value="recurring">Recurring Cleaning</option>
              <option value="deep-cleaning">Deep Cleaning</option>
              <option value="move-in-out">Move-In/Move-Out</option>
              <option value="commercial">Commercial Cleaning</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Tell Us About Your Space</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-[#FFA985] focus:border-transparent"></textarea>
          </div>

          <button type="submit" class="w-full btn-primary">
            Get My Free Quote
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-16 px-6 bg-gradient-to-r from-[#FFA985] to-[#ff9066]">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready for a Spotless Somerville Home?
      </h2>
      <p class="text-xl text-white/90 mb-8">
        Call now for same-day quotes and flexible scheduling
      </p>
      <a href="tel:2568261100" class="inline-flex items-center gap-2 bg-white text-[#333333] px-8 py-4 rounded-full font-semibold hover:shadow-lg transition-shadow">
        <Icon name="phone" class="w-5 h-5" />
        (256) 826-1100
      </a>
    </div>
  </section>

  <Footer />
</BaseLayout>
