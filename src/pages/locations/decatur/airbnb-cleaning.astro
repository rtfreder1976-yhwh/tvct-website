---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';

const city = "Decatur";
const state = "Alabama";
const phone = "(256) 856-1006";

// Decatur areas
const neighborhoods = [
  "Bank Street Historic District",
  "Albany Historic District",
  "Downtown Decatur",
  "Point Mallard Area",
  "Near Wheeler Lake",
  "Tennessee River Area",
  "Southwest Decatur",
  "Austin",
  "Priceville",
  "Hartselle"
];

// What's included
const includedServices = [
  "Fresh linens & bed making",
  "Towel setup & display",
  "All surfaces wiped & dusted",
  "Kitchen deep cleaned",
  "Appliances cleaned inside & out",
  "Dishes washed & put away",
  "Bathrooms sanitized",
  "Toiletries restocked (if provided)",
  "Floors vacuumed & mopped",
  "Trash removed & bins lined",
  "Amenities checked & organized",
