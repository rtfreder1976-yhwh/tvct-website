import QuoteForm from '../../../components/QuoteForm.astro';

const city = "Decatur";
const state = "Alabama";
const phone = "(256) 826-1100";

// Decatur neighborhoods
const neighborhoods = [
  "Old Decatur Historic District",
  "Albany Historic District",
  "Point Mallard",
  "Southwest Decatur",
  "Southeast Decatur",
  "Hartselle",
  "Priceville",
  "Somerville",
  "Trinity",
  "Moulton",
  "Danville",
  "Cedar Ridge",
  "Brookhaven",
  "Wheeler Lake Area"
];

// What's included in deep cleaning
const includedServices = [
  "All surfaces dusted top to bottom",
  "Ceiling fans & light fixtures cleaned",
  "Baseboards thoroughly wiped",
  "Door frames & doors cleaned",
  "Window sills & tracks detailed",
  "All switch plates & outlets wiped",
  "Kitchen deep cleaned & degreased",
  "Inside oven cleaning",
  "Inside refrigerator cleaning",
  "Inside microwave & dishwasher",
  "Cabinet fronts cleaned",
  "All bathrooms deep scrubbed",
  "Tile grout cleaned",
  "Shower doors descaled",
  "Toilets sanitized inside & out",
  "Mirrors & glass polished",
  "Floors vacuumed & mopped",
  "Under furniture cleaned",
  "Trash removed & liners replaced"
];

// Process steps
const processSteps = [
  {
    step: "1",
    title: "Request Your Quote",
    description: "Tell us about your Decatur home—square footage, number of rooms, and any specific needs. We'll provide a detailed, no-obligation quote."
  },
  {
    step: "2",
    title: "Schedule Your Clean",
    description: "Pick a date that works around your schedule. We offer flexible times including evenings and weekends for manufacturing shift workers."
  },
  {
    step: "3",
    title: "Deep Clean Every Room",
    description: "Our trained team systematically cleans your entire home—inside appliances, behind furniture, and everywhere regular cleaning misses."
  },
  {
    step: "4",
    title: "Enjoy Your Spotless Home",
    description: "Walk into a fresh, sanitized home that looks and smells amazing. Many Decatur clients continue with recurring service."
  }
];

// FAQs
const faqs = [
  {
    question: "How much does deep cleaning cost in Decatur?",
    answer: "Deep cleaning in Decatur typically ranges from $225-$375 for average-sized homes (1,500-2,500 sq ft). Larger homes and historic properties in Old Decatur or Albany districts may run $350-$500+. Pricing depends on square footage, number of rooms, home condition, and specific requests. Call (256) 826-1100 for a free quote."
  },
  {
    question: "What's included in deep cleaning vs. regular cleaning?",
    answer: "Deep cleaning goes far beyond regular maintenance. We clean inside appliances (oven, refrigerator, microwave), detail baseboards, clean window sills and tracks, degrease kitchen surfaces, deep scrub tile grout, clean under and behind furniture, dust ceiling fans and light fixtures, and sanitize high-touch surfaces throughout your Decatur home."
  },
  {
    question: "Do you clean historic Victorian homes in Old Decatur?",
    answer: "Absolutely! Decatur has Alabama's largest concentration of Victorian-era cottages, and we're experienced with these beautiful historic homes. We use gentle, pH-neutral products that clean effectively while protecting original hardwood floors, ornate woodwork, and antique fixtures. Your home's historic character deserves careful attention."
  },
  {
    question: "How long does deep cleaning take in Decatur?",
    answer: "Typical Decatur homes (1,500-2,500 sq ft) take 3-5 hours for thorough deep cleaning. Larger homes or those that haven't been professionally cleaned recently may take 5-7+ hours. Historic homes with detailed architectural features may also require additional time. We don't rush—we ensure every area meets our standards."
  },
  {
    question: "Can you work around manufacturing shift schedules?",
    answer: "Yes! Many Decatur clients work at United Launch Alliance, Daikin, 3M, Toray, and other manufacturing facilities with rotating shifts. We offer flexible scheduling including early mornings, evenings, and weekends to accommodate your work schedule. Your home will be spotless when you get off shift."
  },
  {
    question: "Do you clean Wheeler Lake vacation rentals?",
    answer: "Yes, we specialize in deep cleaning for Wheeler Lake vacation rentals and Airbnb properties. Whether you need turnover service between guests or a seasonal deep clean, we help maintain your property's 5-star rating. We can coordinate with your rental calendar for seamless service."
  },
  {
    question: "What Decatur neighborhoods do you serve?",
    answer: "We serve all of Decatur and Morgan County including Old Decatur Historic District, Albany Historic District, Point Mallard area, Southwest and Southeast Decatur, Cedar Ridge, Brookhaven, plus Hartselle, Priceville, Somerville, Trinity, Danville, and Moulton. We also serve Wheeler Lake properties along the Tennessee River."
  },
  {
    question: "Should I start with deep cleaning before recurring service?",
    answer: "We highly recommend it. A deep clean establishes a pristine baseline, then recurring service maintains that level. Think of it like detailing your car before regular washes. Most Decatur clients start with deep cleaning, then transition to biweekly or monthly service to keep their home consistently clean."
  }
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Deep Cleaning Decatur AL",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+12568261100",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Decatur",
      "addressRegion": "AL",
      "addressCountry": "US"
    }
  },
  "areaServed": neighborhoods.map(n => ({
    "@type": "Place",
    "name": `${n}, Decatur, AL`
  })),
  "serviceType": "Deep Cleaning",
  "description": "Professional deep cleaning services in Decatur, Alabama. Comprehensive top-to-bottom cleaning for homes throughout Morgan County."
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout
  title="Deep Cleaning Decatur AL | Valley Clean Team"
  description="Professional deep cleaning in Decatur, AL. Serving Old Decatur, Albany, Hartselle, Wheeler Lake. Inside appliances, baseboards. Veteran-owned."
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 px-6 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-block bg-green-50 border border-green-200 px-4 py-2 rounded-full mb-4">
            <span class="text-green-700 text-sm font-medium">
              <Icon name="sparkles" class="w-5 h-5 mr-2" />Top-to-Bottom Cleaning
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-[#333333] mb-6 leading-tight">
            Deep Cleaning Services in <span class="gold-gradient">Decatur, Alabama</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            From Victorian cottages in Old Decatur to modern homes in Cedar Ridge, our comprehensive deep cleaning service reaches every corner of your Decatur home. We clean inside appliances, behind furniture, and everywhere regular cleaning misses—leaving your home truly, thoroughly clean.
          </p>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-3 mb-6">
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="medal" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">Veteran-Owned</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="shield-alt" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span class="text-sm font-semibold text-gray-700">$2M Insured</span>
            </div>
            <div class="flex items-center bg-white px-3 py-2 rounded-full shadow-sm border border-gray-200">
              <Icon name="star" class="w-5 h-5 text-[#FFA985] mr-2" fill="currentColor" />
              <span class="text-sm font-semibold text-gray-700">130+ 5-Star Reviews</span>
            </div>
          </div>

          <!-- Price -->
          <div class="bg-white rounded-xl p-4 shadow-md border border-gray-100 inline-block mb-6">
            <div class="flex items-center gap-4">
              <div>
                <span class="text-sm text-gray-600">Deep Cleaning From</span>
                <div class="text-3xl font-bold text-[#FFA985]">$225</div>
              </div>
              <div class="text-gray-300">|</div>
              <div>
                <span class="text-sm text-gray-600">Typical Decatur Homes</span>
                <div class="text-lg font-semibold text-gray-700">$275-$375</div>
              </div>
              <div class="text-gray-300">|</div>
              <div>
                <span class="text-sm text-gray-600">Historic/Larger Homes</span>
                <div class="text-lg font-semibold text-gray-700">$350-$500+</div>
              </div>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#quote" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-white bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-full shadow-lg hover:shadow-xl transition-all">
              <Icon name="calendar-check" class="w-5 h-5 mr-2" />Get Free Quote
            </a>
            <a href="tel:+12568261100" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-[#333333] bg-white border-2 border-[#FFA985] rounded-full hover:bg-[#FFA985]/10 transition-all">
              <Icon name="phone" class="w-5 h-5 mr-2" />{phone}
            </a>
          </div>
        </div>

        <!-- Quote Form -->
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
          <h2 class="text-2xl font-bold text-[#333333] mb-2 text-center">Get Your Free Quote</h2>
          <p class="text-gray-600 text-center mb-6">Decatur's trusted deep cleaning professionals</p>
          <QuoteForm
            formId="decatur-deep-cleaning-form"
            city="Decatur"
            state="AL"
            serviceName="Deep Cleaning"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Why Decatur Homes Need Deep Cleaning -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-[#333333] mb-8">
          Why Decatur Homes Need <span class="gold-gradient">Professional Deep Cleaning</span>
        </h2>
        <div class="prose prose-lg max-w-none text-gray-700">
          <p class="mb-6">
            Decatur's Tennessee River location creates unique cleaning challenges. The humidity from Wheeler Lake, seasonal pollen from the wildlife refuge, and dust from Alabama's warm climate all accumulate in your home. For Decatur's hardworking manufacturing families—at United Launch Alliance, Daikin, 3M, and beyond—there's often little time for thorough cleaning after long shifts.
          </p>
          <p class="mb-6">
            For historic homes in Old Decatur and the Albany Historic District, there's an additional consideration. These beautiful Victorian cottages—the largest concentration in Alabama—feature original hardwood floors, ornate woodwork, and architectural details that require specialized care. Regular cleaning simply can't address the dust that accumulates in decorative trim, vintage radiators, and high ceilings.
          </p>
          <p>
            Whether you're preparing for Alabama Jubilee Balloon Classic guests, recovering from Point Mallard summer activities, or simply haven't had time for a thorough clean, our deep cleaning service addresses every area of your Decatur home. We clean inside appliances, behind furniture, and in corners that daily cleaning misses—leaving your home comprehensively clean.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        What's Included in <span class="gold-gradient">Decatur Deep Cleaning</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Comprehensive cleaning that goes far beyond regular maintenance
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-5xl mx-auto">
        {includedServices.map((service) => (
          <div class="flex items-center bg-white rounded-lg p-4 shadow-sm border border-gray-100">
            <Icon name="check-circle" class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" />
            <span class="text-gray-700">{service}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="py-16 bg-gray-50 px-6">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-[#333333] mb-4">
        Our <span class="gold-gradient">Deep Cleaning Process</span>
      </h2>
      <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
        Systematic, thorough, and designed for Decatur homes
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        {processSteps.map((step) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
              {step.step}
            </div>
            <h3 class="text-xl font-bold text-[#333333] mb-3">{step.title}</h3>
            <p class="text-gray-600">{step.description}</p>
