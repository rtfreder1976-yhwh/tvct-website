const faqs = [
  {
    question: "Do you serve the entire Elkmont area?",
    answer: "Yes! We serve all of Elkmont and the surrounding Limestone County communities. Whether you're near downtown Elkmont, out on one of the rural roads, or anywhere in between, our team provides the same quality service. We're familiar with the area and work with many local families."
  },
  {
    question: "What makes your cleaning different from other services?",
    answer: "We're veteran-owned, fully insured, and we send the same team to your home every visit. Your cleaners get to know your home, your preferences, and your family. No revolving door of strangers - just consistent, reliable service from people you can trust. Plus, we use family-safe, pet-friendly products."
  },
  {
    question: "Can you clean my Elkmont business or office?",
    answer: "Absolutely! We provide commercial cleaning services for Elkmont businesses of all sizes. From small offices to retail spaces, we can clean after hours or on weekends to avoid disrupting your operations. We offer daily, weekly, or monthly commercial cleaning schedules."
  },
  {
    question: "How much does house cleaning in Elkmont cost?",
    answer: "Pricing depends on your home's size, condition, and the type of service you need. Most Elkmont homes range from $120-$250 for regular maintenance cleaning. We provide free, no-obligation quotes over the phone - just call 256-826-1100 and we'll give you an accurate estimate in minutes."
  },
  {
    question: "Do you offer recurring cleaning schedules?",
    answer: "Yes! Most of our Elkmont clients choose weekly or bi-weekly cleaning. Recurring clients get preferred pricing and scheduling priority. You'll have the same team each visit on the same day, so you always know when to expect us. It's the easiest way to keep your home consistently clean."
  },
  {
    question: "What's included in a regular cleaning service?",
    answer: "Our regular maintenance cleaning covers all living areas, bedrooms, bathrooms, and kitchen. We dust, vacuum, mop, clean counters, scrub bathrooms, and tidy up. We focus on high-traffic areas that need regular attention. For a deeper clean including baseboards, ceiling fans, and inside appliances, ask about our deep cleaning service."
  },
  {
    question: "Can you clean medical offices or healthcare facilities in Elkmont?",
    answer: "Yes, we provide OSHA-compliant cleaning for medical and dental practices. We understand the specific sanitization protocols required for healthcare environments. Our team is trained in proper disinfection procedures to keep your patients and staff safe."
  },
  {
    question: "How do I schedule a cleaning?",
    answer: "Easy! Just call us at 256-826-1100 or fill out the form on this page. We'll discuss your needs, give you a quote, and schedule your first cleaning. Most clients can get on the schedule within a few days. Need same-day service? We'll do our best to accommodate you."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "House Cleaning Services",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "image": "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png",
    "telephone": "+1-256-826-1100",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Athens",
      "addressRegion": "AL",
      "addressCountry": "US"
    },
    "priceRange": "$$"
  },
  "areaServed": {
    "@type": "Place",
    "name": "Elkmont, Alabama",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Elkmont",
      "addressRegion": "AL",
      "addressCountry": "US"
    }
  },
  "description": "Professional house cleaning and maid service in Elkmont, Alabama. Residential and commercial cleaning services for Limestone County families and businesses.",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
