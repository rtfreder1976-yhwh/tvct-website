---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import SchemaMarkup from "../../../components/SchemaMarkup.astro";
import Icon from "../../../components/Icon.astro";
import QuoteForm from "../../../components/QuoteForm.astro";

const neighborhood = "Historic Downtown";
const city = "Athens";
const state = "Alabama";

// Schema for FAQPage
const faqs = [
    {
        question: "Do you serve businesses as well as homes around The Square?",
        answer: "Yes! We provide premium cleaning services for both residential properties and commercial spaces around the Limestone County Courthouse square and the broader downtown area.",
    },
    {
        question:
            "Do you offer event cleanup for festivals like the Fiddlers Convention?",
        answer: "Absolutely. We know the downtown area gets busy during major events at Athens State University and around The Square. We offer pre- and post-event cleaning services to ensure your property looks its best.",
    },
    {
        question:
            "What makes Valley Clean Team different from other maid services?",
        answer: "We're veteran-owned, fully insured, and we send the same team to your home every visit. Your cleaners learn your home, your preferences, and your family. No revolving door of strangers - just consistent, reliable service from people you can trust.",
    },
    {
        question: "How do I schedule a cleaning in Downtown Athens?",
        answer: "Easy! Just call us at 256-826-1100 or fill out the form on this page. We'll discuss your needs, give you a quote, and schedule your first cleaning.",
    },
];

const faqSchema = {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: faqs.map((faq) => ({
        "@type": "Question",
        name: faq.question,
        acceptedAnswer: {
            "@type": "Answer",
            text: faq.answer,
        },
    })),
};

const serviceSchema = {
    "@context": "https://schema.org",
    "@type": "Service",
    serviceType: "Maid Services",
    provider: {
        "@type": "LocalBusiness",
        name: "The Valley Clean Team",
        image: "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png",
        telephone: "+1-256-826-1100",
        address: {
            "@type": "PostalAddress",
            addressLocality: "Huntsville",
            addressRegion: "AL",
            addressCountry: "US",
        },
        priceRange: "$$",
    },
    areaServed: {
        "@type": "Place",
        name: "Historic Downtown, Athens, Alabama",
    },
    description:
        "Professional maid service in Historic Downtown, Athens. Luxury house cleaning services.",
};
---

<BaseLayout
    title="Historic Downtown Athens, AL Cleaning Services | Valley Clean Team"
    description="Premium house and commercial cleaning for Historic Downtown Athens, AL. Veteran-owned, $2M insured. Regular and deep cleaning. Get a pristine property today."
    geoRegion="US-AL"
    geoPlacename="Historic Downtown, Athens"
>
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script
        type="application/ld+json"
        set:html={JSON.stringify(serviceSchema)}
    />

    <!-- Hero Section -->
    <section
        class="pt-32 pb-20 px-6 bg-gradient-to-br from-gray-900 to-gray-800"
    >
        <div class="container mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div class="text-center lg:text-left">
                    <div
                        class="inline-block bg-gradient-to-r from-[#FFA985] to-[#FFC67D] px-4 py-2 rounded-full mb-4"
                    >
                        <span class="text-gray-900 font-semibold">
                            <Icon name="clock" class="w-5 h-5 mr-2" />Serving
                            Historic Downtown
                        </span>
                    </div>
                    <h1
                        class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-white"
                    >
                        Luxury House Cleaning in <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-[#FFA985] to-[#FFC67D]"
                            >Downtown Athens</span
                        >
                    </h1>
                    <p class="text-xl text-gray-300 mb-6">
                        Keep your Downtown Athens property pristine with our
                        premium, veteran-owned cleaning service. We specialize
                        in recurring maid service and deep cleaning that
                        properly cares for your historic or modern spaces.
                    </p>

                    <div
                        class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
                    >
                        <a
                            href="tel:2568261100"
                            class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] text-gray-900 px-8 py-4 rounded-full text-lg font-semibold shadow-lg transition transform hover:scale-105 text-center"
                        >
                            <Icon
                                name="phone"
                                class="w-5 h-5 mr-2"
                            />256-826-1100
                        </a>
                        <QuoteForm
                            formId="location-hero-form"
                            city="Athens"
                            state="AL"
                        />
                    </div>
                </div>

                <div class="bg-white rounded-2xl p-8 shadow-2xl">
                    <h2
                        class="text-2xl font-bold mb-2 text-[#333333] text-center"
                    >
                        Get Your Free Quote
                    </h2>
                    <p class="text-gray-600 mb-6 text-center">
                        Serving Historic Downtown Athens
                    </p>
                    <QuoteForm
                        formId="hero-quote-form"
                        city="Athens"
                        state="Alabama"
                        serviceName="General Cleaning"
                        source="Historic Downtown Page"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- About Neighborhood Section -->
    <section class="py-20 px-6 bg-white">
        <div class="container mx-auto max-w-6xl">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div
                    class="rounded-3xl overflow-hidden shadow-2xl order-1 lg:order-2"
                >
                    <img
                        src="/images/neighborhoods/downtown_athens_clean_1771881958166.png"
                        alt="Downtown Athens Property Cleaning"
                        loading="lazy"
                        class="w-full h-[450px] object-cover hover:scale-105 transition-transform duration-700"
                    />
                </div>
                <div class="order-2 lg:order-1">
                    <h2 class="text-4xl font-bold mb-6 text-[#333333]">
                        Cleaning Service for Downtown Properties
                    </h2>
                    <div class="section-divider" style="margin-left: 0;"></div>
                    <p class="text-lg text-gray-700 mb-4">
                        With its iconic Limestone County Courthouse square,
                        beloved local businesses, and beautifully preserved
                        architecture, Downtown Athens is the vibrant heart of
                        the city. Between enjoying local festivals and community
                        events, you shouldn't have to worry about keeping your
                        space perfectly clean.
                    </p>
                    <p class="text-lg text-gray-700 mb-6">
                        The Valley Clean Team provides reliable, top-tier
                        cleaning services tailored for Downtown homes and
                        businesses. Whether you need a deep clean before hosting
                        an event, or you're looking for recurring weekly maid
                        service, our trusted teams deliver a spotless clean so
                        you can simply enjoy your time on the square.
                    </p>
                    <div
                        class="bg-gradient-to-br from-[#FFA985]/10 to-[#FFC67D]/10 rounded-2xl p-6 border border-[#FFA985]/20"
                    >
                        <h3 class="text-xl font-bold text-[#333333] mb-4">
                            Why Choose Us:
                        </h3>
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <Icon
                                    name="check"
                                    class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0"
                                />
                                <span class="text-gray-700"
                                    ><strong>Same team</strong> every visit - familiar
                                    faces you trust</span
                                >
                            </li>
                            <li class="flex items-start">
                                <Icon
                                    name="check"
                                    class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0"
                                />
                                <span class="text-gray-700"
                                    ><strong>Flexible scheduling</strong> that works
                                    for your life</span
                                >
                            </li>
                            <li class="flex items-start">
                                <Icon
                                    name="check"
                                    class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0"
                                />
                                <span class="text-gray-700"
                                    ><strong>Pet-friendly</strong> products safe for
                                    your animals</span
                                >
                            </li>
                            <li class="flex items-start">
                                <Icon
                                    name="check"
                                    class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0"
                                />
                                <span class="text-gray-700"
                                    ><strong>Veteran-owned</strong> with military
                                    attention to detail</span
                                >
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6 bg-gray-50">
        <div class="container mx-auto max-w-4xl">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4 text-[#333333]">
                    Downtown Athens Cleaning FAQs
                </h2>
                <div class="section-divider"></div>
            </div>
            <div class="space-y-4">
                {
                    faqs.map((faq) => (
                        <div
                            class="faq-item bg-white rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer"
                            onclick="this.classList.toggle('active')"
                        >
                            <div class="flex justify-between items-center">
                                <h3 class="font-bold text-[#333333] pr-4">
                                    {faq.question}
                                </h3>
                                <Icon
                                    name="chevron-down"
                                    class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0"
                                />
                            </div>
                            <div class="faq-answer">
                                <p class="text-gray-600 mt-4">{faq.answer}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</BaseLayout>
