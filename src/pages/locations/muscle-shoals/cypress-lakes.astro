  "areaServed": {
    "@type": "Place",
    "name": "Cypress Lakes Golf Community, Florence, Alabama",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "34.8150",
      "longitude": "-87.6800"
    },
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Florence",
