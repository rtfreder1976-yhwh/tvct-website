  description="Cleaning for Cypress Lakes Golf Community homes. Upscale property specialists. Regular maintenance, deep cleaning & event prep for Florence estates."
  geoRegion="US-AL"
  geoPlacename="Cypress Lakes, Florence, Alabama"
  geoPosition="34.8150;-87.6800"
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6 bg-gradient-to-br from-gray-900 to-gray-800">
