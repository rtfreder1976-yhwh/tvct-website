// Neighborhoods and areas served
const neighborhoods = [
  "Town Madison",
  "Rainbow Mountain Heights",
  "West Highlands",
  "Clift Farm",
  "Village at Oakland Springs",
  "Bridgefield",
  "Downtown Madison",
  "Madison Station Historic District",
  "Providence",
  "Bradford Lakes",
  "Celtic Manor",
  "Hughes Road area",
  "Triana"
