import { madisonTestimonials } from '../../../data/testimonials';
import Icon from '../../../components/Icon.astro';

const city = "Madison";
const state = "Alabama";
const region = "Madison County";

// Geographic data
const geoData = {
  region: "US-AL",
  position: "34.6992;-86.7483",
  image: "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029f8fa3b30bb23e26e.webp"
