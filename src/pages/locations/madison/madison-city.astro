---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import Icon from '../../../components/Icon.astro';

const faqs = [
  {
    question: "Do you serve all of Madison City?",
    answer: "Yes! We serve all Madison City neighborhoods including areas with 35756, 35757, and 35758 zip codes. From established neighborhoods near Downtown Madison to newer developments along County Line Road and Hughes Road, our team covers all of Madison City."
  },
  {
    question: "What size homes do you typically clean in Madison?",
    answer: "Madison homes range from 1,800 sq ft starter homes to 4,500+ sq ft executive residences. The city features diverse housing from townhomes to large family homes in neighborhoods like Providence, Bradford Creek, and Clift's Cove. We customize our pricing based on your specific home."
  },
  {
    question: "Can you clean during the day while we're at work?",
    answer: "Absolutely! This is our most popular option for Madison families. Many residents work at Redstone Arsenal, Cummings Research Park, or throughout Huntsville. Provide us with a garage code or key, and we'll clean while you're at work so you come home to a spotless house."
  },
  {
    question: "What's included in regular maintenance cleaning?",
    answer: "Our regular service (weekly or bi-weekly) includes all living areas, bedrooms, bathrooms, kitchen, dusting, vacuuming, mopping, and tidying. You'll have the same team each visit who learns your home and preferences. Consistent service that keeps your home company-ready."
  },
  {
    question: "Do you serve Madison's master-planned communities?",
    answer: "Yes! We're trusted by families in Providence, Bradford Creek, Clift's Cove, Heritage Plantation, and other Madison subdivisions. Our teams are experienced with the larger executive-style homes common in these communities."
  },
  {
    question: "Do you offer move-in/move-out cleaning?",
    answer: "Yes! Madison's real estate market is active. We offer move-out cleaning to help you get your deposit back, and move-in cleaning for a fresh start. We clean inside appliances, cabinets, closets - the complete package."
  },
  {
    question: "Are your products safe for kids and pets?",
    answer: "Yes! We use eco-friendly, non-toxic cleaning products that are safe for children, pets, and the environment. Madison families trust us around their kids and furry friends. No harsh chemical residues left behind."
  },
  {
    question: "How quickly can you start service in Madison City?",
    answer: "We can often start within a few days, and same-day service is available for urgent needs. Call 256-826-1100 and we'll work to accommodate your schedule. Madison is one of our primary service areas."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Residential Cleaning Services",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "image": "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png",
    "telephone": "+1-256-826-1100",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Huntsville",
      "addressRegion": "AL",
      "addressCountry": "US"
    },
    "priceRange": "$$"
  },
  "areaServed": {
    "@type": "Place",
    "name": "Madison City, Alabama",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Madison",
      "addressRegion": "AL",
      "postalCode": "35758",
      "addressCountry": "US"
    }
  },
  "description": "Professional house cleaning services for Madison City families. Regular maintenance, deep cleaning, move-in/out services for homes throughout Madison, Alabama.",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  }
};
---

<BaseLayout
  title="House Cleaning in Madison City, AL | Valley Clean Team"
  description="Professional cleaning for Madison City homes. Serving 35756, 35757, 35758. Top-rated schools, great neighborhoods. Veteran-owned. Free quotes: 256-826-1100"
  geoRegion="US-AL"
  geoPlacename="Madison City, Alabama"
  geoPosition="34.6993;-86.7483"
  canonicalUrl="https://thevalleycleanteam.com/locations/madison/madison-city"
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6 bg-gradient-to-br from-gray-900 to-gray-800">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <div class="inline-block bg-gradient-to-r from-[#FFA985] to-[#FFC67D] px-4 py-2 rounded-full mb-4">
            <span class="text-gray-900 font-semibold">
              <Icon name="award" class="w-5 h-5 mr-2" />Alabama's Best City to Live
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-white">
            House Cleaning in <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#FFA985] to-[#FFC67D]">Madison City</span>
          </h1>
          <p class="text-xl text-gray-300 mb-6">
            Madison City offers families award-winning schools, beautiful neighborhoods, and an exceptional quality of life. But busy schedules mean less time for housework. Let The Valley Clean Team keep your home spotless while you enjoy everything Madison has to offer.
          </p>

          <div class="grid grid-cols-3 gap-4 mb-8">
            <div class="bg-white/10 backdrop-blur rounded-xl p-4 text-center">
              <Icon name="home" class="w-8 h-8 text-[#FFA985] mb-2" />
              <p class="text-white font-semibold text-sm">Family</p>
              <p class="text-gray-400 text-xs">Focused</p>
            </div>
            <div class="bg-white/10 backdrop-blur rounded-xl p-4 text-center">
              <Icon name="shield-alt" class="w-8 h-8 text-[#FFA985] mb-2" />
              <p class="text-white font-semibold text-sm">Licensed</p>
              <p class="text-gray-400 text-xs">& Insured</p>
            </div>
            <div class="bg-white/10 backdrop-blur rounded-xl p-4 text-center">
              <Icon name="calendar-check" class="w-8 h-8 text-[#FFA985] mb-2" />
              <p class="text-white font-semibold text-sm">Same Day</p>
              <p class="text-gray-400 text-xs">Available</p>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="tel:2568261100" class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] text-gray-900 px-8 py-4 rounded-full text-lg font-semibold shadow-lg transition transform hover:scale-105 text-center">
              <Icon name="phone" class="w-5 h-5 mr-2" />Call for Quote
            </a>
            <a href="/booking" class="border-2 border-[#FFA985] text-[#FFA985] px-8 py-4 rounded-full text-lg font-semibold hover:bg-[#FFA985] hover:text-gray-900 transition text-center">
              Book Online
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-2xl p-8 shadow-2xl">
          <div class="text-center mb-6">
            <span class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] text-gray-900 px-4 py-2 rounded-full text-sm font-bold">
              <Icon name="clock" class="w-5 h-5 mr-1" /> 2-HOUR RESPONSE
            </span>
          </div>
          <h3 class="text-2xl font-bold text-[#333333] mb-2 text-center">Get Your Free Quote</h3>
          <p class="text-gray-600 mb-6 text-center">Serving Madison City families</p>
          <form id="madison-city-form">
            <div class="mb-4">
              <input type="text" name="name" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985]" placeholder="Your Name *" required>
            </div>
            <div class="mb-4">
              <input type="tel" name="phone" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985]" placeholder="Phone Number *" required>
            </div>
            <div class="mb-4">
              <input type="email" name="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985]" placeholder="Email Address *" required>
            </div>
            <div class="mb-4">
              <select name="service_type" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985]" required>
                <option value="">Select Service *</option>
                <option value="Regular Cleaning (Weekly/Bi-weekly)">Regular Cleaning (Weekly/Bi-weekly)</option>
                <option value="Deep Cleaning">Deep Cleaning</option>
                <option value="Move In/Out">Move In/Out Cleaning</option>
                <option value="Post-Construction">Post-Construction</option>
                <option value="One-Time Cleaning">One-Time Cleaning</option>
              </select>
            </div>
            <div class="mb-4">
              <select name="home_size" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985]" required>
                <option value="">Home Size *</option>
                <option value="Under 2,000 sq ft">Under 2,000 sq ft</option>
                <option value="2,000 - 2,500 sq ft">2,000 - 2,500 sq ft</option>
                <option value="2,500 - 3,500 sq ft">2,500 - 3,500 sq ft</option>
                <option value="3,500 - 4,500 sq ft">3,500 - 4,500 sq ft</option>
                <option value="Over 4,500 sq ft">Over 4,500 sq ft</option>
              </select>
            </div>
            <div class="mb-4">
              <textarea name="message" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985]" placeholder="Additional details (neighborhood, pets, etc.)" rows="2"></textarea>
            </div>
            <button type="submit" id="madison-city-submit-btn" class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] text-gray-900 w-full py-4 rounded-lg text-lg font-semibold shadow-lg transition hover:opacity-90">
              <Icon name="calendar-check" class="w-5 h-5 mr-2" />Get Free Quote
            </button>
            <p class="text-center text-xs text-gray-500 mt-3">
              <Icon name="shield-alt" class="w-5 h-5 mr-1" /> Licensed, bonded & insured
            </p>
            <div id="madison-city-form-message" class="hidden text-center p-4 rounded-lg mt-3"></div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- About Madison City Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto max-w-6xl">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-[#333333]">
            Cleaning Services for<br>Madison City Families
          </h2>
          <div class="section-divider" style="margin-left: 0;"></div>
          <p class="text-lg text-gray-700 mb-4">
            Madison City has been named one of Alabama's best places to live - and for good reason. Award-winning Madison City Schools, beautiful parks, excellent shopping, and proximity to Huntsville make it ideal for families. The city spans zip codes 35756, 35757, and 35758, encompassing diverse neighborhoods from Downtown Madison to newer developments.
          </p>
          <p class="text-lg text-gray-700 mb-4">
            From established areas near Hughes Road to master-planned communities like Providence and Bradford Creek, Madison offers housing options for every family. Many residents work at Cummings Research Park, Redstone Arsenal, or throughout the Tennessee Valley while enjoying Madison's family-friendly atmosphere.
          </p>
          <p class="text-lg text-gray-700">
            Whether you need weekly maintenance to keep up with busy school and activity schedules, a deep clean before hosting, or move-in cleaning for your new Madison home, The Valley Clean Team delivers reliable, professional service. We're a veteran-owned company trusted by Madison families.
          </p>
        </div>
        <div class="bg-gradient-to-br from-[#FFA985]/10 to-[#FFC67D]/10 rounded-2xl p-8 border border-[#FFA985]/20">
          <h3 class="text-2xl font-bold text-[#333333] mb-6">Madison City Neighborhoods We Serve:</h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>Providence</strong> - golf course community</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>Bradford Creek</strong> - family neighborhood</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>Clift's Cove</strong> - established homes</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>Heritage Plantation</strong> - master-planned</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>Downtown Madison</strong> - historic area</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>Hughes Road</strong> corridor</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>County Line Road</strong> area</span>
            </li>
            <li class="flex items-start">
              <Icon name="check" class="w-5 h-5 text-green-500 mt-1 mr-3 flex-shrink-0" />
              <span class="text-gray-700"><strong>All 35756, 35757, 35758</strong> zip codes</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Services for Madison City Homes
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <Icon name="redo" class="w-5 h-5 text-[#FFA985] text-4xl mb-4" />
          <h3 class="text-2xl font-bold text-[#333333] mb-4">Regular Cleaning</h3>
          <p class="text-gray-600 mb-6">Weekly or bi-weekly cleaning keeps your Madison home consistently clean. Same team every visit, flexible scheduling around school and work. Reclaim your weekends for family time.</p>
          <a href="tel:2568261100" class="btn-primary w-full text-center py-3 rounded-lg font-semibold">
            Get Started
          </a>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <Icon name="sparkles" class="w-5 h-5 text-[#FFA985] text-4xl mb-4" />
          <h3 class="text-2xl font-bold text-[#333333] mb-4">Deep Cleaning</h3>
          <p class="text-gray-600 mb-6">Top-to-bottom detailed cleaning including baseboards, ceiling fans, inside appliances, and all those neglected areas. Perfect for seasonal refresh or before hosting.</p>
          <a href="tel:2568261100" class="btn-primary w-full text-center py-3 rounded-lg font-semibold">
            Book Deep Clean
          </a>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <Icon name="truck" class="w-5 h-5 text-[#FFA985] text-4xl mb-4" />
          <h3 class="text-2xl font-bold text-[#333333] mb-4">Move In/Out</h3>
          <p class="text-gray-600 mb-6">Moving to or from Madison City? We'll deep clean every surface, inside cabinets and appliances, so you get your deposit back or start fresh in your new home.</p>
          <a href="tel:2568261100" class="btn-primary w-full text-center py-3 rounded-lg font-semibold">
            Schedule Move Clean
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 px-6 bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Frequently Asked Questions
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <div class="faq-item bg-gray-50 rounded-xl p-6 shadow-md border border-gray-200 cursor-pointer" onclick="this.classList.toggle('active')">
            <div class="flex justify-between items-center">
              <h3 class="font-bold text-[#333333] pr-4">{faq.question}</h3>
              <Icon name="chevron-down" class="w-5 h-5 text-[#FFA985] faq-icon flex-shrink-0" />
            </div>
            <div class="faq-answer">
              <p class="text-gray-600 mt-4">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Area Links -->
  <section class="py-16 px-6 bg-gray-50">
    <div class="container mx-auto max-w-5xl">
      <h3 class="text-2xl font-bold text-[#333333] mb-8 text-center">
        Also Serving Nearby Communities
      </h3>
      <div class="grid md:grid-cols-3 gap-4">
        <a href="/locations/madison/providence" class="neighborhood-badge block text-center">
          Providence
        </a>
        <a href="/locations/madison/bradford-creek" class="neighborhood-badge block text-center">
          Bradford Creek
        </a>
        <a href="/locations/madison/clifts-cove" class="neighborhood-badge block text-center">
          Clift's Cove
        </a>
        <a href="/locations/huntsville" class="neighborhood-badge block text-center">
          Huntsville
        </a>
        <a href="/locations/madison/triana" class="neighborhood-badge block text-center">
          Triana
        </a>
        <a href="/locations" class="neighborhood-badge block text-center">
          View All Locations
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 px-6 bg-gradient-to-br from-gray-900 to-gray-800">
    <div class="container mx-auto max-w-3xl text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">
        Ready for a <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#FFA985] to-[#FFC67D]">Cleaner Home?</span>
      </h2>
      <p class="text-xl text-gray-300 mb-8">
        Stop spending your weekends cleaning. Madison City families trust The Valley Clean Team to keep their homes spotless. Call now for your free quote.
      </p>
      <a href="tel:2568261100" class="bg-gradient-to-r from-[#FFA985] to-[#FFC67D] text-gray-900 px-12 py-5 rounded-full text-xl font-bold shadow-xl transition transform hover:scale-105 inline-block">
        <Icon name="phone" class="w-5 h-5 mr-3" />256-826-1100
      </a>
      <p class="text-gray-400 mt-6">
        <Icon name="calendar-alt" class="w-5 h-5 mr-2" />Same-day service available | 2-hour response guarantee
      </p>
    </div>
  </section>

  <Footer />

  <script>
    document.getElementById('madison-city-form')?.addEventListener('submit', async function(e) {
      e.preventDefault();
      const submitBtn = document.getElementById('madison-city-submit-btn');
      const messageDiv = document.getElementById('madison-city-form-message');
      const form = e.target as HTMLFormElement;
      const formData = {
        name: (form.elements.namedItem('name') as HTMLInputElement)?.value || '',
        phone: (form.elements.namedItem('phone') as HTMLInputElement)?.value || '',
        email: (form.elements.namedItem('email') as HTMLInputElement)?.value || '',
        service: (form.elements.namedItem('service_type') as HTMLSelectElement)?.value || '',
        location: 'Madison City',
        home_size: (form.elements.namedItem('home_size') as HTMLSelectElement)?.value || '',
        message: (form.elements.namedItem('message') as HTMLTextAreaElement)?.value || '',
        source: 'Madison City Landing Page',
        page_url: window.location.href
      };
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span class="spinner"></span>Sending...';
      }
      try {
        const response = await fetch('/api/submit-form', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });
        const result = await response.json();
        if (response.ok && result.success) {
          if (messageDiv) {
            messageDiv.className = 'text-center p-4 rounded-lg bg-green-100 text-green-800';
            messageDiv.innerHTML = '<Icon name="check-circle" class="w-5 h-5 mr-2" />Thank you! We\'ll call you within 2 hours with your quote.';
            messageDiv.classList.remove('hidden');
          }
          form.reset();
        } else {
          throw new Error(result.error || 'Submission failed');
        }
      } catch (error) {
        if (messageDiv) {
          messageDiv.className = 'text-center p-4 rounded-lg bg-red-100 text-red-800';
          messageDiv.innerHTML = '<Icon name="exclamation-circle" class="w-5 h-5 mr-2" />Something went wrong. Please call us at 256-826-1100.';
          messageDiv.classList.remove('hidden');
        }
      }
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<Icon name="calendar-check" class="w-5 h-5 mr-2" />Get Free Quote';
      }
    });
  </script>
</BaseLayout>
