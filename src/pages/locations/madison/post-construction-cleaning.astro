---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Icon from '../../../components/Icon.astro';
import QuoteForm from '../../../components/QuoteForm.astro';

const city = "Madison";
const state = "Alabama";
const phone = "(256) 856-1006";

// Madison neighborhoods with new construction
const neighborhoods = [
  "Town Madison",
  "Clift Farm",
  "The Exchange",
  "The Heights at Town Madison",
  "Town Madison West End",
  "Providence",
  "Bradford Creek",
  "Rainbow Mountain Heights",
  "Anslee Farms",
  "Celtic Manor",
  "Village at Oakland Springs",
  "Lake Forest"
];

// What's included
const includedServices = [
  "Fine dust removal from all surfaces",
  "HVAC vent & register cleaning",
  "Inside all cabinets & drawers",
  "Window sill & track cleaning",
  "Light fixtures & ceiling fans",
  "All baseboards wiped down",
  "Door frames & hardware cleaned",
  "Switch plates & outlets wiped",
  "Countertops detailed & polished",
  "Appliance interior cleaning",
  "Bathroom deep sanitization",
  "Tile & grout cleaning",
  "Mirror & glass polishing",
  "Floor cleaning & mopping",
  "Garage sweep out",
