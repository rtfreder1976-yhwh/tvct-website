    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Premium Residential Cleaning Services",
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "image": "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802945dc047d65b4ec5d.png",
    "telephone": "+1-256-826-1100",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Huntsville",
      "addressRegion": "AL",
      "addressCountry": "US"
    },
    "priceRange": "$$$",
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "5.0",
      "reviewCount": "130"
    }
  },
  "areaServed": {
    "@type": "Place",
    "name": "Providence - Madison, Alabama",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Madison",
      "addressRegion": "AL",
      "addressCountry": "US"
    }
  },
  "description": "Professional house cleaning services for Providence master-planned community in Madison, Alabama. Regular maintenance, deep cleaning, and move-in/out services for golf course homes and executive residences.",
