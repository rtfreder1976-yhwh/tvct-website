  description="Trusted cleaning for Providence homes in Madison. Master-planned community specialists. Background-checked team, eco-friendly products. Book today!"
  geoRegion="US-AL"
  geoPlacename="Providence, Madison, Alabama"
  geoPosition="34.7120;-86.7510"
  canonicalUrl="https://thevalleycleanteam.com/locations/madison/providence"
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <Navigation />

