  <script>
    document.getElementById('crestline-quote-form')?.addEventListener('submit', async function(e) {
      e.preventDefault();

      const submitBtn = document.getElementById('crestline-submit-btn');
      const messageDiv = document.getElementById('crestline-form-message');
      const form = e.target;

      const formData = {
        name: form.name?.value || '',
        email: form.email?.value || '',
        phone: form.phone?.value || '',
        service: form.service?.value || '',
        property_size: form.property_size?.value || '',
        location: form.location?.value || '',
        neighborhood: form.neighborhood?.value || '',
        source: 'Crestline Landing Page',
        page_url: window.location.href
      };

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="spinner"></span>Sending...';

      try {
        const response = await fetch('/api/submit-form', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });
        const result = await response.json();

        if (response.ok && result.success) {
          messageDiv.className = 'text-center p-4 rounded-lg bg-green-100 text-green-800';
          messageDiv.innerHTML = '<Icon name="check-circle" class="w-5 h-5 mr-2" />Thank you! We\'ll contact you within 2 hours with your confidential consultation.';
          messageDiv.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error(result.error || 'Submission failed');
        }
      } catch (error) {
        messageDiv.className = 'text-center p-4 rounded-lg bg-red-100 text-red-800';
        messageDiv.innerHTML = '<Icon name="exclamation-circle" class="w-5 h-5 mr-2" />Please call us at 256-826-1100 for immediate assistance.';
        messageDiv.classList.remove('hidden');
      }

      submitBtn.disabled = false;
      submitBtn.textContent = 'Request Confidential Consultation';
    });
  </script>
