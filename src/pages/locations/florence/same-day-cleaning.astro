  </section>

  <!-- Shoals Areas -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Same-Day Service Throughout the Shoals
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Serving Florence, Muscle Shoals, Tuscumbia, Sheffield & beyond</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
          <p class="font-semibold text-[#333333]">Florence Historic District</p>
        </div>
        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
          <p class="font-semibold text-[#333333]">UNA Area</p>
        </div>
        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
          <p class="font-semibold text-[#333333]">Lakeside Estates</p>
        </div>
        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
