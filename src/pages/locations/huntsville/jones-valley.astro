  "areaServed": {
    "@type": "Place",
    "name": "Jones Valley - Huntsville, Alabama",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "34.6838",
      "longitude": "-86.5730"
    },
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Huntsville",
      "addressRegion": "AL",
