            <div class="flex items-center gap-4">
              <div>
                <span class="text-sm text-gray-600">1-2 Bedroom</span>
                <div class="text-2xl font-bold text-[#FFA985]">$85-$150</div>
              </div>
              <div class="text-gray-300">|</div>
              <div>
                <span class="text-sm text-gray-600">3+ Bedroom</span>
                <div class="text-2xl font-bold text-[#FFA985]">$125-$225+</div>
              </div>
              <div class="text-gray-300">|</div>
              <div>
                <span class="text-sm text-gray-600">Volume Discounts</span>
                <div class="text-lg font-semibold text-green-600">Available</div>
              </div>
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#quote" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-white bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-full shadow-lg hover:shadow-xl transition-all">
              <i class="fas fa-calendar-check mr-2"></i>Get Free Quote
            </a>
            <a href="tel:+12057900049" class="inline-flex items-center justify-center px-6 py-3 text-lg font-semibold text-[#333333] bg-white border-2 border-[#FFA985] rounded-full hover:bg-[#FFA985]/10 transition-all">
