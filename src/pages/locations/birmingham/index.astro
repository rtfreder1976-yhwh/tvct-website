---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import SchemaMarkup from '../../../components/SchemaMarkup.astro';
import { birminghamTestimonials } from '../../../data/testimonials';
import Icon from '../../../components/Icon.astro';

const city = "Birmingham";
const state = "Alabama";
const region = "Jefferson County";

// Geographic data
const geoData = {
  region: "US-AL",
  position: "33.5186;-86.8104",
  image: "https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802a2965fae379c22fb0.webp"
};

// Neighborhoods and areas served
const neighborhoods = [
  "Mountain Brook",
  "Homewood",
  "Vestavia Hills",
  "Hoover",
  "Crestline",
  "Highland Park",
  "Forest Park",
  "Southside",
  "Five Points South",
  "Avondale",
  "Lakeview",
  "Downtown Birmingham",
  "UAB Area",
  "Irondale",
  "Trussville",
  "Gardendale",
  "Cahaba Heights",
  "Brook Highland",
  "Greystone",
  "Ross Bridge",
  "Liberty Park"
];

// Birmingham-specific FAQs
const faqs = [
  {
    question: "Do you serve UAB medical professionals and healthcare executives?",
    answer: "Absolutely. The University of Alabama at Birmingham is the state's largest employer with 20,000+ employees, and we proudly serve UAB physicians, nurses, researchers, and administrators. We understand demanding schedules, on-call rotations, and the need for impeccably clean, healthy home environments. Flexible scheduling accommodates hospital shifts and late-night emergencies."
  },
  {
    question: "Can you clean luxury estates in Vestavia Hills and Homewood?",
    answer: "Yes, we specialize in premium estate cleaning throughout Birmingham's prestigious Over the Mountain suburbs. Vestavia Hills (median home value approaching $400k), Homewood (average market value $293k), and surrounding communities trust our $2 million insured, background-checked team. We understand the expectations of Birmingham's most discerning homeowners."
  },
  {
    question: "What Birmingham neighborhoods do you serve?",
    answer: "We serve all of Birmingham and Jefferson County including Mountain Brook, Homewood, Vestavia Hills, Hoover, Crestline, Highland Park, Forest Park, Southside, Five Points South, Avondale, Lakeview, Downtown, UAB Area, Irondale, Trussville, Gardendale, Cahaba Heights, Brook Highland, Greystone, Ross Bridge, and Liberty Park. Call to confirm service for your specific address."
  },
  {
    question: "Do you accommodate busy professionals working downtown?",
    answer: "Yes, many of our Birmingham clients are executives, attorneys, and professionals working in the downtown financial district, Regions headquarters, or corporate offices throughout the metro. We offer flexible scheduling including early mornings, evenings, and weekends. Same-day service is available when you need it most."
  },
  {
    question: "Are you experienced with historic homes in Southside and Highland Park?",
    answer: "Absolutely. Birmingham's historic neighborhoods—Southside, Highland Park, Forest Park, Five Points South—feature beautiful early 20th century architecture requiring specialized care. Our team is trained in gentle cleaning techniques for original hardwood floors, antique fixtures, and delicate architectural details. We use pH-neutral products that preserve these irreplaceable homes."
  },
  {
    question: "Can you handle Hoover and Ross Bridge golf community estates?",
    answer: "Yes, we serve Hoover's luxury golf communities including Ross Bridge and Greystone. These properties feature premium finishes, expansive floor plans, and high expectations. Our team is experienced with golf course windows, vaulted ceilings, gourmet kitchens, and the white-glove service Ross Bridge and Greystone residents deserve."
  },
  {
    question: "Do you offer Airbnb turnover for downtown Birmingham vacation rentals?",
    answer: "Yes, Birmingham's growing tourism industry—from civil rights history tours to college football weekends—creates strong vacation rental demand. We offer same-day turnover service for Airbnb hosts in downtown, Southside, Avondale, and Lakeview. Five-star reviews depend on spotless properties, and we deliver."
  },
  {
    question: "Are you insured to work in high-rise condos and luxury apartments?",
    answer: "Absolutely. We carry $2 million in liability insurance and are fully bonded. From Highland Park Apartments to downtown high-rises, we respect building policies, coordinate with concierge services, and provide discrete, efficient service for urban professionals. Your luxury condo receives the same premium care as any estate."
  }
];

// Schema for FAQPage
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

// Testimonials - imported from centralized data
const testimonials = birminghamTestimonials.map(t => ({
  initial: t.initial,
  name: t.name,
  area: t.source,
  text: t.text
}));
---

<BaseLayout
  title="Birmingham Cleaning Services | The Valley Clean Team"
  description="Premier Birmingham cleaning service. Veteran-owned, $2M insured. Serving Mountain Brook, Homewood, Vestavia Hills, Hoover. 130+ 5-star reviews."
  ogImage={geoData.image}
  geoRegion={geoData.region}
  geoPlacename={`${city}, ${state}`}
  geoPosition={geoData.position}
>
  <SchemaMarkup type="local" city={city} state={state} neighborhoods={neighborhoods} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Navigation />

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Column -->
        <div class="text-center lg:text-left">
          <div class="inline-block bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 px-4 py-2 rounded-full mb-4">
            <span class="text-[#FFA985] font-semibold">
              <Icon name="map-marker-alt" class="w-5 h-5 mr-2" />Proudly Serving The Magic City
            </span>
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-[#333333]">
            Luxury Cleaning Services in <span class="gold-gradient">Birmingham, Alabama</span>
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Alabama's largest metro area deserves premium cleaning service. Trusted by healthcare executives, legal professionals, and families throughout Birmingham's most prestigious neighborhoods—from Mountain Brook estates to downtown high-rises.
          </p>
          <div class="flex flex-wrap items-center lg:items-start gap-4 mb-6">
            <div class="flex items-center text-gray-700">
              <Icon name="medal" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Veteran-Owned</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="shield-alt" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>$2M Insured</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="star" class="w-5 h-5 text-[#FFA985] mr-2" fill="currentColor" />
              <span>130+ Five-Star Reviews</span>
            </div>
            <div class="flex items-center text-gray-700">
              <Icon name="award" class="w-5 h-5 text-[#FFA985] mr-2" />
              <span>Women-Led Business</span>
            </div>
          </div>
          <div class="flex flex-col sm:flex-row items-center lg:items-start space-y-3 sm:space-y-0 sm:space-x-4">
            <a href="tel:2568261100" class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg">
              <Icon name="phone" class="w-6 h-6 text-[#FFA985] mr-2" />
              <span class="font-semibold">256-826-1100</span>
            </a>
            <a href="mailto:hello@thevalleycleanteam.com" class="flex items-center text-gray-700 hover:text-[#FFA985] transition text-lg">
              <Icon name="envelope" class="w-6 h-6 text-[#FFA985] mr-2" />
              <span class="font-semibold">Email Us</span>
            </a>
          </div>
        </div>

        <!-- Right Column - Quote Form -->
        <div class="bg-white rounded-2xl p-8 shadow-2xl border-2 border-[#FFA985]/20">
          <h3 class="text-2xl font-bold text-[#333333] mb-2 text-center">Get Your Free Birmingham Quote</h3>
          <p class="text-gray-600 mb-6 text-center">Serving all Jefferson County neighborhoods</p>
          <form id="location-quote-form">
            <div class="mb-4">
              <input type="text" name="name" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Your Name *" required>
            </div>
            <div class="mb-4">
              <input type="email" name="email" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Email Address *" required>
            </div>
            <div class="mb-4">
              <input type="tel" name="phone" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Phone Number *" required>
            </div>
            <div class="mb-4">
              <input type="text" name="location" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" placeholder="Birmingham Address/Neighborhood" value="Birmingham, Alabama" required>
            </div>
            <div class="mb-4">
              <select name="service" class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:outline-none focus:border-[#FFA985] focus:ring-2 focus:ring-[#FFA985]/20" required>
                <option value="">Select Service Type *</option>
                <option value="Deep Cleaning">Deep Cleaning</option>
                <option value="Regular Cleaning">Regular Cleaning</option>
                <option value="Move In/Out Cleaning">Move In/Out Cleaning</option>
                <option value="Commercial/Office Cleaning">Commercial/Office Cleaning</option>
                <option value="Event Cleaning">Event Cleaning</option>
                <option value="Airbnb Cleaning">Airbnb Cleaning</option>
                <option value="Post-Construction Cleaning">Post-Construction Cleaning</option>
              </select>
            </div>
            <input type="hidden" name="city" value="Birmingham">
            <input type="hidden" name="state" value="Alabama">
            <button type="submit" id="location-submit-btn" class="btn-primary w-full py-4 rounded-lg text-lg font-semibold shadow-lg">
              Get My Free Birmingham Quote
            </button>
            <p class="text-center text-xs text-gray-500 mt-3">
              <Icon name="clock" class="w-5 h-5 mr-1" /> Response within 2 hours for Birmingham customers
            </p>
            <div id="location-form-message" class="hidden text-center p-4 rounded-lg mt-3"></div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="py-8 px-6 bg-gray-50">
    <div class="container mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-[#FFA985] mb-2">3+</div>
          <p class="text-gray-600">Years in Birmingham</p>
        </div>
        <div>
          <div class="text-4xl font-bold text-[#FFA985] mb-2">1047+</div>
          <p class="text-gray-600">Cleanings Completed</p>
        </div>
        <div>
          <div class="text-4xl font-bold text-[#FFA985] mb-2">5.0</div>
          <p class="text-gray-600">Average Rating</p>
        </div>
        <div>
          <div class="text-4xl font-bold text-[#FFA985] mb-2">130+</div>
          <p class="text-gray-600">5-Star Reviews</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Birmingham Section -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-5xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Why Birmingham Trusts The Valley Clean Team
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-start">
        <div>
          <h3 class="text-2xl font-bold mb-6 text-[#333333]">Alabama's Economic Engine</h3>
          <p class="text-gray-700 mb-4">
            Birmingham isn't just Alabama's largest city—it's the economic heart of the Deep South. The 1.18 million residents of the Birmingham-Hoover Metropolitan Area drive a diverse economy spanning healthcare, finance, manufacturing, and technology. With 88 distinct neighborhoods and communities spanning seven counties, Birmingham offers everything from historic urban living to sprawling suburban estates.
          </p>
          <p class="text-gray-700 mb-4">
            The University of Alabama at Birmingham (UAB) is the state's largest employer with over 20,000 employees, anchoring a healthcare industry that draws patients and professionals from across the Southeast. Regions Financial headquarters downtown, while the "Over the Mountain" suburbs—Mountain Brook, Homewood, Vestavia Hills—rank among the wealthiest communities in the South.
          </p>
          <p class="text-gray-700 mb-4">
            Birmingham's history runs deep, from its founding as an industrial powerhouse in 1871 to its pivotal role in the Civil Rights Movement. Today, that history is preserved in world-class museums while the city looks forward with new restaurants, breweries, and entertainment districts revitalizing downtown and surrounding neighborhoods.
          </p>
          <p class="text-gray-700">
            The Valley Clean Team understands Birmingham's unique character. Whether you live in a Southside bungalow, a Vestavia Hills estate, a Hoover golf community, or a downtown loft, we bring the same premium service that busy Birmingham professionals deserve. Our veteran-owned, women-led team delivers military precision with genuine Southern hospitality.
          </p>
        </div>

        <div class="bg-gradient-to-br from-[#FFA985]/10 to-[#FFC67D]/10 rounded-2xl p-8">
          <h3 class="text-2xl font-bold mb-6 text-[#333333]">The Valley Clean Team Difference</h3>
          <ul class="space-y-4">
            <li class="flex items-start">
              <Icon name="medal" class="w-6 h-6 text-[#FFA985] mr-3 mt-1" />
              <div>
                <span class="font-semibold text-[#333333]">Veteran-Owned Excellence</span>
                <p class="text-gray-600 text-sm">Military precision meets Southern hospitality</p>
              </div>
            </li>
            <li class="flex items-start">
              <Icon name="shield-alt" class="w-6 h-6 text-[#FFA985] mr-3 mt-1" />
              <div>
                <span class="font-semibold text-[#333333]">$2 Million Insurance Coverage</span>
                <p class="text-gray-600 text-sm">Complete protection for estates and luxury properties</p>
              </div>
            </li>
            <li class="flex items-start">
              <Icon name="user-check" class="w-6 h-6 text-[#FFA985] mr-3 mt-1" />
              <div>
                <span class="font-semibold text-[#333333]">Background-Checked Team</span>
                <p class="text-gray-600 text-sm">Trust and security for your Birmingham home</p>
              </div>
            </li>
            <li class="flex items-start">
              <Icon name="clock" class="w-6 h-6 text-[#FFA985] mr-3 mt-1" />
              <div>
                <span class="font-semibold text-[#333333]">Flexible Scheduling</span>
                <p class="text-gray-600 text-sm">Accommodating healthcare and professional schedules</p>
              </div>
            </li>
            <li class="flex items-start">
              <Icon name="landmark" class="w-6 h-6 text-[#FFA985] mr-3 mt-1" />
              <div>
                <span class="font-semibold text-[#333333]">Historic Home Expertise</span>
                <p class="text-gray-600 text-sm">Specialized care for Southside and Highland Park properties</p>
              </div>
            </li>
            <li class="flex items-start">
              <Icon name="award" class="w-6 h-6 text-[#FFA985] mr-3 mt-1" />
              <div>
                <span class="font-semibold text-[#333333]">Women-Led Business</span>
                <p class="text-gray-600 text-sm">Supporting local female entrepreneurship</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Over the Mountain Suburbs -->
  <section class="py-20 px-6 bg-gray-50">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
          Birmingham's Premier "Over the Mountain" Communities
        </h2>
        <div class="section-divider"></div>
        <p class="text-xl text-gray-600">Luxury cleaning for Birmingham's most prestigious suburbs</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Mountain Brook -->
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <h3 class="text-2xl font-bold mb-3 text-[#333333]">
            <Icon name="gem" class="w-5 h-5 text-[#FFA985] mr-2" />Mountain Brook
          </h3>
          <p class="text-gray-700 mb-4">
            Alabama's wealthiest community with a median household income of $191,000+, Mountain Brook features three distinct villages—Mountain Brook Village, English Village, and Crestline Village—each with luxury boutiques, fine dining, and impeccable standards.
          </p>
          <p class="text-gray-700">
            From Cherokee Bend estates to Crestline historic homes, Mountain Brook residents expect nothing less than perfection. Our team delivers white-glove service for properties ranging from $500K to multi-million dollar estates. We understand the discretion and quality this community demands.
          </p>
          <a href="/locations/mountain-brook" class="inline-block mt-4 text-[#FFA985] font-semibold hover:underline">View Mountain Brook Services <Icon name="arrow-right" class="w-5 h-5 ml-1" /></a>
        </div>

        <!-- Vestavia Hills -->
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <h3 class="text-2xl font-bold mb-3 text-[#333333]">
            <Icon name="columns" class="w-5 h-5 text-[#FFA985] mr-2" />Vestavia Hills
          </h3>
          <p class="text-gray-700 mb-4">
            Named for the Temple of Vesta-inspired mansion built by former Birmingham mayor George B. Ward, Vestavia Hills has grown from a 1946 subdivision into a thriving city of 39,000+. The third-largest city in Jefferson County combines suburban convenience with urban sophistication.
          </p>
          <p class="text-gray-700">
            Including Liberty Park and Cahaba Heights, Vestavia Hills residents enjoy top-rated schools, beautiful parks, and some of Birmingham's most desirable real estate. Our team serves families, professionals, and executives throughout this prestigious community.
          </p>
        </div>

        <!-- Homewood -->
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <h3 class="text-2xl font-bold mb-3 text-[#333333]">
            <Icon name="graduation-cap" class="w-5 h-5 text-[#FFA985] mr-2" />Homewood
          </h3>
          <p class="text-gray-700 mb-4">
            Home to Samford University and excellent city schools, Homewood sits in Shades Valley between Red Mountain and Shades Mountain. The SoHo district (South Homewood) features walkable shopping and dining, while established neighborhoods like Edgewood, West Homewood, and Oak Grove offer charming bungalows and family homes.
          </p>
          <p class="text-gray-700">
            With average home values approaching $300K and a strong sense of community, Homewood families value consistency and quality. Our weekly and bi-weekly cleaning services keep Homewood homes effortlessly maintained.
          </p>
        </div>

        <!-- Hoover -->
        <div class="bg-white rounded-2xl p-8 shadow-md border border-gray-200">
          <h3 class="text-2xl font-bold mb-3 text-[#333333]">
            <Icon name="golf-ball" class="w-5 h-5 text-[#FFA985] mr-2" />Hoover
          </h3>
          <p class="text-gray-700 mb-4">
            The second-largest city in Jefferson County, Hoover is home to the Riverchase Galleria (one of the largest malls in the Southeast), plus prestigious golf communities like Ross Bridge and Greystone. The city spans both Jefferson and Shelby Counties with over 90,000 residents.
          </p>
          <p class="text-gray-700">
            From Ross Bridge estates designed by Robert Trent Jones Golf Trail architects to Greystone's championship course community, Hoover's luxury properties demand expert care. Our team handles vaulted ceilings, golf course windows, and premium finishes with ease.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Birmingham Neighborhoods -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[#333333]">
          Downtown Birmingham & Historic Neighborhoods
        </h2>
        <div class="section-divider"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h4 class="text-xl font-bold mb-3 text-[#333333]">
            <Icon name="landmark" class="w-5 h-5 text-[#FFA985] mr-2" />Southside & Highland Park
          </h4>
          <p class="text-gray-700">
            Birmingham's premier historic neighborhoods feature early 20th century architecture, tree-lined streets, and walkable proximity to UAB. Our team specializes in caring for original hardwood floors, period details, and historic character.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h4 class="text-xl font-bold mb-3 text-[#333333]">
            <Icon name="music" class="w-5 h-5 text-[#FFA985] mr-2" />Five Points South
          </h4>
          <p class="text-gray-700">
            The entertainment heart of Birmingham, Five Points South combines historic charm with vibrant nightlife. Residents enjoy walkable restaurants, the famous Storyteller Fountain, and urban living with character.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h4 class="text-xl font-bold mb-3 text-[#333333]">
            <Icon name="beer" class="w-5 h-5 text-[#FFA985] mr-2" />Avondale
          </h4>
          <p class="text-gray-700">
            Birmingham's brewery district has transformed into one of the city's hottest neighborhoods. Historic homes meet craft breweries and new restaurants. We serve both longtime residents and newcomers attracted to Avondale's creative energy.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h4 class="text-xl font-bold mb-3 text-[#333333]">
            <Icon name="utensils" class="w-5 h-5 text-[#FFA985] mr-2" />Lakeview
          </h4>
          <p class="text-gray-700">
            Once home to an amusement park on East Lake, Lakeview has emerged as a dining destination with celebrated restaurants. Residents enjoy a mix of historic and renovated homes in this rapidly appreciating neighborhood.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h4 class="text-xl font-bold mb-3 text-[#333333]">
            <Icon name="building" class="w-5 h-5 text-[#FFA985] mr-2" />Downtown Birmingham
          </h4>
          <p class="text-gray-700">
            The revitalized downtown offers loft living, luxury apartments, and urban convenience. From Railroad Park to the historic theater district, downtown residents appreciate our flexible scheduling and discrete service.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
          <h4 class="text-xl font-bold mb-3 text-[#333333]">
            <Icon name="hospital" class="w-5 h-5 text-[#FFA985] mr-2" />UAB Medical District
          </h4>
          <p class="text-gray-700">
            Alabama's largest employer anchors this thriving area. Medical professionals, researchers, and students need reliable cleaning that accommodates demanding schedules. We understand on-call rotations and last-minute changes.
          </p>
        </div>
      </div>

      <div class="mt-12 grid md:grid-cols-4 gap-4 text-center">
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <p class="font-semibold text-[#333333]">Irondale</p>
          <p class="text-sm text-gray-600">Home of the Whistle Stop Café</p>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <p class="font-semibold text-[#333333]">Trussville</p>
          <p class="text-sm text-gray-600">Growing family community</p>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <p class="font-semibold text-[#333333]">Gardendale</p>
          <p class="text-sm text-gray-600">North Jefferson suburb</p>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <p class="font-semibold text-[#333333]">Cahaba Heights</p>
          <p class="text-sm text-gray-600">Part of Vestavia Hills</p>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <p class="font-semibold text-[#333333]">Brook Highland</p>
          <p class="text-sm text-gray-600">Upscale shopping area</p>
        </div>
        <div class="bg-white rounded-lg p-4 border border-gray-200">
          <p class="font-semibold text-[#333333]">Greystone</p>
          <p class="text-sm text-gray-600">Golf community</p>
