---
// Before/After Gallery Section
const galleryItems = [
  {
    title: "Kitchen Deep Clean",
    location: "Huntsville, AL",
    description: "Grease buildup removed, appliances cleaned inside and out, counters sanitized",
    beforeImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802a2965fae379c22fb0.webp",
    afterImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802a2965fae379c22fb0.webp"
  },
  {
    title: "Bathroom Transformation",
    location: "Madison, AL",
    description: "Hard water stains removed, grout scrubbed, fixtures polished to shine",
    beforeImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029f8fa3b30bb23e26e.webp",
    afterImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/69208029f8fa3b30bb23e26e.webp"
  },
  {
    title: "Move-Out Cleaning",
    location: "Nashville, TN",
    description: "Full apartment cleaned to landlord standards - deposit returned!",
    beforeImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802af8fa3bc14e23e27e.jpg",
    afterImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/6920802af8fa3bc14e23e27e.jpg"
  },
  {
    title: "Post-Construction",
    location: "Mountain Brook, AL",
    description: "Construction dust eliminated, windows cleaned, surfaces polished",
    beforeImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692080293937416b676d02dd.webp",
    afterImage: "https://res.cloudinary.com/dfjneoiaq/image/fetch/f_auto,q_auto/https://storage.googleapis.com/msgsndr/iKQIBhpKVL2XVPgU7HMd/media/692080293937416b676d02dd.webp"
  }
];
---

<section class="py-20 px-6 bg-gray-50">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
        See the Difference We Make
      </h2>
      <div class="section-divider"></div>
      <p class="text-xl text-gray-600">Real results from real cleaning jobs across Alabama & Tennessee</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {galleryItems.map((item, index) => (
        <div class="bg-white rounded-2xl overflow-hidden shadow-lg border border-gray-200 group">
          <div class="relative h-64 overflow-hidden">
            <!-- Before/After Slider Container -->
            <div class="before-after-container relative w-full h-full">
              <img
                src={item.afterImage}
                alt={`${item.title} - After`}
                class="absolute inset-0 w-full h-full object-cover"
                loading="lazy"
                decoding="async"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>

              <!-- Labels -->
              <div class="absolute top-4 left-4 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-bold">
                BEFORE
              </div>
              <div class="absolute top-4 right-4 bg-green-500 text-white px-3 py-1 rounded-full text-xs font-bold">
                AFTER
              </div>

              <!-- Transformation Badge -->
              <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 bg-white/90 backdrop-blur px-4 py-2 rounded-full">
                <span class="text-[#333333] font-semibold text-sm flex items-center">
                  <i class="fas fa-magic text-[#FFA985] mr-2"></i>
                  Transformed
                </span>
              </div>
            </div>
          </div>

          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl font-bold text-[#333333]">{item.title}</h3>
              <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">{item.location}</span>
            </div>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats Bar -->
    <div class="mt-16 bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-2xl p-8 max-w-4xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center text-white">
        <div>
          <p class="text-4xl font-bold">1,047+</p>
          <p class="text-white/80 text-sm">Homes Transformed</p>
        </div>
        <div>
          <p class="text-4xl font-bold">100%</p>
          <p class="text-white/80 text-sm">Satisfaction Rate</p>
        </div>
        <div>
          <p class="text-4xl font-bold">3+</p>
          <p class="text-white/80 text-sm">Years Experience</p>
        </div>
        <div>
          <p class="text-4xl font-bold">24hr</p>
          <p class="text-white/80 text-sm">Re-Clean Guarantee</p>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-4">Want results like these for your home?</p>
      <a href="/contact" class="btn-primary px-8 py-4 rounded-full text-lg font-semibold inline-block">
        <i class="fas fa-calendar-check mr-2"></i>Get Your Free Quote
      </a>
    </div>
  </div>
</section>
