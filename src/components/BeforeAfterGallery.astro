---
import Icon from './Icon.astro';

// Before/After Gallery Section
const galleryItems = [
  {
    title: "Kitchen Deep Clean",
    location: "Huntsville, AL",
    description: "Deep grease removal from stovetops and backsplashes, sanitized surfaces, and polished appliances.",
    image: "/images/gallery/kitchen.webp",
    type: "grid"
  },
  {
    title: "Bathroom Transformation",
    location: "Madison, AL",
    description: "Intensive soap scum removal, grout whitening, and chrome polishing for a hotel-fresh finish.",
    image: "/images/gallery/bathroom.webp",
    type: "split"
  },
  {
    title: "Move-Out Cleaning",
    location: "Nashville, TN",
    description: "Detailed restoration of floors, baseboards, and walls to ensure full security deposit return.",
    image: "/images/gallery/move_out.webp",
    type: "split"
  },
  {
    title: "Post-Construction",
    location: "Mountain Brook, AL",
    description: "Complete elimination of drywall dust, debris, and residue from new renovations.",
    image: "https://hkpostconstructioncleaning.ca/wp-content/uploads/2022/05/Cleaning-Services-Before-and-After-Photos-3.jpeg",
    type: "split"
  }
];
---

<section class="py-20 px-6 bg-gray-50">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
        See the Difference We Make
      </h2>
      <div class="section-divider"></div>
      <p class="text-xl text-gray-600">Real results from real cleaning jobs across Alabama & Tennessee</p>
    </div>

    <div class="grid md:grid-cols-2 gap-10 max-w-6xl mx-auto">
      {galleryItems.map((item, index) => (
        <div class="bg-white rounded-3xl overflow-hidden shadow-2xl border border-gray-100 group transition-all duration-500 hover:shadow-orange-100 hover:-translate-y-2">
          <div class="relative h-72 overflow-hidden">
            <!-- Transformation Image Container -->
            <div class="relative w-full h-full cursor-zoom-in">
              <img
                src={item.image}
                alt={`${item.title} Comparison`}
                width="800"
                height="600"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity"></div>

              <!-- Badges -->
              <div class="absolute top-4 left-4 flex gap-2">
                <span class="bg-black/40 backdrop-blur-md text-white px-3 py-1 rounded-full text-[10px] font-bold tracking-widest uppercase">
                  Before & After
                </span>
              </div>

              <!-- Transformation Badge -->
              <div class="absolute bottom-6 left-6 bg-white/95 backdrop-blur px-5 py-2.5 rounded-2xl shadow-xl transform transition-all duration-500 group-hover:bg-[#FFA985] group-hover:text-white">
                <span class="font-bold text-sm flex items-center">
                  <Icon name="magic" class="w-5 h-5 mr-3 transition-colors group-hover:text-white text-[#FFA985]" />
                  See the Transformation
                </span>
              </div>
            </div>
          </div>

          <div class="p-8">
            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="text-2xl font-bold text-[#333333] mb-1">{item.title}</h3>
                <div class="flex items-center text-gray-400 text-sm">
                  <Icon name="location-dot" class="w-3.5 h-3.5 mr-1.5" />
                  {item.location}
                </div>
              </div>
              <div class="h-10 w-10 bg-orange-50 rounded-full flex items-center justify-center text-[#FFA985]">
                <Icon name="check-circle" class="w-6 h-6" />
              </div>
            </div>
            <p class="text-gray-600 leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats Bar -->
    <div class="mt-16 bg-gradient-to-r from-[#FFA985] to-[#FFC67D] rounded-2xl p-8 max-w-4xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center text-white">
        <div>
          <p class="text-4xl font-bold">1,047+</p>
          <p class="text-white/80 text-sm">Homes Transformed</p>
        </div>
        <div>
          <p class="text-4xl font-bold">100%</p>
          <p class="text-white/80 text-sm">Satisfaction Rate</p>
        </div>
        <div>
          <p class="text-4xl font-bold">3+</p>
          <p class="text-white/80 text-sm">Years Experience</p>
        </div>
        <div>
          <p class="text-4xl font-bold">24hr</p>
          <p class="text-white/80 text-sm">Re-Clean Guarantee</p>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-4">Want results like these for your home?</p>
      <a href="/#hero-quote-form" class="btn-primary px-8 py-4 rounded-full text-lg font-semibold inline-block">
        <Icon name="calendar-check" class="w-5 h-5 mr-2" />Get Your Free Quote
      </a>
    </div>
  </div>
</section>
