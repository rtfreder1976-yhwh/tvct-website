---
import Icon from './Icon.astro';
// Review Platform Badges Section
---

<section class="py-12 px-6 bg-gradient-to-r from-gray-50 to-gray-100">
  <div class="container mx-auto">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-2 text-[#333333]">Trusted Across Multiple Platforms</h2>
      <p class="text-gray-600">See what customers are saying about The Valley Clean Team</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
      <!-- Google Reviews -->
      <a href="https://g.page/r/thevalleycleanteam/review" target="_blank" rel="noopener noreferrer" class="bg-white rounded-xl p-6 shadow-md border border-gray-200 hover:shadow-lg hover:border-[#FFA985] transition text-center group">
        <div class="w-12 h-12 mx-auto mb-3 flex items-center justify-center">
          <Icon name="google" class="w-10 h-10 text-[#4285F4] group-hover:scale-110 transition" />
        </div>
        <div class="flex justify-center text-yellow-400 text-sm mb-2">
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
        </div>
        <p class="font-bold text-[#333333]">5.0 Rating</p>
        <p class="text-sm text-gray-500">130+ Reviews</p>
        <p class="text-xs text-[#FFA985] mt-2">Google Business</p>
      </a>

      <!-- Facebook Reviews -->
      <a href="https://facebook.com/thevalleycleanteam" target="_blank" rel="noopener noreferrer" class="bg-white rounded-xl p-6 shadow-md border border-gray-200 hover:shadow-lg hover:border-[#FFA985] transition text-center group">
        <div class="w-12 h-12 mx-auto mb-3 flex items-center justify-center">
          <Icon name="facebook" class="w-10 h-10 text-[#1877F2] group-hover:scale-110 transition" />
        </div>
        <div class="flex justify-center text-yellow-400 text-sm mb-2">
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
        </div>
        <p class="font-bold text-[#333333]">5.0 Rating</p>
        <p class="text-sm text-gray-500">50+ Reviews</p>
        <p class="text-xs text-[#FFA985] mt-2">Facebook</p>
      </a>

      <!-- Yelp Reviews -->
      <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200 text-center">
        <div class="w-12 h-12 mx-auto mb-3 flex items-center justify-center">
          <Icon name="yelp" class="w-10 h-10 text-[#D32323]" />
        </div>
        <div class="flex justify-center text-yellow-400 text-sm mb-2">
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
        </div>
        <p class="font-bold text-[#333333]">5.0 Rating</p>
        <p class="text-sm text-gray-500">25+ Reviews</p>
        <p class="text-xs text-[#FFA985] mt-2">Yelp</p>
      </div>

      <!-- Thumbtack/HomeAdvisor -->
      <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200 text-center">
        <div class="w-12 h-12 mx-auto mb-3 flex items-center justify-center">
          <Icon name="home" class="w-10 h-10 text-[#FF6B35]" />
        </div>
        <div class="flex justify-center text-yellow-400 text-sm mb-2">
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
          <Icon name="star" class="w-4 h-4" fill="currentColor" />
        </div>
        <p class="font-bold text-[#333333]">5.0 Rating</p>
        <p class="text-sm text-gray-500">Top Pro</p>
        <p class="text-xs text-[#FFA985] mt-2">Thumbtack</p>
      </div>
    </div>

    <!-- Summary Stats -->
    <div class="mt-12 bg-white rounded-2xl p-8 shadow-lg max-w-3xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <p class="text-4xl font-bold text-[#FFA985]">200+</p>
          <p class="text-gray-600 text-sm">Total Reviews</p>
        </div>
        <div>
          <p class="text-4xl font-bold text-[#FFA985]">5.0</p>
          <p class="text-gray-600 text-sm">Average Rating</p>
        </div>
        <div>
          <p class="text-4xl font-bold text-[#FFA985]">100%</p>
          <p class="text-gray-600 text-sm">Would Recommend</p>
        </div>
        <div>
          <p class="text-4xl font-bold text-[#FFA985]">0</p>
          <p class="text-gray-600 text-sm">Complaints</p>
        </div>
      </div>
    </div>
  </div>
</section>
