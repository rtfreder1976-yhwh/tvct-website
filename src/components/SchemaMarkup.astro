---
interface Props {
  type?: 'organization' | 'local' | 'service';
  city?: string;
  state?: string;
  serviceName?: string;
  servicePrice?: string;
}

const { type = 'organization', city, state, serviceName, servicePrice } = Astro.props;

const baseSchema = {
  "@context": "https://schema.org",
