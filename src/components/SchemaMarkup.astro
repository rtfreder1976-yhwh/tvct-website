      "containedInPlace": { "@type": "State", "name": "Alabama" }
    },
    {
      "@type": "City",
      "name": "Muscle Shoals",
      "containedInPlace": { "@type": "State", "name": "Alabama" }
    },
    {
      "@type": "City",
      "name": "Florence",
      "containedInPlace": { "@type": "State", "name": "Alabama" }
    },
    {
      "@type": "City",
      "name": "Nashville",
      "containedInPlace": { "@type": "State", "name": "Tennessee" }
    }
  ],
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "08:00",
      "closes": "18:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Sunday",
      "opens": "00:00",
      "closes": "00:00",
      "description": "By appointment only"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "130",
    "bestRating": "5",
    "worstRating": "1"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Cleaning Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Deep Cleaning",
          "description": "Thorough top-to-bottom cleaning for homes"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Regular Cleaning",
          "description": "Weekly or bi-weekly maintenance cleaning"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Move In/Out Cleaning",
          "description": "Complete cleaning for relocating homes"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Commercial/Office Cleaning",
          "description": "Professional cleaning for businesses"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Airbnb/Vacation Rental Cleaning",
          "description": "Fast turnaround cleaning for short-term rentals"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Post-Construction Cleaning",
          "description": "Detailed cleaning after renovations"
        }
      }
    ]
  },
  "sameAs": [
    "https://www.facebook.com/thevalleycleanteam",
    "https://www.instagram.com/thevalleycleanteam"
  ]
};

const localSchema = city ? {
  ...baseSchema,
  "@type": "HouseCleaning",
  "name": `The Valley Clean Team - ${city}, ${state}`,
  "description": `Professional cleaning services in ${city}, ${state}. Veteran-owned, insured, bonded. Same-day service available.`,
  "areaServed": {
    "@type": "City",
    "name": city,
    "containedInPlace": { "@type": "State", "name": state }
  }
} : baseSchema;

// Service schema for specific service pages
const serviceSchema = serviceName ? {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": serviceName,
  "provider": {
    "@type": "LocalBusiness",
    "name": "The Valley Clean Team",
    "telephone": "+1-256-826-1100",
    "url": "https://thevalleycleanteam.com"
  },
  "areaServed": city ? {
    "@type": "City",
    "name": city,
    "containedInPlace": { "@type": "State", "name": state }
  } : baseSchema.areaServed,
  "offers": servicePrice ? {
    "@type": "Offer",
    "priceSpecification": {
      "@type": "PriceSpecification",
      "price": servicePrice.replace(/[^0-9]/g, ''),
      "priceCurrency": "USD"
    }
  } : undefined
} : null;

const schemaToUse = type === 'local' && city ? localSchema : baseSchema;
---

<script type="application/ld+json" set:html={JSON.stringify(schemaToUse)} />
{serviceSchema && <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />}
