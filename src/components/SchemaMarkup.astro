  "priceRange": "$$",
  "currenciesAccepted": "USD",
  "paymentAccepted": "Cash, Credit Card, Debit Card",
  "areaServed": [
    {
      "@type": "City",
      "name": "Birmingham",
      "containedInPlace": { "@type": "State", "name": "Alabama" }
    },
    {
      "@type": "City",
