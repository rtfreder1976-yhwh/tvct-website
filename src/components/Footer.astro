---
import Icon from "./Icon.astro";
---

<!-- Trust Credentials Bar -->
<section
  class="py-8 px-6 bg-gradient-to-r from-[#333333] to-[#444444] text-white"
>
  <div class="container mx-auto">
    <div
      class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-6 text-center text-sm"
    >
      <div>
        <Icon name="id-card" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">Licensed</p>
        <p class="text-gray-300 text-xs">AL Business License</p>
      </div>
      <div>
        <Icon name="shield-alt" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">$2M Insured</p>
        <p class="text-gray-300 text-xs">Liability Coverage</p>
      </div>
      <div>
        <Icon name="calendar-check" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">15+ Years</p>
        <p class="text-gray-300 text-xs">Cleaning Experience</p>
      </div>
      <div>
        <Icon name="certificate" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">Certified</p>
        <p class="text-gray-300 text-xs">Professional Cleaners</p>
      </div>
      <div>
        <Icon name="home" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">Family Owned</p>
        <p class="text-gray-300 text-xs">Veteran Operated</p>
      </div>
      <div>
        <Icon name="redo" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">100% Guarantee</p>
        <p class="text-gray-300 text-xs">Re-Clean Free</p>
      </div>
      <div>
        <Icon name="clock" class="w-5 h-5 text-[#FFA985] mb-2" />
        <p class="font-semibold">2-Hour Response</p>
        <p class="text-gray-300 text-xs">Quote Turnaround</p>
      </div>
    </div>
  </div>
</section>

<!-- Detailed Trust Information -->
<section class="py-10 px-6 bg-gray-100 border-t border-gray-200">
  <div class="container mx-auto">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Licensing & Insurance -->
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <h4 class="font-bold text-[#333333] mb-4 flex items-center">
          <Icon name="file-contract" class="w-5 h-5 text-[#FFA985] mr-2" />
          Licensing & Insurance
        </h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span>Alabama State Business License</span>
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span>Tennessee Business Registration</span>
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span>$2,000,000 General Liability Insurance</span>
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span>Workers' Compensation Coverage</span>
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span>Bonded for Client Protection</span>
          </li>
        </ul>
      </div>

      <!-- Our Guarantees -->
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <h4 class="font-bold text-[#333333] mb-4 flex items-center">
          <Icon name="shield-alt" class="w-5 h-5 text-[#FFA985] mr-2" />
          Our Service Guarantees
        </h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>100% Satisfaction Guarantee</strong> - Not happy? We re-clean
              free within 24 hours</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>On-Time Guarantee</strong> - We arrive within your scheduled
              window</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>Damage Protection</strong> - Full coverage for any accidental
              damage</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>Consistent Quality</strong> - Same high standards, every visit</span
            >
          </li>
        </ul>
      </div>

      <!-- About Our Team -->
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <h4 class="font-bold text-[#333333] mb-4 flex items-center">
          <Icon name="users" class="w-5 h-5 text-[#FFA985] mr-2" />
          About Our Team
        </h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>Family Owned & Operated</strong> with 15+ years cleaning experience</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>Veteran Owned</strong> - Military precision & values</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>Background Checked</strong> - Every team member vetted</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>Professionally Trained</strong> - Certified cleaning techniques</span
            >
          </li>
          <li class="flex items-start">
            <Icon name="check" class="w-4 h-4 text-green-500 mr-2 mt-1" />
            <span
              ><strong>1,047+ Cleanings</strong> completed with 130+ 5-star reviews</span
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Response Time Promise -->
    <div
      class="mt-8 bg-gradient-to-r from-[#FFA985]/10 to-[#FFC67D]/10 rounded-xl p-6 border border-[#FFA985]/20"
    >
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center">
          <Icon name="bolt" class="w-8 h-8 text-[#FFA985] mr-4" />
          <div>
            <h4 class="font-bold text-[#333333]">Our Response Time Promise</h4>
            <p class="text-gray-600 text-sm">
              All quote requests answered within 2 hours during business hours.
              Same-day service available for urgent needs.
            </p>
          </div>
        </div>
        <a
          href="tel:2568261100"
          class="btn-primary px-6 py-3 rounded-full font-semibold whitespace-nowrap inline-flex items-center"
        >
          <Icon name="phone" class="w-5 h-5 mr-2" />256-826-1100
        </a>
      </div>
    </div>
  </div>
</section>

