---

<section class="py-20 px-6 bg-white">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-[#333333]">
        What Our Customers Say
      </h2>
      <div class="section-divider"></div>
      <p class="text-xl text-gray-600">Real reviews from real customers across Alabama & Tennessee</p>
      <div class="flex items-center justify-center gap-2 mt-4">
        <div class="flex text-[#FFA985]">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
        </div>
        <span class="font-bold text-[#333333]">5.0</span>
        <span class="text-gray-600">average from 130+ reviews</span>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {testimonials.slice(0, 8).map((testimonial) => (
        <div class="bg-gray-50 rounded-2xl p-6 border border-gray-200 hover:shadow-lg transition">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#FFA985] to-[#FFC67D] flex items-center justify-center text-white font-bold text-lg">
              {testimonial.name.charAt(0)}
            </div>
            <div class="ml-3">
              <h4 class="font-bold text-[#333333]">{testimonial.name}</h4>
              <p class="text-xs text-gray-500">{testimonial.location}</p>
            </div>
          </div>
          <div class="flex text-[#FFA985] text-sm mb-3">
            {[...Array(testimonial.rating)].map(() => (
              <i class="fas fa-star"></i>
            ))}
          </div>
          <p class="text-gray-700 text-sm mb-4 line-clamp-4">"{testimonial.text}"</p>
          <div class="flex items-center justify-between text-xs text-gray-500">
            <span class="bg-[#FFA985]/10 text-[#FFA985] px-2 py-1 rounded-full">{testimonial.service}</span>
            <span>{testimonial.date}</span>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="https://g.page/r/thevalleycleanteam/review" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-[#FFA985] font-semibold hover:underline">
        <i class="fab fa-google mr-2"></i>
        Read More Reviews on Google
        <i class="fas fa-external-link-alt ml-2 text-sm"></i>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
